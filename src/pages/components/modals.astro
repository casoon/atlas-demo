---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Modals"
    description="Modal-Dialoge für Benutzerinteraktionen"
    currentSection="components"
    currentPage="/components/modals"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Modals</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Modals</h1>
        <p class="text-gray-400 text-lg">Overlay-Dialoge für wichtige Interaktionen und Informationen.</p>
    </div>

    <!-- Basic Modal Preview -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Modal</h2>
        <p class="text-gray-400 mb-6">Ein einfaches Modal mit Header, Content und Footer.</p>

        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <!-- Modal Preview (static) -->
            <div class="max-w-lg mx-auto">
                <div class="rounded-2xl bg-[#1a1a2e] border border-white/10 shadow-2xl overflow-hidden">
                    <!-- Header -->
                    <div class="flex items-center justify-between p-5 border-b border-white/10">
                        <h3 class="text-lg font-semibold text-white">Modal Title</h3>
                        <button class="p-1 hover:bg-white/10 rounded-lg transition-colors text-gray-400">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                    <!-- Body -->
                    <div class="p-5">
                        <p class="text-gray-400">
                            Dies ist der Inhalt des Modals. Hier können Sie beliebigen Content platzieren,
                            einschließlich Formulare, Bilder oder andere Komponenten.
                        </p>
                    </div>
                    <!-- Footer -->
                    <div class="flex items-center justify-end gap-3 p-5 border-t border-white/10">
                        <button class="px-4 py-2 rounded-lg bg-white/5 text-white hover:bg-white/10 transition-colors">
                            Abbrechen
                        </button>
                        <button class="px-4 py-2 rounded-lg bg-violet-500 text-white hover:bg-violet-600 transition-colors">
                            Bestätigen
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-gray-500">&lt;!-- Backdrop --&gt;</span>
<span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"fixed inset-0 bg-black/50 backdrop-blur-sm"</span><span class="text-pink-400">&gt;&lt;/div&gt;</span>

<span class="text-gray-500">&lt;!-- Modal --&gt;</span>
<span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"fixed inset-0 flex items-center justify-center p-4"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"max-w-lg w-full rounded-2xl bg-[#1a1a2e]
    border border-white/10 shadow-2xl"</span><span class="text-pink-400">&gt;</span>
    <span class="text-gray-500">&lt;!-- Header, Body, Footer --&gt;</span>
  <span class="text-pink-400">&lt;/div&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Sizes -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Größen</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-3">
                <span class="px-3 py-1.5 rounded-lg bg-white/5 text-gray-400 text-sm">max-w-sm (Small)</span>
                <span class="px-3 py-1.5 rounded-lg bg-violet-500/20 text-violet-400 text-sm">max-w-lg (Default)</span>
                <span class="px-3 py-1.5 rounded-lg bg-white/5 text-gray-400 text-sm">max-w-2xl (Large)</span>
                <span class="px-3 py-1.5 rounded-lg bg-white/5 text-gray-400 text-sm">max-w-4xl (XL)</span>
                <span class="px-3 py-1.5 rounded-lg bg-white/5 text-gray-400 text-sm">max-w-full (Full)</span>
            </div>
        </div>
    </section>

    <!-- Confirmation Modal -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Bestätigungs-Dialog</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-sm mx-auto">
                <div class="rounded-2xl bg-[#1a1a2e] border border-white/10 shadow-2xl p-6 text-center">
                    <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-red-500/20 flex items-center justify-center">
                        <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-white mb-2">Löschen bestätigen</h3>
                    <p class="text-gray-400 text-sm mb-6">
                        Sind Sie sicher, dass Sie diesen Eintrag löschen möchten? Diese Aktion kann nicht rückgängig gemacht werden.
                    </p>
                    <div class="flex gap-3">
                        <button class="flex-1 px-4 py-2 rounded-lg bg-white/5 text-white hover:bg-white/10 transition-colors">
                            Abbrechen
                        </button>
                        <button class="flex-1 px-4 py-2 rounded-lg bg-red-500 text-white hover:bg-red-600 transition-colors">
                            Löschen
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Glass Modal -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Glass Modal</h2>
        <div class="mb-4 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <div class="max-w-lg mx-auto">
                <div class="cs-glass-card rounded-2xl border border-white/20 shadow-2xl overflow-hidden">
                    <div class="flex items-center justify-between p-5 border-b border-white/10">
                        <h3 class="text-lg font-semibold text-white">Glass Modal</h3>
                        <button class="p-1 hover:bg-white/10 rounded-lg transition-colors text-gray-400">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                    <div class="p-5">
                        <p class="text-gray-300">Ein Modal mit Glassmorphism-Effekt für moderne UIs.</p>
                    </div>
                    <div class="flex items-center justify-end gap-3 p-5 border-t border-white/10">
                        <button class="cs-glass-button px-4 py-2 rounded-lg text-white">Schließen</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- With Alpine.js -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Alpine.js</h2>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML + Alpine.js</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300" set:html={`<span class="text-pink-400">&lt;div</span> <span class="text-violet-400">x-data</span>=<span class="text-emerald-400">"{ open: false }"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;button</span> <span class="text-violet-400">@click</span>=<span class="text-emerald-400">"open = true"</span><span class="text-pink-400">&gt;</span>Modal öffnen<span class="text-pink-400">&lt;/button&gt;</span>

  <span class="text-gray-500">&lt;!-- Modal --&gt;</span>
  <span class="text-pink-400">&lt;div</span> <span class="text-violet-400">x-show</span>=<span class="text-emerald-400">"open"</span>
       <span class="text-violet-400">x-transition</span>
       <span class="text-violet-400">class</span>=<span class="text-emerald-400">"fixed inset-0 z-50"</span><span class="text-pink-400">&gt;</span>
    <span class="text-gray-500">&lt;!-- Backdrop --&gt;</span>
    <span class="text-pink-400">&lt;div</span> <span class="text-violet-400">@click</span>=<span class="text-emerald-400">"open = false"</span>
         <span class="text-violet-400">class</span>=<span class="text-emerald-400">"fixed inset-0 bg-black/50"</span><span class="text-pink-400">&gt;&lt;/div&gt;</span>
    <span class="text-gray-500">&lt;!-- Content --&gt;</span>
    <span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"relative ..."</span><span class="text-pink-400">&gt;</span>...<span class="text-pink-400">&lt;/div&gt;</span>
  <span class="text-pink-400">&lt;/div&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span>`}></code></pre>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/popover" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Popover</span>
        </a>
        <a href="/components/drawer" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Drawer</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
