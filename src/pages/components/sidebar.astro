---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Sidebar"
    description="Seitenleisten für Navigation"
    currentSection="components"
    currentPage="/components/sidebar"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Sidebar</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Sidebar</h1>
        <p class="text-gray-400 text-lg">Seitenleisten für die Navigation und zusätzliche Inhalte.</p>
    </div>

    <!-- Basic Sidebar -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Sidebar</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <div class="flex">
                <aside class="w-64 bg-[#1a1a2e] border-r border-white/10 p-4">
                    <div class="mb-6">
                        <h3 class="text-lg font-bold text-white">Logo</h3>
                    </div>
                    <nav class="space-y-1">
                        <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg bg-violet-500/20 text-violet-400">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>
                            Dashboard
                        </a>
                        <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                            Benutzer
                        </a>
                        <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>
                            Statistiken
                        </a>
                        <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                            Einstellungen
                        </a>
                    </nav>
                </aside>
                <div class="flex-1 p-6 bg-[#0f0f1a]">
                    <p class="text-gray-400">Hauptinhalt...</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;aside</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"w-64 bg-[#1a1a2e] border-r
  border-white/10 p-4"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;nav</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"space-y-1"</span><span class="text-pink-400">&gt;</span>
    <span class="text-pink-400">&lt;a</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"flex items-center gap-3 px-3 py-2
      rounded-lg bg-violet-500/20 text-violet-400"</span><span class="text-pink-400">&gt;</span>
      <span class="text-gray-500">&lt;!-- Icon --&gt;</span> Dashboard
    <span class="text-pink-400">&lt;/a&gt;</span>
  <span class="text-pink-400">&lt;/nav&gt;</span>
<span class="text-pink-400">&lt;/aside&gt;</span></code></pre>
        </div>
    </section>

    <!-- With Sections -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Sektionen</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <aside class="w-64 bg-[#1a1a2e] p-4">
                <div class="mb-6">
                    <h3 class="text-lg font-bold text-white">App</h3>
                </div>
                <div class="space-y-6">
                    <div>
                        <h4 class="px-3 mb-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">Hauptmenü</h4>
                        <nav class="space-y-1">
                            <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg bg-violet-500/20 text-violet-400">Dashboard</a>
                            <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors">Projekte</a>
                            <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors">Aufgaben</a>
                        </nav>
                    </div>
                    <div>
                        <h4 class="px-3 mb-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">Verwaltung</h4>
                        <nav class="space-y-1">
                            <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors">Team</a>
                            <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors">Einstellungen</a>
                        </nav>
                    </div>
                </div>
            </aside>
        </div>
    </section>

    <!-- Collapsible -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Untermenüs</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <aside class="w-64 bg-[#1a1a2e] p-4">
                <nav class="space-y-1">
                    <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg bg-violet-500/20 text-violet-400">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>
                        Dashboard
                    </a>
                    <div>
                        <button class="w-full flex items-center justify-between gap-3 px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors">
                            <span class="flex items-center gap-3">
                                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" /></svg>
                                Projekte
                            </span>
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                        </button>
                        <div class="mt-1 ml-4 pl-4 border-l border-white/10 space-y-1">
                            <a href="#" class="block px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors text-sm">Alle Projekte</a>
                            <a href="#" class="block px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors text-sm">Aktiv</a>
                            <a href="#" class="block px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors text-sm">Archiviert</a>
                        </div>
                    </div>
                    <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" /></svg>
                        Aufgaben
                    </a>
                </nav>
            </aside>
        </div>
    </section>

    <!-- With User Profile -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Benutzerprofil</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <aside class="w-64 bg-[#1a1a2e] flex flex-col h-80">
                <div class="p-4 border-b border-white/10">
                    <h3 class="text-lg font-bold text-white">Logo</h3>
                </div>
                <nav class="flex-1 p-4 space-y-1 overflow-y-auto">
                    <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg bg-violet-500/20 text-violet-400">Dashboard</a>
                    <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors">Projekte</a>
                    <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-400 hover:bg-white/5 hover:text-white transition-colors">Einstellungen</a>
                </nav>
                <div class="p-4 border-t border-white/10">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-violet-500 flex items-center justify-center text-white font-semibold">JD</div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium text-white truncate">John Doe</p>
                            <p class="text-xs text-gray-400 truncate">john@example.com</p>
                        </div>
                        <button class="p-1.5 rounded-lg hover:bg-white/10 text-gray-400 transition-colors">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
                        </button>
                    </div>
                </div>
            </aside>
        </div>
    </section>

    <!-- Mini Sidebar -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mini Sidebar</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <div class="flex">
                <aside class="w-16 bg-[#1a1a2e] border-r border-white/10 py-4 flex flex-col items-center">
                    <div class="mb-6">
                        <div class="w-10 h-10 rounded-xl bg-violet-500 flex items-center justify-center text-white font-bold">A</div>
                    </div>
                    <nav class="space-y-2">
                        <a href="#" class="p-3 rounded-xl bg-violet-500/20 text-violet-400 block" title="Dashboard">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>
                        </a>
                        <a href="#" class="p-3 rounded-xl text-gray-400 hover:bg-white/5 hover:text-white block transition-colors" title="Benutzer">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                        </a>
                        <a href="#" class="p-3 rounded-xl text-gray-400 hover:bg-white/5 hover:text-white block transition-colors" title="Statistiken">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>
                        </a>
                        <a href="#" class="p-3 rounded-xl text-gray-400 hover:bg-white/5 hover:text-white block transition-colors" title="Einstellungen">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        </a>
                    </nav>
                </aside>
                <div class="flex-1 p-6 bg-[#0f0f1a]">
                    <p class="text-gray-400">Hauptinhalt...</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Glass Style -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Glass Style</h2>
        <div class="mb-4 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10 overflow-hidden p-6">
            <aside class="w-64 rounded-xl cs-glass-card border border-white/20 p-4">
                <div class="mb-6">
                    <h3 class="text-lg font-bold text-white">Logo</h3>
                </div>
                <nav class="space-y-1">
                    <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg bg-white/20 text-white">Dashboard</a>
                    <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-white/70 hover:bg-white/10 hover:text-white transition-colors">Projekte</a>
                    <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-white/70 hover:bg-white/10 hover:text-white transition-colors">Aufgaben</a>
                    <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-white/70 hover:bg-white/10 hover:text-white transition-colors">Einstellungen</a>
                </nav>
            </aside>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/navbar" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Navbar</span>
        </a>
        <a href="/components/breadcrumb" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Breadcrumb</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
