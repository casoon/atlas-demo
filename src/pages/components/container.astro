---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Container"
    description="Layout-Container für Inhalte"
    currentSection="components"
    currentPage="/components/container"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Container</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Container</h1>
        <p class="text-gray-400 text-lg">Layout-Container zur Zentrierung und Begrenzung von Inhalten.</p>
    </div>

    <!-- Basic Container -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Container</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <div class="bg-violet-500/10 p-4">
                <div class="max-w-4xl mx-auto px-4 bg-violet-500/20 py-8 rounded-xl border border-violet-500/30">
                    <p class="text-center text-white">Container mit max-width und automatischer Zentrierung</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"max-w-4xl mx-auto px-4"</span><span class="text-pink-400">&gt;</span>
  <span class="text-gray-500">&lt;!-- Inhalt --&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Container Sizes -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Container-Größen</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden p-4 space-y-4">
            <div class="bg-violet-500/10 rounded-lg">
                <div class="max-w-sm mx-auto px-4 py-4 bg-violet-500/20 rounded-lg border border-violet-500/30">
                    <p class="text-center text-sm text-white">max-w-sm (384px)</p>
                </div>
            </div>
            <div class="bg-violet-500/10 rounded-lg">
                <div class="max-w-md mx-auto px-4 py-4 bg-violet-500/20 rounded-lg border border-violet-500/30">
                    <p class="text-center text-sm text-white">max-w-md (448px)</p>
                </div>
            </div>
            <div class="bg-violet-500/10 rounded-lg">
                <div class="max-w-lg mx-auto px-4 py-4 bg-violet-500/20 rounded-lg border border-violet-500/30">
                    <p class="text-center text-sm text-white">max-w-lg (512px)</p>
                </div>
            </div>
            <div class="bg-violet-500/10 rounded-lg">
                <div class="max-w-xl mx-auto px-4 py-4 bg-violet-500/20 rounded-lg border border-violet-500/30">
                    <p class="text-center text-sm text-white">max-w-xl (576px)</p>
                </div>
            </div>
            <div class="bg-violet-500/10 rounded-lg">
                <div class="max-w-2xl mx-auto px-4 py-4 bg-violet-500/20 rounded-lg border border-violet-500/30">
                    <p class="text-center text-sm text-white">max-w-2xl (672px)</p>
                </div>
            </div>
            <div class="bg-violet-500/10 rounded-lg">
                <div class="max-w-4xl mx-auto px-4 py-4 bg-violet-500/20 rounded-lg border border-violet-500/30">
                    <p class="text-center text-sm text-white">max-w-4xl (896px)</p>
                </div>
            </div>
            <div class="bg-violet-500/10 rounded-lg">
                <div class="max-w-6xl mx-auto px-4 py-4 bg-violet-500/20 rounded-lg border border-violet-500/30">
                    <p class="text-center text-sm text-white">max-w-6xl (1152px)</p>
                </div>
            </div>
        </div>
    </section>

    <!-- With Padding -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Responsive Padding</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <div class="bg-violet-500/10 p-2">
                <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 bg-violet-500/20 py-8 rounded-xl border border-violet-500/30">
                    <p class="text-center text-white text-sm">Responsive Padding: px-4 sm:px-6 lg:px-8</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"max-w-4xl mx-auto px-4 sm:px-6 lg:px-8"</span><span class="text-pink-400">&gt;</span>
  <span class="text-gray-500">&lt;!-- Inhalt --&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Full Width with Max Content -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Volle Breite mit Max-Content</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <div class="bg-gradient-to-r from-violet-500/20 to-fuchsia-500/20 py-8">
                <div class="max-w-7xl mx-auto px-4">
                    <div class="bg-[#1a1a2e] rounded-xl p-6 border border-white/10">
                        <p class="text-center text-white">Content im zentrierten Container</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Prose Container -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Prose Container</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-prose mx-auto">
                <h3 class="text-xl font-bold text-white mb-4">Optimale Lesebreite</h3>
                <p class="text-gray-400 mb-4">
                    Der max-w-prose Container ist ideal für Textinhalte optimiert. Mit einer Breite von 65 Zeichen bietet er die optimale Lesbarkeit für längere Texte und Artikel.
                </p>
                <p class="text-gray-400">
                    Diese Breite sorgt dafür, dass der Leser die Zeile nicht verliert und ermöglicht ein angenehmes Leseerlebnis ohne zu lange Augenbewegungen.
                </p>
            </div>
        </div>
    </section>

    <!-- Nested Containers -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Verschachtelte Container</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden p-4">
            <div class="max-w-6xl mx-auto bg-violet-500/10 rounded-xl p-4">
                <p class="text-xs text-gray-400 mb-4">Äußerer Container (max-w-6xl)</p>
                <div class="max-w-4xl mx-auto bg-violet-500/20 rounded-xl p-4">
                    <p class="text-xs text-gray-400 mb-4">Mittlerer Container (max-w-4xl)</p>
                    <div class="max-w-xl mx-auto bg-violet-500/30 rounded-xl p-4">
                        <p class="text-center text-sm text-white">Innerer Container (max-w-xl)</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Fluid Container -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Fluid Container</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <div class="w-full px-4 sm:px-6 lg:px-8 py-8 bg-violet-500/10">
                <div class="bg-violet-500/20 rounded-xl p-6 border border-violet-500/30">
                    <p class="text-center text-white">Fluid Container - passt sich der vollen Breite an</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"w-full px-4 sm:px-6 lg:px-8"</span><span class="text-pink-400">&gt;</span>
  <span class="text-gray-500">&lt;!-- Fluid Inhalt --&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/stats" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Stats</span>
        </a>
        <a href="/components/grid" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Grid</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
