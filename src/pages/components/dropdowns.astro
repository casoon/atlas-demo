---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Dropdowns"
    description="Dropdown-Menüs für Aktionen und Navigation"
    currentSection="components"
    currentPage="/components/dropdowns"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Dropdowns</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Dropdowns</h1>
        <p class="text-gray-400 text-lg">Dropdown-Menüs für Aktionen und Auswahlmöglichkeiten.</p>
    </div>

    <!-- Basic Dropdown -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Dropdown</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="relative inline-block">
                <button class="flex items-center gap-2 px-4 py-2 rounded-xl bg-white/5 border border-white/10 text-white hover:bg-white/10 transition-colors">
                    Optionen
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                </button>
                <!-- Dropdown Menu (visible for demo) -->
                <div class="absolute top-full left-0 mt-2 w-48 rounded-xl bg-[#1a1a2e] border border-white/10 shadow-xl overflow-hidden">
                    <a href="#" class="block px-4 py-2.5 text-white hover:bg-white/5 transition-colors">Bearbeiten</a>
                    <a href="#" class="block px-4 py-2.5 text-white hover:bg-white/5 transition-colors">Duplizieren</a>
                    <a href="#" class="block px-4 py-2.5 text-white hover:bg-white/5 transition-colors">Archivieren</a>
                    <hr class="border-white/10 my-1" />
                    <a href="#" class="block px-4 py-2.5 text-red-400 hover:bg-red-500/10 transition-colors">Löschen</a>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"relative"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"flex items-center gap-2 px-4 py-2
    rounded-xl bg-white/5 border border-white/10"</span><span class="text-pink-400">&gt;</span>
    Optionen
    <span class="text-pink-400">&lt;svg&gt;</span>...<span class="text-pink-400">&lt;/svg&gt;</span>
  <span class="text-pink-400">&lt;/button&gt;</span>
  <span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"absolute top-full mt-2 w-48
    rounded-xl bg-[#1a1a2e] border border-white/10"</span><span class="text-pink-400">&gt;</span>
    <span class="text-pink-400">&lt;a</span> <span class="text-violet-400">href</span>=<span class="text-emerald-400">"#"</span><span class="text-pink-400">&gt;</span>Item<span class="text-pink-400">&lt;/a&gt;</span>
  <span class="text-pink-400">&lt;/div&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- With Icons -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Icons</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="relative inline-block">
                <button class="flex items-center gap-2 px-4 py-2 rounded-xl bg-violet-500 text-white hover:bg-violet-600 transition-colors">
                    Aktionen
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                </button>
                <div class="absolute top-full left-0 mt-2 w-56 rounded-xl bg-[#1a1a2e] border border-white/10 shadow-xl overflow-hidden">
                    <a href="#" class="flex items-center gap-3 px-4 py-2.5 text-white hover:bg-white/5 transition-colors">
                        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                        Bearbeiten
                    </a>
                    <a href="#" class="flex items-center gap-3 px-4 py-2.5 text-white hover:bg-white/5 transition-colors">
                        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>
                        Duplizieren
                    </a>
                    <a href="#" class="flex items-center gap-3 px-4 py-2.5 text-white hover:bg-white/5 transition-colors">
                        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" /></svg>
                        Archivieren
                    </a>
                    <hr class="border-white/10 my-1" />
                    <a href="#" class="flex items-center gap-3 px-4 py-2.5 text-red-400 hover:bg-red-500/10 transition-colors">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                        Löschen
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- With Header -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Header</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="w-56 rounded-xl bg-[#1a1a2e] border border-white/10 shadow-xl overflow-hidden">
                <div class="px-4 py-3 border-b border-white/10">
                    <p class="text-xs text-gray-400 uppercase tracking-wider">Sortieren nach</p>
                </div>
                <div class="py-1">
                    <a href="#" class="flex items-center justify-between px-4 py-2.5 text-white hover:bg-white/5 transition-colors">
                        Name
                        <svg class="w-4 h-4 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    </a>
                    <a href="#" class="block px-4 py-2.5 text-gray-400 hover:bg-white/5 hover:text-white transition-colors">Datum</a>
                    <a href="#" class="block px-4 py-2.5 text-gray-400 hover:bg-white/5 hover:text-white transition-colors">Größe</a>
                    <a href="#" class="block px-4 py-2.5 text-gray-400 hover:bg-white/5 hover:text-white transition-colors">Typ</a>
                </div>
            </div>
        </div>
    </section>

    <!-- User Menu -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Benutzer-Menü</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="w-64 rounded-xl bg-[#1a1a2e] border border-white/10 shadow-xl overflow-hidden">
                <div class="p-4 border-b border-white/10">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-violet-500 flex items-center justify-center text-white font-semibold">JD</div>
                        <div>
                            <p class="text-white font-medium">John Doe</p>
                            <p class="text-sm text-gray-400">john@example.com</p>
                        </div>
                    </div>
                </div>
                <div class="py-1">
                    <a href="#" class="flex items-center gap-3 px-4 py-2.5 text-white hover:bg-white/5 transition-colors">
                        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                        Profil
                    </a>
                    <a href="#" class="flex items-center gap-3 px-4 py-2.5 text-white hover:bg-white/5 transition-colors">
                        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        Einstellungen
                    </a>
                </div>
                <hr class="border-white/10" />
                <div class="py-1">
                    <a href="#" class="flex items-center gap-3 px-4 py-2.5 text-red-400 hover:bg-red-500/10 transition-colors">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
                        Abmelden
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Nested Dropdown -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Verschachtelt</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex gap-2">
                <div class="w-48 rounded-xl bg-[#1a1a2e] border border-white/10 shadow-xl overflow-hidden">
                    <a href="#" class="block px-4 py-2.5 text-white hover:bg-white/5 transition-colors">Neu</a>
                    <a href="#" class="block px-4 py-2.5 text-white hover:bg-white/5 transition-colors">Öffnen</a>
                    <a href="#" class="flex items-center justify-between px-4 py-2.5 text-white bg-white/5">
                        Exportieren
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                    </a>
                    <a href="#" class="block px-4 py-2.5 text-white hover:bg-white/5 transition-colors">Drucken</a>
                </div>
                <div class="w-40 rounded-xl bg-[#1a1a2e] border border-white/10 shadow-xl overflow-hidden">
                    <a href="#" class="block px-4 py-2.5 text-white hover:bg-white/5 transition-colors">PDF</a>
                    <a href="#" class="block px-4 py-2.5 text-white hover:bg-white/5 transition-colors">CSV</a>
                    <a href="#" class="block px-4 py-2.5 text-white hover:bg-white/5 transition-colors">JSON</a>
                </div>
            </div>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/button-groups" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Button Groups</span>
        </a>
        <a href="/components/cards" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Cards</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
