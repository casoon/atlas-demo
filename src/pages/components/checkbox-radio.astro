---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Checkbox & Radio"
    description="Auswahl-Komponenten für Formulare"
    currentSection="components"
    currentPage="/components/checkbox-radio"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Checkbox & Radio</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Checkbox & Radio</h1>
        <p class="text-gray-400 text-lg">Auswahl-Elemente für Formulare und Einstellungen.</p>
    </div>

    <!-- Basic Checkbox -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Checkbox</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="space-y-3">
                <label class="flex items-center gap-3 cursor-pointer">
                    <input type="checkbox" checked class="w-5 h-5 rounded bg-white/5 border-white/20 text-violet-500 focus:ring-violet-500 focus:ring-offset-0 cursor-pointer" />
                    <span class="text-white">Option aktiviert</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                    <input type="checkbox" class="w-5 h-5 rounded bg-white/5 border-white/20 text-violet-500 focus:ring-violet-500 focus:ring-offset-0 cursor-pointer" />
                    <span class="text-white">Option nicht aktiviert</span>
                </label>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;label</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"flex items-center gap-3 cursor-pointer"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;input</span> <span class="text-violet-400">type</span>=<span class="text-emerald-400">"checkbox"</span>
    <span class="text-violet-400">class</span>=<span class="text-emerald-400">"w-5 h-5 rounded bg-white/5
    border-white/20 text-violet-500"</span> <span class="text-pink-400">/&gt;</span>
  <span class="text-pink-400">&lt;span</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"text-white"</span><span class="text-pink-400">&gt;</span>Label<span class="text-pink-400">&lt;/span&gt;</span>
<span class="text-pink-400">&lt;/label&gt;</span></code></pre>
        </div>
    </section>

    <!-- Custom Checkbox -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Custom Checkbox</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="space-y-3">
                <label class="flex items-center gap-3 cursor-pointer group">
                    <div class="relative">
                        <div class="w-6 h-6 rounded-lg bg-violet-500 flex items-center justify-center">
                            <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /></svg>
                        </div>
                    </div>
                    <span class="text-white group-hover:text-violet-400 transition-colors">Ausgewählt</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <div class="w-6 h-6 rounded-lg bg-white/5 border-2 border-white/20 group-hover:border-violet-500 transition-colors"></div>
                    <span class="text-gray-400 group-hover:text-white transition-colors">Nicht ausgewählt</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <div class="relative">
                        <div class="w-6 h-6 rounded-lg bg-violet-500/50 flex items-center justify-center">
                            <div class="w-2 h-2 rounded-sm bg-white"></div>
                        </div>
                    </div>
                    <span class="text-white">Indeterminate</span>
                </label>
            </div>
        </div>
    </section>

    <!-- Basic Radio -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Radio</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="space-y-3">
                <label class="flex items-center gap-3 cursor-pointer">
                    <input type="radio" name="basic-radio" checked class="w-5 h-5 bg-white/5 border-white/20 text-violet-500 focus:ring-violet-500 focus:ring-offset-0 cursor-pointer" />
                    <span class="text-white">Option 1</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                    <input type="radio" name="basic-radio" class="w-5 h-5 bg-white/5 border-white/20 text-violet-500 focus:ring-violet-500 focus:ring-offset-0 cursor-pointer" />
                    <span class="text-white">Option 2</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                    <input type="radio" name="basic-radio" class="w-5 h-5 bg-white/5 border-white/20 text-violet-500 focus:ring-violet-500 focus:ring-offset-0 cursor-pointer" />
                    <span class="text-white">Option 3</span>
                </label>
            </div>
        </div>
    </section>

    <!-- Custom Radio -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Custom Radio</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="space-y-3">
                <label class="flex items-center gap-3 cursor-pointer group">
                    <div class="w-6 h-6 rounded-full bg-white/5 border-2 border-violet-500 flex items-center justify-center">
                        <div class="w-3 h-3 rounded-full bg-violet-500"></div>
                    </div>
                    <span class="text-white">Ausgewählt</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <div class="w-6 h-6 rounded-full bg-white/5 border-2 border-white/20 group-hover:border-violet-500 transition-colors"></div>
                    <span class="text-gray-400 group-hover:text-white transition-colors">Nicht ausgewählt</span>
                </label>
            </div>
        </div>
    </section>

    <!-- Card Selection -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Card Selection</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-2xl">
                <label class="relative cursor-pointer">
                    <input type="radio" name="plan" class="sr-only peer" checked />
                    <div class="p-4 rounded-xl bg-white/5 border-2 border-violet-500 peer-checked:bg-violet-500/10">
                        <div class="flex items-center justify-between mb-2">
                            <span class="font-semibold text-white">Starter</span>
                            <div class="w-5 h-5 rounded-full bg-violet-500 flex items-center justify-center">
                                <svg class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /></svg>
                            </div>
                        </div>
                        <p class="text-sm text-gray-400">9€/Monat</p>
                    </div>
                </label>
                <label class="relative cursor-pointer">
                    <input type="radio" name="plan" class="sr-only peer" />
                    <div class="p-4 rounded-xl bg-white/5 border-2 border-white/10 hover:border-violet-500/50 peer-checked:border-violet-500 peer-checked:bg-violet-500/10 transition-all">
                        <div class="flex items-center justify-between mb-2">
                            <span class="font-semibold text-white">Pro</span>
                            <div class="w-5 h-5 rounded-full border-2 border-white/20 peer-checked:hidden"></div>
                        </div>
                        <p class="text-sm text-gray-400">19€/Monat</p>
                    </div>
                </label>
                <label class="relative cursor-pointer">
                    <input type="radio" name="plan" class="sr-only peer" />
                    <div class="p-4 rounded-xl bg-white/5 border-2 border-white/10 hover:border-violet-500/50 peer-checked:border-violet-500 peer-checked:bg-violet-500/10 transition-all">
                        <div class="flex items-center justify-between mb-2">
                            <span class="font-semibold text-white">Enterprise</span>
                            <div class="w-5 h-5 rounded-full border-2 border-white/20"></div>
                        </div>
                        <p class="text-sm text-gray-400">49€/Monat</p>
                    </div>
                </label>
            </div>
        </div>
    </section>

    <!-- Checkbox Group -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Checkbox Gruppe</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md">
                <p class="text-white font-medium mb-3">Benachrichtigungen</p>
                <div class="space-y-3 pl-1">
                    <label class="flex items-start gap-3 cursor-pointer">
                        <input type="checkbox" checked class="mt-1 w-5 h-5 rounded bg-white/5 border-white/20 text-violet-500 focus:ring-violet-500 focus:ring-offset-0 cursor-pointer" />
                        <div>
                            <span class="text-white block">E-Mail Benachrichtigungen</span>
                            <span class="text-sm text-gray-400">Erhalten Sie Updates per E-Mail</span>
                        </div>
                    </label>
                    <label class="flex items-start gap-3 cursor-pointer">
                        <input type="checkbox" checked class="mt-1 w-5 h-5 rounded bg-white/5 border-white/20 text-violet-500 focus:ring-violet-500 focus:ring-offset-0 cursor-pointer" />
                        <div>
                            <span class="text-white block">Push Benachrichtigungen</span>
                            <span class="text-sm text-gray-400">Erhalten Sie Push-Nachrichten</span>
                        </div>
                    </label>
                    <label class="flex items-start gap-3 cursor-pointer">
                        <input type="checkbox" class="mt-1 w-5 h-5 rounded bg-white/5 border-white/20 text-violet-500 focus:ring-violet-500 focus:ring-offset-0 cursor-pointer" />
                        <div>
                            <span class="text-white block">SMS Benachrichtigungen</span>
                            <span class="text-sm text-gray-400">Erhalten Sie SMS-Nachrichten</span>
                        </div>
                    </label>
                </div>
            </div>
        </div>
    </section>

    <!-- Colors -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Farbvarianten</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-6">
                <label class="flex items-center gap-2 cursor-pointer">
                    <div class="w-6 h-6 rounded-lg bg-violet-500 flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /></svg>
                    </div>
                    <span class="text-gray-400">Violet</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                    <div class="w-6 h-6 rounded-lg bg-emerald-500 flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /></svg>
                    </div>
                    <span class="text-gray-400">Emerald</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                    <div class="w-6 h-6 rounded-lg bg-cyan-500 flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /></svg>
                    </div>
                    <span class="text-gray-400">Cyan</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                    <div class="w-6 h-6 rounded-lg bg-amber-500 flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /></svg>
                    </div>
                    <span class="text-gray-400">Amber</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                    <div class="w-6 h-6 rounded-lg bg-red-500 flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /></svg>
                    </div>
                    <span class="text-gray-400">Red</span>
                </label>
            </div>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/select" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Select</span>
        </a>
        <a href="/components/toggle" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Toggle</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
