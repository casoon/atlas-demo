---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Grid"
    description="CSS Grid Layout System"
    currentSection="components"
    currentPage="/components/grid"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Grid</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Grid</h1>
        <p class="text-gray-400 text-lg">Flexibles Grid-System für komplexe Layouts.</p>
    </div>

    <!-- Basic Grid -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Grid</h2>
        <div class="mb-4 p-6 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-3 gap-4">
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">1</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">2</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">3</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">4</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">5</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">6</div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"grid grid-cols-3 gap-4"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;div&gt;</span>1<span class="text-pink-400">&lt;/div&gt;</span>
  <span class="text-pink-400">&lt;div&gt;</span>2<span class="text-pink-400">&lt;/div&gt;</span>
  <span class="text-pink-400">&lt;div&gt;</span>3<span class="text-pink-400">&lt;/div&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Column Variations -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Spalten-Varianten</h2>
        <div class="mb-4 p-6 rounded-xl bg-white/5 border border-white/10 space-y-6">
            <div>
                <p class="text-xs text-gray-400 mb-2">2 Spalten</p>
                <div class="grid grid-cols-2 gap-4">
                    <div class="p-4 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">1</div>
                    <div class="p-4 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">2</div>
                </div>
            </div>
            <div>
                <p class="text-xs text-gray-400 mb-2">4 Spalten</p>
                <div class="grid grid-cols-4 gap-4">
                    <div class="p-4 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">1</div>
                    <div class="p-4 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">2</div>
                    <div class="p-4 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">3</div>
                    <div class="p-4 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">4</div>
                </div>
            </div>
            <div>
                <p class="text-xs text-gray-400 mb-2">6 Spalten</p>
                <div class="grid grid-cols-6 gap-4">
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">1</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">2</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">3</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">4</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">5</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">6</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Responsive Grid -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Responsive Grid</h2>
        <div class="mb-4 p-6 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">1</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">2</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">3</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">4</div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"grid grid-cols-1 sm:grid-cols-2
  md:grid-cols-3 lg:grid-cols-4 gap-4"</span><span class="text-pink-400">&gt;</span>
  <span class="text-gray-500">&lt;!-- Items --&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Column Span -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Spalten-Span</h2>
        <div class="mb-4 p-6 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-4 gap-4">
                <div class="col-span-2 p-4 rounded-xl bg-violet-500/30 border border-violet-500/40 text-center text-white">col-span-2</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">1</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">1</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">1</div>
                <div class="col-span-3 p-4 rounded-xl bg-fuchsia-500/30 border border-fuchsia-500/40 text-center text-white">col-span-3</div>
                <div class="col-span-4 p-4 rounded-xl bg-emerald-500/30 border border-emerald-500/40 text-center text-white">col-span-4 (volle Breite)</div>
            </div>
        </div>
    </section>

    <!-- Row Span -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Zeilen-Span</h2>
        <div class="mb-4 p-6 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-3 grid-rows-3 gap-4">
                <div class="row-span-2 p-4 rounded-xl bg-violet-500/30 border border-violet-500/40 text-center text-white flex items-center justify-center">row-span-2</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">1</div>
                <div class="row-span-3 p-4 rounded-xl bg-fuchsia-500/30 border border-fuchsia-500/40 text-center text-white flex items-center justify-center">row-span-3</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">2</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">3</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">4</div>
            </div>
        </div>
    </section>

    <!-- Gap Variations -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Gap-Varianten</h2>
        <div class="mb-4 p-6 rounded-xl bg-white/5 border border-white/10 space-y-6">
            <div>
                <p class="text-xs text-gray-400 mb-2">gap-2</p>
                <div class="grid grid-cols-4 gap-2">
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">1</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">2</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">3</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">4</div>
                </div>
            </div>
            <div>
                <p class="text-xs text-gray-400 mb-2">gap-6</p>
                <div class="grid grid-cols-4 gap-6">
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">1</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">2</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">3</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">4</div>
                </div>
            </div>
            <div>
                <p class="text-xs text-gray-400 mb-2">gap-x-8 gap-y-2</p>
                <div class="grid grid-cols-4 gap-x-8 gap-y-2">
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">1</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">2</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">3</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">4</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">5</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">6</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">7</div>
                    <div class="p-3 rounded-lg bg-violet-500/20 border border-violet-500/30 text-center text-white text-sm">8</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Auto Columns -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Auto-Fit & Auto-Fill</h2>
        <div class="mb-4 p-6 rounded-xl bg-white/5 border border-white/10">
            <p class="text-xs text-gray-400 mb-3">grid-cols-[repeat(auto-fit,minmax(150px,1fr))]</p>
            <div class="grid gap-4" style="grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));">
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">1</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">2</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">3</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">4</div>
                <div class="p-4 rounded-xl bg-violet-500/20 border border-violet-500/30 text-center text-white">5</div>
            </div>
        </div>
    </section>

    <!-- Dashboard Example -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Dashboard Beispiel</h2>
        <div class="mb-4 p-6 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-4 gap-4">
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-gray-400 text-sm">Umsatz</p>
                    <p class="text-2xl font-bold text-white">€12.4K</p>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-gray-400 text-sm">Benutzer</p>
                    <p class="text-2xl font-bold text-white">2.4K</p>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-gray-400 text-sm">Bestellungen</p>
                    <p class="text-2xl font-bold text-white">892</p>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-gray-400 text-sm">Wachstum</p>
                    <p class="text-2xl font-bold text-white">+12%</p>
                </div>
                <div class="col-span-2 row-span-2 p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-gray-400 text-sm mb-4">Diagramm</p>
                    <div class="h-32 flex items-end gap-2">
                        <div class="flex-1 bg-violet-500/40 rounded-t" style="height: 60%;"></div>
                        <div class="flex-1 bg-violet-500/40 rounded-t" style="height: 80%;"></div>
                        <div class="flex-1 bg-violet-500/40 rounded-t" style="height: 45%;"></div>
                        <div class="flex-1 bg-violet-500/40 rounded-t" style="height: 90%;"></div>
                        <div class="flex-1 bg-violet-500/40 rounded-t" style="height: 70%;"></div>
                        <div class="flex-1 bg-violet-500 rounded-t" style="height: 100%;"></div>
                    </div>
                </div>
                <div class="col-span-2 p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-gray-400 text-sm mb-2">Aktivität</p>
                    <div class="space-y-2">
                        <div class="h-2 bg-white/10 rounded-full overflow-hidden"><div class="h-full w-3/4 bg-violet-500 rounded-full"></div></div>
                        <div class="h-2 bg-white/10 rounded-full overflow-hidden"><div class="h-full w-1/2 bg-emerald-500 rounded-full"></div></div>
                    </div>
                </div>
                <div class="col-span-2 p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-gray-400 text-sm">Letzte Aktion</p>
                    <p class="text-white mt-2">Benutzer registriert</p>
                </div>
            </div>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/container" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Container</span>
        </a>
        <a href="/components/divider" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Divider</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
