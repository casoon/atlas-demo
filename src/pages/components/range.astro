---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Range Slider"
    description="Schieberegler für Wertebereiche"
    currentSection="components"
    currentPage="/components/range"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Range Slider</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Range Slider</h1>
        <p class="text-gray-400 text-lg">Schieberegler für die Auswahl von Werten innerhalb eines Bereichs.</p>
    </div>

    <!-- Basic Range -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Range</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md">
                <input type="range" min="0" max="100" value="50" class="w-full h-2 rounded-full bg-white/10 appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-violet-500 [&::-webkit-slider-thumb]:cursor-pointer [&::-webkit-slider-thumb]:shadow-lg" />
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;input</span> <span class="text-violet-400">type</span>=<span class="text-emerald-400">"range"</span>
  <span class="text-violet-400">min</span>=<span class="text-emerald-400">"0"</span> <span class="text-violet-400">max</span>=<span class="text-emerald-400">"100"</span> <span class="text-violet-400">value</span>=<span class="text-emerald-400">"50"</span>
  <span class="text-violet-400">class</span>=<span class="text-emerald-400">"w-full h-2 rounded-full bg-white/10
  appearance-none cursor-pointer"</span> <span class="text-pink-400">/&gt;</span></code></pre>
        </div>
    </section>

    <!-- With Value Display -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Wertanzeige</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md space-y-4">
                <div class="flex items-center justify-between">
                    <label class="text-white font-medium">Lautstärke</label>
                    <span class="text-violet-400 font-mono">75%</span>
                </div>
                <input type="range" min="0" max="100" value="75" class="w-full h-2 rounded-full bg-white/10 appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-violet-500 [&::-webkit-slider-thumb]:cursor-pointer [&::-webkit-slider-thumb]:shadow-lg" />
                <div class="flex justify-between text-xs text-gray-400">
                    <span>0%</span>
                    <span>100%</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Steps -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Schritten</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md space-y-4">
                <div class="flex items-center justify-between">
                    <label class="text-white font-medium">Größe</label>
                    <span class="px-2 py-1 rounded bg-violet-500/20 text-violet-400 text-sm font-mono">M</span>
                </div>
                <input type="range" min="0" max="4" value="2" step="1" class="w-full h-2 rounded-full bg-white/10 appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-violet-500 [&::-webkit-slider-thumb]:cursor-pointer [&::-webkit-slider-thumb]:shadow-lg" />
                <div class="flex justify-between text-xs text-gray-400">
                    <span>XS</span>
                    <span>S</span>
                    <span>M</span>
                    <span>L</span>
                    <span>XL</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Colors -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Farbvarianten</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md space-y-6">
                <div>
                    <label class="text-sm text-gray-400 mb-2 block">Violet</label>
                    <input type="range" min="0" max="100" value="60" class="w-full h-2 rounded-full bg-white/10 appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-violet-500 [&::-webkit-slider-thumb]:cursor-pointer" />
                </div>
                <div>
                    <label class="text-sm text-gray-400 mb-2 block">Emerald</label>
                    <input type="range" min="0" max="100" value="70" class="w-full h-2 rounded-full bg-white/10 appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-emerald-500 [&::-webkit-slider-thumb]:cursor-pointer" />
                </div>
                <div>
                    <label class="text-sm text-gray-400 mb-2 block">Cyan</label>
                    <input type="range" min="0" max="100" value="40" class="w-full h-2 rounded-full bg-white/10 appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-cyan-500 [&::-webkit-slider-thumb]:cursor-pointer" />
                </div>
                <div>
                    <label class="text-sm text-gray-400 mb-2 block">Amber</label>
                    <input type="range" min="0" max="100" value="80" class="w-full h-2 rounded-full bg-white/10 appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-amber-500 [&::-webkit-slider-thumb]:cursor-pointer" />
                </div>
            </div>
        </div>
    </section>

    <!-- Custom Styled -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Custom Styled</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md space-y-8">
                <!-- Thick Track -->
                <div>
                    <label class="text-sm text-gray-400 mb-3 block">Dicker Track</label>
                    <input type="range" min="0" max="100" value="65" class="w-full h-4 rounded-full bg-white/10 appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-6 [&::-webkit-slider-thumb]:h-6 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-violet-500 [&::-webkit-slider-thumb]:cursor-pointer [&::-webkit-slider-thumb]:shadow-lg [&::-webkit-slider-thumb]:border-4 [&::-webkit-slider-thumb]:border-white" />
                </div>
                <!-- Square Thumb -->
                <div>
                    <label class="text-sm text-gray-400 mb-3 block">Eckiger Thumb</label>
                    <input type="range" min="0" max="100" value="45" class="w-full h-2 rounded-full bg-white/10 appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:rounded-lg [&::-webkit-slider-thumb]:bg-gradient-to-br [&::-webkit-slider-thumb]:from-violet-500 [&::-webkit-slider-thumb]:to-fuchsia-500 [&::-webkit-slider-thumb]:cursor-pointer [&::-webkit-slider-thumb]:shadow-lg" />
                </div>
            </div>
        </div>
    </section>

    <!-- Disabled -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Deaktiviert</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md">
                <input disabled type="range" min="0" max="100" value="50" class="w-full h-2 rounded-full bg-white/5 appearance-none cursor-not-allowed opacity-50 [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-gray-500 [&::-webkit-slider-thumb]:cursor-not-allowed" />
            </div>
        </div>
    </section>

    <!-- Price Range Example -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Preisbereich Beispiel</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md">
                <div class="flex items-center justify-between mb-4">
                    <span class="text-white font-medium">Preisbereich</span>
                    <span class="text-violet-400 font-semibold">0€ - 250€</span>
                </div>
                <div class="relative pt-2">
                    <div class="h-2 rounded-full bg-white/10">
                        <div class="absolute h-2 rounded-full bg-violet-500" style="left: 0%; width: 50%;"></div>
                    </div>
                    <input type="range" min="0" max="500" value="250" class="absolute inset-0 w-full h-2 appearance-none bg-transparent cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-white [&::-webkit-slider-thumb]:shadow-lg [&::-webkit-slider-thumb]:cursor-pointer [&::-webkit-slider-thumb]:border-2 [&::-webkit-slider-thumb]:border-violet-500" />
                </div>
                <div class="flex justify-between mt-2 text-xs text-gray-400">
                    <span>0€</span>
                    <span>250€</span>
                    <span>500€</span>
                </div>
            </div>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/toggle" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Toggle</span>
        </a>
        <a href="/components/file-upload" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>File Upload</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
