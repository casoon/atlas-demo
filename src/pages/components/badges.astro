---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Badges"
    description="Badge-Komponenten für Labels und Status"
    currentSection="components"
    currentPage="/components/badges"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Badges</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Badges</h1>
        <p class="text-gray-400 text-lg">Kleine Labels für Status, Kategorien und Zähler.</p>
    </div>

    <!-- Basic Badges -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Varianten</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap items-center gap-3">
                <span class="px-3 py-1 rounded-full bg-gray-500/20 text-gray-400 text-sm font-medium">Default</span>
                <span class="px-3 py-1 rounded-full bg-violet-500/20 text-violet-400 text-sm font-medium">Primary</span>
                <span class="px-3 py-1 rounded-full bg-emerald-500/20 text-emerald-400 text-sm font-medium">Success</span>
                <span class="px-3 py-1 rounded-full bg-amber-500/20 text-amber-400 text-sm font-medium">Warning</span>
                <span class="px-3 py-1 rounded-full bg-red-500/20 text-red-400 text-sm font-medium">Danger</span>
                <span class="px-3 py-1 rounded-full bg-cyan-500/20 text-cyan-400 text-sm font-medium">Info</span>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;span</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"px-3 py-1 rounded-full
  bg-violet-500/20 text-violet-400 text-sm font-medium"</span><span class="text-pink-400">&gt;</span>
  Primary
<span class="text-pink-400">&lt;/span&gt;</span></code></pre>
        </div>
    </section>

    <!-- Solid Badges -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Solid</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap items-center gap-3">
                <span class="px-3 py-1 rounded-full bg-gray-500 text-white text-sm font-medium">Default</span>
                <span class="px-3 py-1 rounded-full bg-violet-500 text-white text-sm font-medium">Primary</span>
                <span class="px-3 py-1 rounded-full bg-emerald-500 text-white text-sm font-medium">Success</span>
                <span class="px-3 py-1 rounded-full bg-amber-500 text-white text-sm font-medium">Warning</span>
                <span class="px-3 py-1 rounded-full bg-red-500 text-white text-sm font-medium">Danger</span>
            </div>
        </div>
    </section>

    <!-- Outline Badges -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Outline</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap items-center gap-3">
                <span class="px-3 py-1 rounded-full border border-gray-500 text-gray-400 text-sm font-medium">Default</span>
                <span class="px-3 py-1 rounded-full border border-violet-500 text-violet-400 text-sm font-medium">Primary</span>
                <span class="px-3 py-1 rounded-full border border-emerald-500 text-emerald-400 text-sm font-medium">Success</span>
                <span class="px-3 py-1 rounded-full border border-amber-500 text-amber-400 text-sm font-medium">Warning</span>
                <span class="px-3 py-1 rounded-full border border-red-500 text-red-400 text-sm font-medium">Danger</span>
            </div>
        </div>
    </section>

    <!-- Sizes -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Größen</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap items-center gap-3">
                <span class="px-2 py-0.5 rounded text-xs font-medium bg-violet-500/20 text-violet-400">Small</span>
                <span class="px-3 py-1 rounded-full text-sm font-medium bg-violet-500/20 text-violet-400">Medium</span>
                <span class="px-4 py-1.5 rounded-full text-base font-medium bg-violet-500/20 text-violet-400">Large</span>
            </div>
        </div>
    </section>

    <!-- With Dot -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Punkt</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap items-center gap-3">
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-emerald-500/20 text-emerald-400 text-sm font-medium">
                    <span class="w-2 h-2 rounded-full bg-emerald-400"></span>
                    Online
                </span>
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-amber-500/20 text-amber-400 text-sm font-medium">
                    <span class="w-2 h-2 rounded-full bg-amber-400"></span>
                    Away
                </span>
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-red-500/20 text-red-400 text-sm font-medium">
                    <span class="w-2 h-2 rounded-full bg-red-400"></span>
                    Busy
                </span>
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-gray-500/20 text-gray-400 text-sm font-medium">
                    <span class="w-2 h-2 rounded-full bg-gray-400"></span>
                    Offline
                </span>
            </div>
        </div>
    </section>

    <!-- With Counter -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Als Zähler</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap items-center gap-6">
                <div class="relative">
                    <button class="p-2 rounded-lg bg-white/5 text-white">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                        </svg>
                    </button>
                    <span class="absolute -top-1 -right-1 w-5 h-5 flex items-center justify-center rounded-full bg-red-500 text-white text-xs font-bold">3</span>
                </div>
                <div class="relative">
                    <button class="p-2 rounded-lg bg-white/5 text-white">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </button>
                    <span class="absolute -top-1 -right-1 w-5 h-5 flex items-center justify-center rounded-full bg-violet-500 text-white text-xs font-bold">12</span>
                </div>
            </div>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/lists" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Lists</span>
        </a>
        <a href="/components/avatars" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Avatars</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
