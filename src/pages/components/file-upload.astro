---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="File Upload"
    description="Datei-Upload Komponenten"
    currentSection="components"
    currentPage="/components/file-upload"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">File Upload</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">File Upload</h1>
        <p class="text-gray-400 text-lg">Komponenten für Datei-Uploads mit Drag & Drop.</p>
    </div>

    <!-- Basic Upload -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Upload</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md">
                <label class="flex items-center gap-3 px-4 py-3 rounded-xl bg-white/5 border border-white/10 hover:bg-white/10 transition-colors cursor-pointer">
                    <svg class="w-5 h-5 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                    </svg>
                    <span class="text-white">Datei auswählen</span>
                    <input type="file" class="hidden" />
                </label>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;label</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"flex items-center gap-3 px-4 py-3
  rounded-xl bg-white/5 border border-white/10
  hover:bg-white/10 cursor-pointer"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;svg&gt;</span>...<span class="text-pink-400">&lt;/svg&gt;</span>
  <span class="text-pink-400">&lt;span&gt;</span>Datei auswählen<span class="text-pink-400">&lt;/span&gt;</span>
  <span class="text-pink-400">&lt;input</span> <span class="text-violet-400">type</span>=<span class="text-emerald-400">"file"</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"hidden"</span> <span class="text-pink-400">/&gt;</span>
<span class="text-pink-400">&lt;/label&gt;</span></code></pre>
        </div>
    </section>

    <!-- Dropzone -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Dropzone</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-lg">
                <label class="flex flex-col items-center justify-center p-8 rounded-2xl border-2 border-dashed border-white/20 hover:border-violet-500/50 hover:bg-violet-500/5 transition-all cursor-pointer">
                    <svg class="w-12 h-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                    </svg>
                    <p class="text-white font-medium mb-1">Dateien hierher ziehen</p>
                    <p class="text-sm text-gray-400 mb-4">oder klicken zum Auswählen</p>
                    <span class="px-4 py-2 rounded-lg bg-violet-500 text-white text-sm hover:bg-violet-600 transition-colors">
                        Dateien durchsuchen
                    </span>
                    <input type="file" multiple class="hidden" />
                </label>
            </div>
        </div>
    </section>

    <!-- With Preview -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Vorschau</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-lg space-y-4">
                <label class="flex flex-col items-center justify-center p-6 rounded-2xl border-2 border-dashed border-white/20 hover:border-violet-500/50 transition-all cursor-pointer">
                    <svg class="w-8 h-8 text-gray-400 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <p class="text-sm text-gray-400">Bild hochladen</p>
                    <input type="file" accept="image/*" class="hidden" />
                </label>

                <!-- Preview Items -->
                <div class="space-y-2">
                    <div class="flex items-center gap-3 p-3 rounded-xl bg-white/5 border border-white/10">
                        <div class="w-12 h-12 rounded-lg bg-violet-500/20 flex items-center justify-center overflow-hidden">
                            <svg class="w-6 h-6 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-white text-sm truncate">screenshot.png</p>
                            <p class="text-xs text-gray-400">2.4 MB</p>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-xs text-emerald-400">Fertig</span>
                            <button class="p-1 rounded hover:bg-white/10 text-gray-400 hover:text-red-400 transition-colors">
                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                            </button>
                        </div>
                    </div>
                    <div class="flex items-center gap-3 p-3 rounded-xl bg-white/5 border border-white/10">
                        <div class="w-12 h-12 rounded-lg bg-cyan-500/20 flex items-center justify-center">
                            <svg class="w-6 h-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-white text-sm truncate">dokument.pdf</p>
                            <div class="flex items-center gap-2 mt-1">
                                <div class="flex-1 h-1 rounded-full bg-white/10 overflow-hidden">
                                    <div class="h-full w-3/4 bg-violet-500 rounded-full"></div>
                                </div>
                                <span class="text-xs text-gray-400">75%</span>
                            </div>
                        </div>
                        <button class="p-1 rounded hover:bg-white/10 text-gray-400 hover:text-red-400 transition-colors">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Avatar Upload -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Avatar Upload</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex items-center gap-6">
                <label class="relative cursor-pointer group">
                    <div class="w-24 h-24 rounded-full bg-violet-500/20 flex items-center justify-center overflow-hidden border-2 border-dashed border-white/20 group-hover:border-violet-500 transition-colors">
                        <svg class="w-8 h-8 text-gray-400 group-hover:text-violet-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </div>
                    <div class="absolute bottom-0 right-0 w-8 h-8 rounded-full bg-violet-500 flex items-center justify-center shadow-lg">
                        <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </div>
                    <input type="file" accept="image/*" class="hidden" />
                </label>
                <div>
                    <p class="text-white font-medium mb-1">Profilbild hochladen</p>
                    <p class="text-sm text-gray-400">JPG, PNG oder GIF. Max 2MB.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- File Types -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Dateitypen einschränken</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-lg">
                <label class="flex flex-col items-center justify-center p-6 rounded-2xl border-2 border-dashed border-white/20 hover:border-violet-500/50 transition-all cursor-pointer">
                    <svg class="w-10 h-10 text-gray-400 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <p class="text-white font-medium mb-1">Dokumente hochladen</p>
                    <p class="text-sm text-gray-400">PDF, DOC, DOCX bis 10MB</p>
                    <input type="file" accept=".pdf,.doc,.docx" class="hidden" />
                </label>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;input</span> <span class="text-violet-400">type</span>=<span class="text-emerald-400">"file"</span>
  <span class="text-violet-400">accept</span>=<span class="text-emerald-400">".pdf,.doc,.docx"</span> <span class="text-pink-400">/&gt;</span>

<span class="text-gray-500">&lt;!-- Nur Bilder --&gt;</span>
<span class="text-pink-400">&lt;input</span> <span class="text-violet-400">type</span>=<span class="text-emerald-400">"file"</span>
  <span class="text-violet-400">accept</span>=<span class="text-emerald-400">"image/*"</span> <span class="text-pink-400">/&gt;</span>

<span class="text-gray-500">&lt;!-- Nur Videos --&gt;</span>
<span class="text-pink-400">&lt;input</span> <span class="text-violet-400">type</span>=<span class="text-emerald-400">"file"</span>
  <span class="text-violet-400">accept</span>=<span class="text-emerald-400">"video/*"</span> <span class="text-pink-400">/&gt;</span></code></pre>
        </div>
    </section>

    <!-- Error State -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Fehlerzustand</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-lg">
                <label class="flex flex-col items-center justify-center p-6 rounded-2xl border-2 border-dashed border-red-500/50 bg-red-500/5 cursor-pointer">
                    <svg class="w-10 h-10 text-red-400 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <p class="text-red-400 font-medium mb-1">Upload fehlgeschlagen</p>
                    <p class="text-sm text-gray-400">Datei ist zu groß (max. 5MB)</p>
                    <input type="file" class="hidden" />
                </label>
            </div>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/range" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Range Slider</span>
        </a>
        <a href="/components/buttons" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Buttons</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
