---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Tabs"
    description="Tab-Navigation für organisierte Inhalte"
    currentSection="components"
    currentPage="/components/tabs"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Tabs</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Tabs</h1>
        <p class="text-gray-400 text-lg">Tab-Komponenten für die Organisation von Inhalten.</p>
    </div>

    <!-- Basic Tabs -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Tabs</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div>
                <div class="flex border-b border-white/10">
                    <button class="px-4 py-3 text-sm font-medium text-violet-400 border-b-2 border-violet-500 -mb-px">Tab 1</button>
                    <button class="px-4 py-3 text-sm font-medium text-gray-400 hover:text-white transition-colors">Tab 2</button>
                    <button class="px-4 py-3 text-sm font-medium text-gray-400 hover:text-white transition-colors">Tab 3</button>
                </div>
                <div class="p-4">
                    <p class="text-gray-400">Inhalt von Tab 1</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"flex border-b border-white/10"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"px-4 py-3 text-violet-400
    border-b-2 border-violet-500 -mb-px"</span><span class="text-pink-400">&gt;</span>Active<span class="text-pink-400">&lt;/button&gt;</span>
  <span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"px-4 py-3 text-gray-400"</span><span class="text-pink-400">&gt;</span>Tab 2<span class="text-pink-400">&lt;/button&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Pills Tabs -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Pills</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="inline-flex p-1 rounded-xl bg-white/5">
                <button class="px-4 py-2 text-sm font-medium text-white rounded-lg bg-violet-500">Tab 1</button>
                <button class="px-4 py-2 text-sm font-medium text-gray-400 hover:text-white transition-colors">Tab 2</button>
                <button class="px-4 py-2 text-sm font-medium text-gray-400 hover:text-white transition-colors">Tab 3</button>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"inline-flex p-1 rounded-xl bg-white/5"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"px-4 py-2 rounded-lg bg-violet-500 text-white"</span><span class="text-pink-400">&gt;</span>
    Active
  <span class="text-pink-400">&lt;/button&gt;</span>
  <span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"px-4 py-2 text-gray-400"</span><span class="text-pink-400">&gt;</span>Tab 2<span class="text-pink-400">&lt;/button&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- With Icons -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Icons</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex border-b border-white/10">
                <button class="flex items-center gap-2 px-4 py-3 text-sm font-medium text-violet-400 border-b-2 border-violet-500 -mb-px">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>
                    Home
                </button>
                <button class="flex items-center gap-2 px-4 py-3 text-sm font-medium text-gray-400 hover:text-white transition-colors">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                    Profil
                </button>
                <button class="flex items-center gap-2 px-4 py-3 text-sm font-medium text-gray-400 hover:text-white transition-colors">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                    Einstellungen
                </button>
            </div>
        </div>
    </section>

    <!-- With Badge -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Badge</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex border-b border-white/10">
                <button class="px-4 py-3 text-sm font-medium text-violet-400 border-b-2 border-violet-500 -mb-px">Alle</button>
                <button class="flex items-center gap-2 px-4 py-3 text-sm font-medium text-gray-400 hover:text-white transition-colors">
                    Nachrichten
                    <span class="px-1.5 py-0.5 text-xs rounded-full bg-violet-500 text-white">5</span>
                </button>
                <button class="flex items-center gap-2 px-4 py-3 text-sm font-medium text-gray-400 hover:text-white transition-colors">
                    Updates
                    <span class="px-1.5 py-0.5 text-xs rounded-full bg-red-500 text-white">3</span>
                </button>
            </div>
        </div>
    </section>

    <!-- Vertical Tabs -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Vertikal</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex gap-6">
                <div class="w-48 space-y-1">
                    <button class="w-full px-4 py-2 text-sm font-medium text-left rounded-lg bg-violet-500/20 text-violet-400">Account</button>
                    <button class="w-full px-4 py-2 text-sm font-medium text-left rounded-lg text-gray-400 hover:bg-white/5 transition-colors">Sicherheit</button>
                    <button class="w-full px-4 py-2 text-sm font-medium text-left rounded-lg text-gray-400 hover:bg-white/5 transition-colors">Benachrichtigungen</button>
                    <button class="w-full px-4 py-2 text-sm font-medium text-left rounded-lg text-gray-400 hover:bg-white/5 transition-colors">Datenschutz</button>
                </div>
                <div class="flex-1 p-4 rounded-xl bg-white/5 border border-white/10">
                    <h3 class="text-lg font-semibold text-white mb-2">Account</h3>
                    <p class="text-gray-400 text-sm">Verwalten Sie Ihre Kontoeinstellungen.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Full Width -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Volle Breite</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-3 border-b border-white/10">
                <button class="px-4 py-3 text-sm font-medium text-center text-violet-400 border-b-2 border-violet-500 -mb-px">Tab 1</button>
                <button class="px-4 py-3 text-sm font-medium text-center text-gray-400 hover:text-white transition-colors">Tab 2</button>
                <button class="px-4 py-3 text-sm font-medium text-center text-gray-400 hover:text-white transition-colors">Tab 3</button>
            </div>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/sidebar" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Sidebar</span>
        </a>
        <a href="/components/breadcrumb" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Breadcrumb</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
