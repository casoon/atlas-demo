---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Breadcrumb"
    description="Brotkrümel-Navigation"
    currentSection="components"
    currentPage="/components/breadcrumb"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Breadcrumb</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Breadcrumb</h1>
        <p class="text-gray-400 text-lg">Navigationspfade zur Orientierung in der Seitenhierarchie.</p>
    </div>

    <!-- Basic Breadcrumb -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Breadcrumb</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <nav class="flex items-center gap-2 text-sm">
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Home</a>
                <span class="text-gray-600">/</span>
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Produkte</a>
                <span class="text-gray-600">/</span>
                <span class="text-white">Kategorie</span>
            </nav>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;nav</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"flex items-center gap-2 text-sm"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;a</span> <span class="text-violet-400">href</span>=<span class="text-emerald-400">"#"</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"text-gray-400 hover:text-white"</span><span class="text-pink-400">&gt;</span>Home<span class="text-pink-400">&lt;/a&gt;</span>
  <span class="text-pink-400">&lt;span</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"text-gray-600"</span><span class="text-pink-400">&gt;</span>/<span class="text-pink-400">&lt;/span&gt;</span>
  <span class="text-pink-400">&lt;a</span> <span class="text-violet-400">href</span>=<span class="text-emerald-400">"#"</span><span class="text-pink-400">&gt;</span>Produkte<span class="text-pink-400">&lt;/a&gt;</span>
  <span class="text-pink-400">&lt;span&gt;</span>/<span class="text-pink-400">&lt;/span&gt;</span>
  <span class="text-pink-400">&lt;span</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"text-white"</span><span class="text-pink-400">&gt;</span>Kategorie<span class="text-pink-400">&lt;/span&gt;</span>
<span class="text-pink-400">&lt;/nav&gt;</span></code></pre>
        </div>
    </section>

    <!-- With Chevrons -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Chevrons</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <nav class="flex items-center gap-2 text-sm">
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Home</a>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Bibliothek</a>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Dokumente</a>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <span class="text-white">Datei.pdf</span>
            </nav>
        </div>
    </section>

    <!-- With Icons -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Icons</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <nav class="flex items-center gap-2 text-sm">
                <a href="#" class="flex items-center gap-1 text-gray-400 hover:text-white transition-colors">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>
                    Home
                </a>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <a href="#" class="flex items-center gap-1 text-gray-400 hover:text-white transition-colors">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" /></svg>
                    Projekte
                </a>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <span class="flex items-center gap-1 text-white">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                    Details
                </span>
            </nav>
        </div>
    </section>

    <!-- With Background -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Hintergrund</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <nav class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-white/5 text-sm">
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Dashboard</a>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Benutzer</a>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <span class="text-white">Profil</span>
            </nav>
        </div>
    </section>

    <!-- Pills Style -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Pills Style</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <nav class="flex items-center gap-2 text-sm">
                <a href="#" class="px-3 py-1 rounded-full bg-violet-500/20 text-violet-400 hover:bg-violet-500/30 transition-colors">Home</a>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <a href="#" class="px-3 py-1 rounded-full bg-white/5 text-gray-400 hover:bg-white/10 hover:text-white transition-colors">Einstellungen</a>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <span class="px-3 py-1 rounded-full bg-white/10 text-white">Sicherheit</span>
            </nav>
        </div>
    </section>

    <!-- With Dots -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Punkten</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <nav class="flex items-center gap-3 text-sm">
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Start</a>
                <span class="w-1 h-1 rounded-full bg-gray-600"></span>
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Kategorie</a>
                <span class="w-1 h-1 rounded-full bg-gray-600"></span>
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Unterkategorie</a>
                <span class="w-1 h-1 rounded-full bg-gray-600"></span>
                <span class="text-white">Artikel</span>
            </nav>
        </div>
    </section>

    <!-- Truncated -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Gekürzt</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <nav class="flex items-center gap-2 text-sm">
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Home</a>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <button class="px-2 py-1 rounded bg-white/5 text-gray-400 hover:bg-white/10 transition-colors">...</button>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <a href="#" class="text-gray-400 hover:text-white transition-colors">Ordner</a>
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <span class="text-white">Aktuell</span>
            </nav>
        </div>
    </section>

    <!-- Glass Style -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Glass Style</h2>
        <div class="mb-4 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <nav class="inline-flex items-center gap-2 px-4 py-2 rounded-xl cs-glass-card border border-white/20 text-sm">
                <a href="#" class="text-white/70 hover:text-white transition-colors">Home</a>
                <svg class="w-4 h-4 text-white/40" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <a href="#" class="text-white/70 hover:text-white transition-colors">Produkte</a>
                <svg class="w-4 h-4 text-white/40" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <span class="text-white">Details</span>
            </nav>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/sidebar" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Sidebar</span>
        </a>
        <a href="/components/pagination" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Pagination</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
