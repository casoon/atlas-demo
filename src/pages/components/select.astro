---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Select"
    description="Dropdown-Auswahlfelder für Formulare"
    currentSection="components"
    currentPage="/components/select"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Select</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Select</h1>
        <p class="text-gray-400 text-lg">Dropdown-Komponenten für die Auswahl von Optionen.</p>
    </div>

    <!-- Basic Select -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Select</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-xs">
                <select class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white focus:border-violet-500 focus:outline-none focus:ring-2 focus:ring-violet-500/20 transition-all appearance-none cursor-pointer">
                    <option value="" class="bg-[#1a1a2e]">Option auswählen...</option>
                    <option value="1" class="bg-[#1a1a2e]">Option 1</option>
                    <option value="2" class="bg-[#1a1a2e]">Option 2</option>
                    <option value="3" class="bg-[#1a1a2e]">Option 3</option>
                </select>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;select</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"w-full px-4 py-3 rounded-xl bg-white/5
  border border-white/10 text-white focus:border-violet-500
  focus:ring-2 focus:ring-violet-500/20"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;option</span> <span class="text-violet-400">value</span>=<span class="text-emerald-400">""</span><span class="text-pink-400">&gt;</span>Option auswählen...<span class="text-pink-400">&lt;/option&gt;</span>
  <span class="text-pink-400">&lt;option</span> <span class="text-violet-400">value</span>=<span class="text-emerald-400">"1"</span><span class="text-pink-400">&gt;</span>Option 1<span class="text-pink-400">&lt;/option&gt;</span>
<span class="text-pink-400">&lt;/select&gt;</span></code></pre>
        </div>
    </section>

    <!-- With Label -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Label</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-xs space-y-2">
                <label class="block text-sm font-medium text-gray-300">Land</label>
                <div class="relative">
                    <select class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white focus:border-violet-500 focus:outline-none focus:ring-2 focus:ring-violet-500/20 transition-all appearance-none cursor-pointer pr-10">
                        <option value="" class="bg-[#1a1a2e]">Land auswählen...</option>
                        <option value="de" class="bg-[#1a1a2e]">Deutschland</option>
                        <option value="at" class="bg-[#1a1a2e]">Österreich</option>
                        <option value="ch" class="bg-[#1a1a2e]">Schweiz</option>
                    </select>
                    <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </div>
            </div>
        </div>
    </section>

    <!-- With Icon -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Icon</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-xs">
                <div class="relative">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <select class="w-full pl-10 pr-10 py-3 rounded-xl bg-white/5 border border-white/10 text-white focus:border-violet-500 focus:outline-none focus:ring-2 focus:ring-violet-500/20 transition-all appearance-none cursor-pointer">
                        <option value="" class="bg-[#1a1a2e]">Sprache wählen...</option>
                        <option value="de" class="bg-[#1a1a2e]">Deutsch</option>
                        <option value="en" class="bg-[#1a1a2e]">English</option>
                        <option value="fr" class="bg-[#1a1a2e]">Français</option>
                    </select>
                    <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </div>
            </div>
        </div>
    </section>

    <!-- Sizes -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Größen</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-xs space-y-4">
                <div class="relative">
                    <select class="w-full px-3 py-2 text-sm rounded-lg bg-white/5 border border-white/10 text-white focus:border-violet-500 focus:outline-none appearance-none cursor-pointer pr-8">
                        <option class="bg-[#1a1a2e]">Small</option>
                    </select>
                    <svg class="absolute right-2 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                </div>
                <div class="relative">
                    <select class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white focus:border-violet-500 focus:outline-none appearance-none cursor-pointer pr-10">
                        <option class="bg-[#1a1a2e]">Default</option>
                    </select>
                    <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                </div>
                <div class="relative">
                    <select class="w-full px-5 py-4 text-lg rounded-2xl bg-white/5 border border-white/10 text-white focus:border-violet-500 focus:outline-none appearance-none cursor-pointer pr-12">
                        <option class="bg-[#1a1a2e]">Large</option>
                    </select>
                    <svg class="absolute right-4 top-1/2 -translate-y-1/2 w-6 h-6 text-gray-400 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                </div>
            </div>
        </div>
    </section>

    <!-- States -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Zustände</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-xs space-y-4">
                <div class="space-y-2">
                    <label class="block text-sm text-gray-400">Disabled</label>
                    <div class="relative">
                        <select disabled class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-gray-500 cursor-not-allowed appearance-none pr-10 opacity-50">
                            <option>Deaktiviert</option>
                        </select>
                        <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-500 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                    </div>
                </div>
                <div class="space-y-2">
                    <label class="block text-sm text-gray-400">Error</label>
                    <div class="relative">
                        <select class="w-full px-4 py-3 rounded-xl bg-white/5 border border-red-500 text-white focus:outline-none focus:ring-2 focus:ring-red-500/20 appearance-none cursor-pointer pr-10">
                            <option class="bg-[#1a1a2e]">Fehlerhafte Auswahl</option>
                        </select>
                        <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-red-400 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                    </div>
                    <p class="text-sm text-red-400">Bitte wählen Sie eine gültige Option</p>
                </div>
                <div class="space-y-2">
                    <label class="block text-sm text-gray-400">Success</label>
                    <div class="relative">
                        <select class="w-full px-4 py-3 rounded-xl bg-white/5 border border-emerald-500 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500/20 appearance-none cursor-pointer pr-10">
                            <option class="bg-[#1a1a2e]">Gültige Auswahl</option>
                        </select>
                        <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-emerald-400 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Multiple Select -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mehrfachauswahl</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-xs">
                <select multiple class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white focus:border-violet-500 focus:outline-none focus:ring-2 focus:ring-violet-500/20 transition-all">
                    <option value="1" class="p-2 rounded hover:bg-violet-500/20">JavaScript</option>
                    <option value="2" class="p-2 rounded hover:bg-violet-500/20">TypeScript</option>
                    <option value="3" class="p-2 rounded hover:bg-violet-500/20">Python</option>
                    <option value="4" class="p-2 rounded hover:bg-violet-500/20">Rust</option>
                    <option value="5" class="p-2 rounded hover:bg-violet-500/20">Go</option>
                </select>
                <p class="mt-2 text-xs text-gray-400">Halten Sie Cmd/Ctrl für Mehrfachauswahl</p>
            </div>
        </div>
    </section>

    <!-- Glass Style -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Glass Style</h2>
        <div class="mb-4 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <div class="max-w-xs">
                <div class="relative">
                    <select class="cs-glass-input w-full px-4 py-3 rounded-xl text-white focus:outline-none appearance-none cursor-pointer pr-10">
                        <option value="" class="bg-[#1a1a2e]">Kategorie wählen...</option>
                        <option value="1" class="bg-[#1a1a2e]">Design</option>
                        <option value="2" class="bg-[#1a1a2e]">Development</option>
                        <option value="3" class="bg-[#1a1a2e]">Marketing</option>
                    </select>
                    <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </div>
            </div>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/inputs" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Inputs</span>
        </a>
        <a href="/components/checkbox-radio" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Checkbox & Radio</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
