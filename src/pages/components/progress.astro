---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Progress"
    description="Fortschrittsanzeigen für Ladezustände"
    currentSection="components"
    currentPage="/components/progress"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Progress</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Progress</h1>
        <p class="text-gray-400 text-lg">Fortschrittsbalken für Lade- und Prozesszustände.</p>
    </div>

    <!-- Basic Progress -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Progress</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10 space-y-6">
            <div>
                <div class="flex justify-between text-sm mb-2">
                    <span class="text-gray-400">Fortschritt</span>
                    <span class="text-white">25%</span>
                </div>
                <div class="h-2 rounded-full bg-white/10">
                    <div class="h-full w-1/4 rounded-full bg-violet-500"></div>
                </div>
            </div>
            <div>
                <div class="flex justify-between text-sm mb-2">
                    <span class="text-gray-400">Fortschritt</span>
                    <span class="text-white">50%</span>
                </div>
                <div class="h-2 rounded-full bg-white/10">
                    <div class="h-full w-1/2 rounded-full bg-violet-500"></div>
                </div>
            </div>
            <div>
                <div class="flex justify-between text-sm mb-2">
                    <span class="text-gray-400">Fortschritt</span>
                    <span class="text-white">75%</span>
                </div>
                <div class="h-2 rounded-full bg-white/10">
                    <div class="h-full w-3/4 rounded-full bg-violet-500"></div>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"h-2 rounded-full bg-white/10"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"h-full w-1/2 rounded-full bg-violet-500"</span><span class="text-pink-400">&gt;&lt;/div&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Colors -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Farben</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10 space-y-4">
            <div class="h-2 rounded-full bg-white/10">
                <div class="h-full w-3/4 rounded-full bg-violet-500"></div>
            </div>
            <div class="h-2 rounded-full bg-white/10">
                <div class="h-full w-2/3 rounded-full bg-emerald-500"></div>
            </div>
            <div class="h-2 rounded-full bg-white/10">
                <div class="h-full w-1/2 rounded-full bg-amber-500"></div>
            </div>
            <div class="h-2 rounded-full bg-white/10">
                <div class="h-full w-1/3 rounded-full bg-red-500"></div>
            </div>
            <div class="h-2 rounded-full bg-white/10">
                <div class="h-full w-4/5 rounded-full bg-cyan-500"></div>
            </div>
        </div>
    </section>

    <!-- Sizes -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Größen</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10 space-y-6">
            <div>
                <span class="text-sm text-gray-400 mb-2 block">Small (h-1)</span>
                <div class="h-1 rounded-full bg-white/10">
                    <div class="h-full w-2/3 rounded-full bg-violet-500"></div>
                </div>
            </div>
            <div>
                <span class="text-sm text-gray-400 mb-2 block">Default (h-2)</span>
                <div class="h-2 rounded-full bg-white/10">
                    <div class="h-full w-2/3 rounded-full bg-violet-500"></div>
                </div>
            </div>
            <div>
                <span class="text-sm text-gray-400 mb-2 block">Medium (h-3)</span>
                <div class="h-3 rounded-full bg-white/10">
                    <div class="h-full w-2/3 rounded-full bg-violet-500"></div>
                </div>
            </div>
            <div>
                <span class="text-sm text-gray-400 mb-2 block">Large (h-4)</span>
                <div class="h-4 rounded-full bg-white/10">
                    <div class="h-full w-2/3 rounded-full bg-violet-500"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- With Gradient -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Gradient</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10 space-y-4">
            <div class="h-3 rounded-full bg-white/10">
                <div class="h-full w-3/4 rounded-full bg-gradient-to-r from-violet-500 to-fuchsia-500"></div>
            </div>
            <div class="h-3 rounded-full bg-white/10">
                <div class="h-full w-2/3 rounded-full bg-gradient-to-r from-cyan-500 to-blue-500"></div>
            </div>
            <div class="h-3 rounded-full bg-white/10">
                <div class="h-full w-4/5 rounded-full bg-gradient-to-r from-emerald-500 to-teal-500"></div>
            </div>
        </div>
    </section>

    <!-- Animated -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Animiert</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10 space-y-6">
            <div>
                <span class="text-sm text-gray-400 mb-2 block">Indeterminate</span>
                <div class="h-2 rounded-full bg-white/10 overflow-hidden">
                    <div class="h-full w-1/3 rounded-full bg-violet-500 animate-pulse"></div>
                </div>
            </div>
            <div>
                <span class="text-sm text-gray-400 mb-2 block">Striped</span>
                <div class="h-3 rounded-full bg-white/10 overflow-hidden">
                    <div class="h-full w-2/3 rounded-full bg-violet-500" style="background-image: linear-gradient(45deg, rgba(255,255,255,0.15) 25%, transparent 25%, transparent 50%, rgba(255,255,255,0.15) 50%, rgba(255,255,255,0.15) 75%, transparent 75%, transparent); background-size: 1rem 1rem;"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Circular Progress -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Kreisförmig</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex items-center gap-8">
                <div class="relative w-20 h-20">
                    <svg class="w-20 h-20 transform -rotate-90">
                        <circle cx="40" cy="40" r="36" stroke="currentColor" stroke-width="8" fill="none" class="text-white/10"></circle>
                        <circle cx="40" cy="40" r="36" stroke="currentColor" stroke-width="8" fill="none" class="text-violet-500" stroke-dasharray="226" stroke-dashoffset="57" stroke-linecap="round"></circle>
                    </svg>
                    <div class="absolute inset-0 flex items-center justify-center">
                        <span class="text-white font-semibold">75%</span>
                    </div>
                </div>
                <div class="relative w-20 h-20">
                    <svg class="w-20 h-20 transform -rotate-90">
                        <circle cx="40" cy="40" r="36" stroke="currentColor" stroke-width="8" fill="none" class="text-white/10"></circle>
                        <circle cx="40" cy="40" r="36" stroke="currentColor" stroke-width="8" fill="none" class="text-emerald-500" stroke-dasharray="226" stroke-dashoffset="113" stroke-linecap="round"></circle>
                    </svg>
                    <div class="absolute inset-0 flex items-center justify-center">
                        <span class="text-white font-semibold">50%</span>
                    </div>
                </div>
                <div class="relative w-20 h-20">
                    <svg class="w-20 h-20 transform -rotate-90">
                        <circle cx="40" cy="40" r="36" stroke="currentColor" stroke-width="8" fill="none" class="text-white/10"></circle>
                        <circle cx="40" cy="40" r="36" stroke="currentColor" stroke-width="8" fill="none" class="text-amber-500" stroke-dasharray="226" stroke-dashoffset="170" stroke-linecap="round"></circle>
                    </svg>
                    <div class="absolute inset-0 flex items-center justify-center">
                        <span class="text-white font-semibold">25%</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/toast" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Toast</span>
        </a>
        <a href="/components/skeleton" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Skeleton</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
