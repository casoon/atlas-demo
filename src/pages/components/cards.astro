---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Cards"
    description="Card-Komponenten für Content-Darstellung"
    currentSection="components"
    currentPage="/components/cards"
    sidebar={componentsSidebar}
>
    <!-- Page Header -->
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Cards</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Cards</h1>
        <p class="text-gray-400 text-lg">
            Flexible Container für Content mit verschiedenen Hover-Effekten.
        </p>
    </div>

    <!-- Basic Card -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Card</h2>
        <p class="text-gray-400 mb-6">
            Eine einfache Card mit Glassmorphism-Styling.
        </p>

        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div
                class="max-w-sm p-6 rounded-2xl bg-white/5 border border-white/10"
                data-atlas="card"
                data-hover="lift"
            >
                <h3 class="text-lg font-semibold text-white mb-2">Card Title</h3>
                <p class="text-gray-400 text-sm mb-4">
                    Dies ist eine einfache Card-Komponente mit Hover-Effekt.
                    Sie eignet sich für die Darstellung von Content-Blöcken.
                </p>
                <button
                    class="px-4 py-2 rounded-lg bg-violet-500 text-white text-sm font-medium hover:bg-violet-600 transition-colors"
                    data-atlas="button"
                    data-ripple="true"
                >
                    Mehr erfahren
                </button>
            </div>
        </div>

        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="flex items-center justify-between px-4 py-3 border-b border-white/10">
                <span class="text-xs text-gray-500">HTML</span>
            </div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span>
  <span class="text-violet-400">class</span>=<span class="text-emerald-400">"p-6 rounded-2xl bg-white/5 border border-white/10"</span>
  <span class="text-violet-400">data-atlas</span>=<span class="text-emerald-400">"card"</span>
  <span class="text-violet-400">data-hover</span>=<span class="text-emerald-400">"lift"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;h3&gt;</span>Card Title<span class="text-pink-400">&lt;/h3&gt;</span>
  <span class="text-pink-400">&lt;p&gt;</span>Card content here...<span class="text-pink-400">&lt;/p&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Hover Effects -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Hover-Effekte</h2>
        <p class="text-gray-400 mb-6">
            Verschiedene Hover-Effekte für Cards.
        </p>

        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <div
                    class="p-5 rounded-xl bg-white/5 border border-white/10 text-center"
                    data-atlas="card"
                    data-hover="lift"
                >
                    <div class="w-10 h-10 mx-auto mb-3 rounded-lg bg-violet-500/20 flex items-center justify-center">
                        <svg class="w-5 h-5 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                        </svg>
                    </div>
                    <h4 class="font-medium text-white mb-1">Lift</h4>
                    <p class="text-xs text-gray-500">data-hover="lift"</p>
                </div>

                <div
                    class="p-5 rounded-xl bg-white/5 border border-white/10 text-center"
                    data-atlas="card"
                    data-hover="scale"
                >
                    <div class="w-10 h-10 mx-auto mb-3 rounded-lg bg-fuchsia-500/20 flex items-center justify-center">
                        <svg class="w-5 h-5 text-fuchsia-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
                        </svg>
                    </div>
                    <h4 class="font-medium text-white mb-1">Scale</h4>
                    <p class="text-xs text-gray-500">data-hover="scale"</p>
                </div>

                <div
                    class="p-5 rounded-xl bg-white/5 border border-white/10 text-center"
                    data-atlas="card"
                    data-hover="glow"
                >
                    <div class="w-10 h-10 mx-auto mb-3 rounded-lg bg-cyan-500/20 flex items-center justify-center">
                        <svg class="w-5 h-5 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                        </svg>
                    </div>
                    <h4 class="font-medium text-white mb-1">Glow</h4>
                    <p class="text-xs text-gray-500">data-hover="glow"</p>
                </div>

                <div
                    class="p-5 rounded-xl bg-white/5 border border-white/10 text-center"
                    data-atlas="card"
                    data-tilt="true"
                    data-tilt-max="15"
                >
                    <div class="w-10 h-10 mx-auto mb-3 rounded-lg bg-emerald-500/20 flex items-center justify-center">
                        <svg class="w-5 h-5 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                    </div>
                    <h4 class="font-medium text-white mb-1">3D Tilt</h4>
                    <p class="text-xs text-gray-500">data-tilt="true"</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Glass Cards -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Glass Cards</h2>
        <p class="text-gray-400 mb-6">
            Cards mit Glassmorphism-Effekt aus Atlas Styles.
        </p>

        <div class="mb-4 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div
                    class="cs-glass-card p-6"
                    data-atlas="card"
                    data-hover="lift"
                >
                    <h3 class="text-lg font-semibold text-white mb-2">Glass Card XS</h3>
                    <p class="text-gray-400 text-sm">
                        Mit cs-glass-xs für einen subtilen Glaseffekt.
                    </p>
                </div>

                <div
                    class="cs-glass-sm p-6 rounded-2xl"
                    data-atlas="card"
                    data-hover="lift"
                >
                    <h3 class="text-lg font-semibold text-white mb-2">Glass Card SM</h3>
                    <p class="text-gray-400 text-sm">
                        Mit cs-glass-sm für mehr Blur.
                    </p>
                </div>
            </div>
        </div>

        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="flex items-center justify-between px-4 py-3 border-b border-white/10">
                <span class="text-xs text-gray-500">HTML</span>
            </div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"cs-glass-card p-6"</span>
     <span class="text-violet-400">data-atlas</span>=<span class="text-emerald-400">"card"</span>
     <span class="text-violet-400">data-hover</span>=<span class="text-emerald-400">"lift"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;h3&gt;</span>Glass Card<span class="text-pink-400">&lt;/h3&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Card with Image -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Card mit Bild</h2>
        <p class="text-gray-400 mb-6">
            Cards können Bilder, Header und Footer enthalten.
        </p>

        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                <div
                    class="rounded-2xl bg-white/5 border border-white/10 overflow-hidden"
                    data-atlas="card"
                    data-hover="lift"
                >
                    <div class="aspect-video bg-gradient-to-br from-violet-500/30 to-fuchsia-500/30"></div>
                    <div class="p-5">
                        <h3 class="font-semibold text-white mb-2">Card mit Bild</h3>
                        <p class="text-sm text-gray-400 mb-4">
                            Beschreibungstext für diese Card.
                        </p>
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 rounded-full bg-violet-500/20"></div>
                            <div>
                                <p class="text-sm font-medium text-white">John Doe</p>
                                <p class="text-xs text-gray-500">vor 2 Stunden</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div
                    class="rounded-2xl bg-white/5 border border-white/10 overflow-hidden"
                    data-atlas="card"
                    data-hover="lift"
                >
                    <div class="aspect-video bg-gradient-to-br from-cyan-500/30 to-blue-500/30"></div>
                    <div class="p-5">
                        <span class="inline-block px-2 py-1 rounded text-xs font-medium bg-cyan-500/20 text-cyan-400 mb-2">
                            Tutorial
                        </span>
                        <h3 class="font-semibold text-white mb-2">Getting Started</h3>
                        <p class="text-sm text-gray-400">
                            Lerne die Grundlagen von Atlas UI.
                        </p>
                    </div>
                </div>

                <div
                    class="rounded-2xl bg-white/5 border border-white/10 overflow-hidden"
                    data-atlas="card"
                    data-hover="lift"
                >
                    <div class="aspect-video bg-gradient-to-br from-emerald-500/30 to-teal-500/30"></div>
                    <div class="p-5">
                        <div class="flex items-center justify-between mb-2">
                            <h3 class="font-semibold text-white">Pricing</h3>
                            <span class="text-emerald-400 font-bold">$99</span>
                        </div>
                        <p class="text-sm text-gray-400 mb-4">
                            Premium Paket für Teams.
                        </p>
                        <button
                            class="w-full py-2 rounded-lg bg-emerald-500 text-white text-sm font-medium hover:bg-emerald-600 transition-colors"
                            data-atlas="button"
                            data-ripple="true"
                        >
                            Kaufen
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Grid with Stagger -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Grid mit Stagger-Animation</h2>
        <p class="text-gray-400 mb-6">
            Cards können mit verzögerter Einblendung animiert werden.
        </p>

        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div
                class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4"
                data-atlas="grid"
                data-stagger="100"
            >
                {[1, 2, 3, 4].map((i) => (
                    <div
                        class="p-5 rounded-xl bg-white/5 border border-white/10 text-center"
                        data-atlas="card"
                        data-hover="lift"
                    >
                        <div class="text-2xl font-bold text-violet-400 mb-1">{i}</div>
                        <p class="text-sm text-gray-400">Card {i}</p>
                    </div>
                ))}
            </div>
        </div>

        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="flex items-center justify-between px-4 py-3 border-b border-white/10">
                <span class="text-xs text-gray-500">HTML</span>
            </div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span>
  <span class="text-violet-400">class</span>=<span class="text-emerald-400">"grid grid-cols-4 gap-4"</span>
  <span class="text-violet-400">data-atlas</span>=<span class="text-emerald-400">"grid"</span>
  <span class="text-violet-400">data-stagger</span>=<span class="text-emerald-400">"100"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;div</span> <span class="text-violet-400">data-atlas</span>=<span class="text-emerald-400">"card"</span><span class="text-pink-400">&gt;</span>Card 1<span class="text-pink-400">&lt;/div&gt;</span>
  <span class="text-pink-400">&lt;div</span> <span class="text-violet-400">data-atlas</span>=<span class="text-emerald-400">"card"</span><span class="text-pink-400">&gt;</span>Card 2<span class="text-pink-400">&lt;/div&gt;</span>
  <span class="text-pink-400">&lt;div</span> <span class="text-violet-400">data-atlas</span>=<span class="text-emerald-400">"card"</span><span class="text-pink-400">&gt;</span>Card 3<span class="text-pink-400">&lt;/div&gt;</span>
  <span class="text-pink-400">&lt;div</span> <span class="text-violet-400">data-atlas</span>=<span class="text-emerald-400">"card"</span><span class="text-pink-400">&gt;</span>Card 4<span class="text-pink-400">&lt;/div&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Navigation -->
    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/lists" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            <span>Lists</span>
        </a>
        <a href="/components/tables" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Tables</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </a>
    </div>
</DocsLayout>
