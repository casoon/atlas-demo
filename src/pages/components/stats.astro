---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Stats"
    description="Statistik-Anzeigen und KPIs"
    currentSection="components"
    currentPage="/components/stats"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Stats</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Stats</h1>
        <p class="text-gray-400 text-lg">Statistik-Komponenten zur Darstellung von KPIs und Metriken.</p>
    </div>

    <!-- Basic Stats -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Stats</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-3 gap-6">
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-sm text-gray-400 mb-1">Gesamtumsatz</p>
                    <p class="text-3xl font-bold text-white">€24.560</p>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-sm text-gray-400 mb-1">Bestellungen</p>
                    <p class="text-3xl font-bold text-white">1.234</p>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-sm text-gray-400 mb-1">Kunden</p>
                    <p class="text-3xl font-bold text-white">892</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"p-6 rounded-xl bg-[#1a1a2e]
  border border-white/10"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;p</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"text-sm text-gray-400"</span><span class="text-pink-400">&gt;</span>Label<span class="text-pink-400">&lt;/p&gt;</span>
  <span class="text-pink-400">&lt;p</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"text-3xl font-bold text-white"</span><span class="text-pink-400">&gt;</span>Value<span class="text-pink-400">&lt;/p&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- With Icons -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Icons</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-3 gap-6">
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 rounded-xl bg-violet-500/20 flex items-center justify-center">
                            <svg class="w-6 h-6 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        </div>
                    </div>
                    <p class="text-sm text-gray-400 mb-1">Umsatz</p>
                    <p class="text-2xl font-bold text-white">€42.580</p>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 rounded-xl bg-emerald-500/20 flex items-center justify-center">
                            <svg class="w-6 h-6 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                        </div>
                    </div>
                    <p class="text-sm text-gray-400 mb-1">Benutzer</p>
                    <p class="text-2xl font-bold text-white">2.340</p>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 rounded-xl bg-amber-500/20 flex items-center justify-center">
                            <svg class="w-6 h-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>
                        </div>
                    </div>
                    <p class="text-sm text-gray-400 mb-1">Wachstum</p>
                    <p class="text-2xl font-bold text-white">+12.5%</p>
                </div>
            </div>
        </div>
    </section>

    <!-- With Trend -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Trend</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-3 gap-6">
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-sm text-gray-400 mb-1">Verkäufe</p>
                    <div class="flex items-end gap-2">
                        <p class="text-2xl font-bold text-white">€12.450</p>
                        <span class="flex items-center text-sm text-emerald-400 mb-1">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" /></svg>
                            +8.2%
                        </span>
                    </div>
                    <p class="text-xs text-gray-500 mt-2">vs. letzten Monat</p>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-sm text-gray-400 mb-1">Ausgaben</p>
                    <div class="flex items-end gap-2">
                        <p class="text-2xl font-bold text-white">€3.240</p>
                        <span class="flex items-center text-sm text-red-400 mb-1">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" /></svg>
                            -2.4%
                        </span>
                    </div>
                    <p class="text-xs text-gray-500 mt-2">vs. letzten Monat</p>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <p class="text-sm text-gray-400 mb-1">Gewinn</p>
                    <div class="flex items-end gap-2">
                        <p class="text-2xl font-bold text-white">€9.210</p>
                        <span class="flex items-center text-sm text-emerald-400 mb-1">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" /></svg>
                            +12.8%
                        </span>
                    </div>
                    <p class="text-xs text-gray-500 mt-2">vs. letzten Monat</p>
                </div>
            </div>
        </div>
    </section>

    <!-- With Progress -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Fortschritt</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-2 gap-6">
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <div class="flex items-center justify-between mb-4">
                        <p class="text-sm text-gray-400">Speicher</p>
                        <span class="text-sm text-gray-400">75%</span>
                    </div>
                    <p class="text-2xl font-bold text-white mb-4">75 GB / 100 GB</p>
                    <div class="h-2 rounded-full bg-white/10 overflow-hidden">
                        <div class="h-full w-3/4 rounded-full bg-violet-500"></div>
                    </div>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                    <div class="flex items-center justify-between mb-4">
                        <p class="text-sm text-gray-400">Bandbreite</p>
                        <span class="text-sm text-gray-400">45%</span>
                    </div>
                    <p class="text-2xl font-bold text-white mb-4">45 GB / 100 GB</p>
                    <div class="h-2 rounded-full bg-white/10 overflow-hidden">
                        <div class="h-full w-[45%] rounded-full bg-emerald-500"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Ring Progress -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Ring-Fortschritt</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-3 gap-6">
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10 flex flex-col items-center">
                    <div class="relative w-24 h-24 mb-4">
                        <svg class="w-24 h-24 -rotate-90" viewBox="0 0 100 100">
                            <circle cx="50" cy="50" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-white/10" />
                            <circle cx="50" cy="50" r="40" stroke="currentColor" stroke-width="8" fill="none" stroke-dasharray="251.2" stroke-dashoffset="62.8" stroke-linecap="round" class="text-violet-500" />
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-xl font-bold text-white">75%</span>
                        </div>
                    </div>
                    <p class="text-sm text-gray-400">Abgeschlossen</p>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10 flex flex-col items-center">
                    <div class="relative w-24 h-24 mb-4">
                        <svg class="w-24 h-24 -rotate-90" viewBox="0 0 100 100">
                            <circle cx="50" cy="50" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-white/10" />
                            <circle cx="50" cy="50" r="40" stroke="currentColor" stroke-width="8" fill="none" stroke-dasharray="251.2" stroke-dashoffset="125.6" stroke-linecap="round" class="text-emerald-500" />
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-xl font-bold text-white">50%</span>
                        </div>
                    </div>
                    <p class="text-sm text-gray-400">In Bearbeitung</p>
                </div>
                <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10 flex flex-col items-center">
                    <div class="relative w-24 h-24 mb-4">
                        <svg class="w-24 h-24 -rotate-90" viewBox="0 0 100 100">
                            <circle cx="50" cy="50" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-white/10" />
                            <circle cx="50" cy="50" r="40" stroke="currentColor" stroke-width="8" fill="none" stroke-dasharray="251.2" stroke-dashoffset="0" stroke-linecap="round" class="text-amber-500" />
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-xl font-bold text-white">100%</span>
                        </div>
                    </div>
                    <p class="text-sm text-gray-400">Zielerreichung</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Horizontal Stats -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Horizontal</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="p-6 rounded-xl bg-[#1a1a2e] border border-white/10">
                <div class="flex items-center justify-between divide-x divide-white/10">
                    <div class="flex-1 text-center px-6">
                        <p class="text-3xl font-bold text-white">1.2M</p>
                        <p class="text-sm text-gray-400 mt-1">Aufrufe</p>
                    </div>
                    <div class="flex-1 text-center px-6">
                        <p class="text-3xl font-bold text-white">24.5K</p>
                        <p class="text-sm text-gray-400 mt-1">Follower</p>
                    </div>
                    <div class="flex-1 text-center px-6">
                        <p class="text-3xl font-bold text-white">890</p>
                        <p class="text-sm text-gray-400 mt-1">Posts</p>
                    </div>
                    <div class="flex-1 text-center px-6">
                        <p class="text-3xl font-bold text-white">5.2%</p>
                        <p class="text-sm text-gray-400 mt-1">Engagement</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Glass Style -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Glass Style</h2>
        <div class="mb-4 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <div class="grid grid-cols-3 gap-6">
                <div class="p-6 rounded-xl cs-glass-card border border-white/20">
                    <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center mb-4">
                        <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    </div>
                    <p class="text-sm text-white/60 mb-1">Umsatz</p>
                    <p class="text-2xl font-bold text-white">€89.400</p>
                </div>
                <div class="p-6 rounded-xl cs-glass-card border border-white/20">
                    <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center mb-4">
                        <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" /></svg>
                    </div>
                    <p class="text-sm text-white/60 mb-1">Bestellungen</p>
                    <p class="text-2xl font-bold text-white">2.840</p>
                </div>
                <div class="p-6 rounded-xl cs-glass-card border border-white/20">
                    <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center mb-4">
                        <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    </div>
                    <p class="text-sm text-white/60 mb-1">Erfolgsrate</p>
                    <p class="text-2xl font-bold text-white">98.5%</p>
                </div>
            </div>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/steps" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Steps</span>
        </a>
        <a href="/components/container" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Container</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
