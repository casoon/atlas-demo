---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Tables"
    description="Tabellen für strukturierte Daten"
    currentSection="components"
    currentPage="/components/tables"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Tables</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Tables</h1>
        <p class="text-gray-400 text-lg">Responsive Tabellen für die Darstellung strukturierter Daten.</p>
    </div>

    <!-- Basic Table -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Table</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <table class="w-full">
                <thead class="bg-white/5 border-b border-white/10">
                    <tr>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">Name</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">Email</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">Rolle</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/10">
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="px-6 py-4 text-sm text-white">Max Mustermann</td>
                        <td class="px-6 py-4 text-sm text-gray-400">max@example.com</td>
                        <td class="px-6 py-4 text-sm text-gray-400">Admin</td>
                        <td class="px-6 py-4"><span class="px-2 py-1 rounded-full text-xs bg-emerald-500/20 text-emerald-400">Aktiv</span></td>
                    </tr>
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="px-6 py-4 text-sm text-white">Anna Schmidt</td>
                        <td class="px-6 py-4 text-sm text-gray-400">anna@example.com</td>
                        <td class="px-6 py-4 text-sm text-gray-400">User</td>
                        <td class="px-6 py-4"><span class="px-2 py-1 rounded-full text-xs bg-emerald-500/20 text-emerald-400">Aktiv</span></td>
                    </tr>
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="px-6 py-4 text-sm text-white">Peter Weber</td>
                        <td class="px-6 py-4 text-sm text-gray-400">peter@example.com</td>
                        <td class="px-6 py-4 text-sm text-gray-400">Editor</td>
                        <td class="px-6 py-4"><span class="px-2 py-1 rounded-full text-xs bg-amber-500/20 text-amber-400">Ausstehend</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;table</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"w-full"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;thead</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"bg-white/5 border-b border-white/10"</span><span class="text-pink-400">&gt;</span>
    <span class="text-pink-400">&lt;tr&gt;</span>
      <span class="text-pink-400">&lt;th</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"px-6 py-4 text-left text-sm"</span><span class="text-pink-400">&gt;</span>Name<span class="text-pink-400">&lt;/th&gt;</span>
    <span class="text-pink-400">&lt;/tr&gt;</span>
  <span class="text-pink-400">&lt;/thead&gt;</span>
  <span class="text-pink-400">&lt;tbody</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"divide-y divide-white/10"</span><span class="text-pink-400">&gt;</span>
    <span class="text-pink-400">&lt;tr</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"hover:bg-white/5"</span><span class="text-pink-400">&gt;</span>
      <span class="text-pink-400">&lt;td</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"px-6 py-4 text-sm"</span><span class="text-pink-400">&gt;</span>...<span class="text-pink-400">&lt;/td&gt;</span>
    <span class="text-pink-400">&lt;/tr&gt;</span>
  <span class="text-pink-400">&lt;/tbody&gt;</span>
<span class="text-pink-400">&lt;/table&gt;</span></code></pre>
        </div>
    </section>

    <!-- Striped Table -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Striped Table</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <table class="w-full">
                <thead class="bg-white/5 border-b border-white/10">
                    <tr>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">Produkt</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">Kategorie</th>
                        <th class="px-6 py-4 text-right text-sm font-semibold text-white">Preis</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="bg-white/[0.02]">
                        <td class="px-6 py-4 text-sm text-white">Laptop Pro</td>
                        <td class="px-6 py-4 text-sm text-gray-400">Elektronik</td>
                        <td class="px-6 py-4 text-sm text-white text-right">€1.299</td>
                    </tr>
                    <tr>
                        <td class="px-6 py-4 text-sm text-white">Wireless Mouse</td>
                        <td class="px-6 py-4 text-sm text-gray-400">Zubehör</td>
                        <td class="px-6 py-4 text-sm text-white text-right">€49</td>
                    </tr>
                    <tr class="bg-white/[0.02]">
                        <td class="px-6 py-4 text-sm text-white">USB-C Hub</td>
                        <td class="px-6 py-4 text-sm text-gray-400">Zubehör</td>
                        <td class="px-6 py-4 text-sm text-white text-right">€79</td>
                    </tr>
                    <tr>
                        <td class="px-6 py-4 text-sm text-white">Monitor 27"</td>
                        <td class="px-6 py-4 text-sm text-gray-400">Elektronik</td>
                        <td class="px-6 py-4 text-sm text-white text-right">€449</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Table with Actions -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Aktionen</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <table class="w-full">
                <thead class="bg-white/5 border-b border-white/10">
                    <tr>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">
                            <input type="checkbox" class="rounded border-white/20 bg-white/5" />
                        </th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">Name</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">Status</th>
                        <th class="px-6 py-4 text-right text-sm font-semibold text-white">Aktionen</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/10">
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="px-6 py-4"><input type="checkbox" class="rounded border-white/20 bg-white/5" /></td>
                        <td class="px-6 py-4 text-sm text-white">Projekt Alpha</td>
                        <td class="px-6 py-4"><span class="px-2 py-1 rounded-full text-xs bg-emerald-500/20 text-emerald-400">Aktiv</span></td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <button class="p-2 rounded-lg hover:bg-white/10 text-gray-400 hover:text-white transition-colors">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>
                                </button>
                                <button class="p-2 rounded-lg hover:bg-red-500/20 text-gray-400 hover:text-red-400 transition-colors">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="px-6 py-4"><input type="checkbox" class="rounded border-white/20 bg-white/5" /></td>
                        <td class="px-6 py-4 text-sm text-white">Projekt Beta</td>
                        <td class="px-6 py-4"><span class="px-2 py-1 rounded-full text-xs bg-amber-500/20 text-amber-400">In Bearbeitung</span></td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <button class="p-2 rounded-lg hover:bg-white/10 text-gray-400 hover:text-white transition-colors">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>
                                </button>
                                <button class="p-2 rounded-lg hover:bg-red-500/20 text-gray-400 hover:text-red-400 transition-colors">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                                </button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Compact Table -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Kompakt</h2>
        <div class="mb-4 rounded-xl bg-white/5 border border-white/10 overflow-hidden">
            <table class="w-full">
                <thead class="bg-white/5 border-b border-white/10">
                    <tr>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-white uppercase tracking-wider">ID</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-white uppercase tracking-wider">Ereignis</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-white uppercase tracking-wider">Datum</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/10">
                    <tr><td class="px-4 py-2 text-xs text-gray-400">#001</td><td class="px-4 py-2 text-xs text-white">Login erfolgreich</td><td class="px-4 py-2 text-xs text-gray-400">Heute, 14:32</td></tr>
                    <tr><td class="px-4 py-2 text-xs text-gray-400">#002</td><td class="px-4 py-2 text-xs text-white">Datei hochgeladen</td><td class="px-4 py-2 text-xs text-gray-400">Heute, 14:28</td></tr>
                    <tr><td class="px-4 py-2 text-xs text-gray-400">#003</td><td class="px-4 py-2 text-xs text-white">Einstellungen geändert</td><td class="px-4 py-2 text-xs text-gray-400">Gestern, 09:15</td></tr>
                </tbody>
            </table>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/cards" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Cards</span>
        </a>
        <a href="/components/lists" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Lists</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
