---
import DocsLayout from "@layouts/DocsLayout.astro";

const sidebar = [
    {
        title: "Getting Started",
        items: [
            { label: "Installation", href: "/components" },
            { label: "Usage", href: "/components/usage" }
        ]
    },
    {
        title: "Actions",
        items: [
            { label: "Buttons", href: "/components/buttons" },
            { label: "Button Groups", href: "/components/button-groups" },
            { label: "Dropdowns", href: "/components/dropdowns" }
        ]
    },
    {
        title: "Forms",
        items: [
            { label: "Inputs", href: "/components/inputs" },
            { label: "Select", href: "/components/select" },
            { label: "Checkbox & Radio", href: "/components/checkbox-radio" },
            { label: "Toggle", href: "/components/toggle" },
            { label: "Range Slider", href: "/components/range" },
            { label: "File Upload", href: "/components/file-upload" }
        ]
    },
    {
        title: "Data Display",
        items: [
            { label: "Cards", href: "/components/cards" },
            { label: "Tables", href: "/components/tables" },
            { label: "Lists", href: "/components/lists" },
            { label: "Badges", href: "/components/badges" },
            { label: "Avatars", href: "/components/avatars" },
            { label: "Stats", href: "/components/stats" }
        ]
    },
    {
        title: "Feedback",
        items: [
            { label: "Alerts", href: "/components/alerts" },
            { label: "Toast", href: "/components/toast", badge: "New" },
            { label: "Progress", href: "/components/progress" },
            { label: "Skeleton", href: "/components/skeleton" },
            { label: "Spinner", href: "/components/spinner" }
        ]
    },
    {
        title: "Overlay",
        items: [
            { label: "Modals", href: "/components/modals" },
            { label: "Drawer", href: "/components/drawer" },
            { label: "Tooltip", href: "/components/tooltip" },
            { label: "Popover", href: "/components/popover" }
        ]
    },
    {
        title: "Navigation",
        items: [
            { label: "Navbar", href: "/components/navbar" },
            { label: "Sidebar", href: "/components/sidebar" },
            { label: "Tabs", href: "/components/tabs" },
            { label: "Breadcrumb", href: "/components/breadcrumb" },
            { label: "Pagination", href: "/components/pagination" },
            { label: "Steps", href: "/components/steps" }
        ]
    },
    {
        title: "Layout",
        items: [
            { label: "Container", href: "/components/container" },
            { label: "Grid", href: "/components/grid" },
            { label: "Divider", href: "/components/divider" },
            { label: "Spacer", href: "/components/spacer" }
        ]
    }
];

const categories = [
    {
        title: "Actions",
        description: "Buttons, Dropdowns und interaktive Elemente",
        icon: "cursor",
        href: "/components/buttons",
        count: 3
    },
    {
        title: "Forms",
        description: "Inputs, Selects, Checkboxen und mehr",
        icon: "form",
        href: "/components/inputs",
        count: 6
    },
    {
        title: "Data Display",
        description: "Cards, Tables, Badges und Avatars",
        icon: "table",
        href: "/components/cards",
        count: 6
    },
    {
        title: "Feedback",
        description: "Alerts, Toasts, Progress und Loading States",
        icon: "bell",
        href: "/components/alerts",
        count: 5
    },
    {
        title: "Overlay",
        description: "Modals, Drawers, Tooltips und Popovers",
        icon: "layers",
        href: "/components/modals",
        count: 4
    },
    {
        title: "Navigation",
        description: "Navbars, Sidebars, Tabs und Pagination",
        icon: "menu",
        href: "/components/navbar",
        count: 6
    }
];

const icons: Record<string, string> = {
    cursor: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122" />`,
    form: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />`,
    table: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />`,
    bell: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />`,
    layers: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />`,
    menu: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />`
};
---

<DocsLayout
    title="Components"
    description="UI-Komponenten für moderne Webprojekte"
    currentSection="components"
    currentPage="/components"
    sidebar={sidebar}
>
    <!-- Page Header -->
    <div class="mb-12">
        <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-violet-500 to-purple-600 flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-white">Components</h1>
                <p class="text-gray-400">50+ fertige UI-Komponenten</p>
            </div>
        </div>

        <p class="text-gray-400 text-lg max-w-2xl">
            Eine Sammlung von modernen UI-Komponenten, die mit dem Atlas Framework erstellt wurden.
            Jede Komponente ist responsive, accessible und einfach zu verwenden.
        </p>
    </div>

    <!-- Installation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Installation</h2>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="flex items-center justify-between px-4 py-3 border-b border-white/10">
                <span class="text-xs text-gray-500">Terminal</span>
                <button
                    class="p-1.5 rounded hover:bg-white/10 transition-colors text-gray-400 hover:text-white"
                    onclick="navigator.clipboard.writeText('npm install @casoon/atlas-styles @casoon/atlas-components')"
                >
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                </button>
            </div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300">npm install @casoon/atlas-styles @casoon/atlas-components</code></pre>
        </div>
    </section>

    <!-- Categories Grid -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-6">Kategorien</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4" data-atlas="grid" data-stagger="75">
            {categories.map((category) => (
                <a
                    href={category.href}
                    class="group block p-5 rounded-xl bg-white/5 border border-white/10 hover:border-violet-500/50 transition-all duration-300"
                    data-atlas="card"
                    data-hover="lift"
                >
                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 rounded-lg bg-violet-500/20 flex items-center justify-center flex-shrink-0 group-hover:bg-violet-500/30 transition-colors">
                            <svg class="w-5 h-5 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[category.icon]} />
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center justify-between mb-1">
                                <h3 class="font-semibold text-white group-hover:text-violet-400 transition-colors">
                                    {category.title}
                                </h3>
                                <span class="text-xs text-gray-500">{category.count} items</span>
                            </div>
                            <p class="text-sm text-gray-400">{category.description}</p>
                        </div>
                    </div>
                </a>
            ))}
        </div>
    </section>

    <!-- Quick Start -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Quick Start</h2>
        <p class="text-gray-400 mb-4">
            Importiere die Styles und initialisiere die Komponenten:
        </p>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="flex items-center gap-2 px-4 py-3 border-b border-white/10">
                <span class="text-xs text-gray-500">main.js</span>
            </div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-violet-400">import</span> <span class="text-emerald-400">"@casoon/atlas-styles"</span>;
<span class="text-violet-400">import</span> {"{"} atlasInit {"}"} <span class="text-violet-400">from</span> <span class="text-emerald-400">"@casoon/atlas-components"</span>;

<span class="text-gray-500">// Initialize all Atlas components</span>
atlasInit();</code></pre>
        </div>
    </section>

    <!-- Example Component -->
    <section>
        <h2 class="text-xl font-semibold text-white mb-4">Beispiel: Button</h2>
        <p class="text-gray-400 mb-4">
            Ein einfaches Beispiel für einen Button mit Ripple-Effekt:
        </p>

        <!-- Preview -->
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center gap-4 flex-wrap">
            <button
                class="px-6 py-3 rounded-xl bg-gradient-to-r from-violet-500 to-purple-600 text-white font-medium shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 transition-all duration-300"
                data-atlas="button"
                data-ripple="true"
            >
                Primary Button
            </button>
            <button
                class="px-6 py-3 rounded-xl bg-white/5 border border-white/10 text-white font-medium hover:bg-white/10 transition-all duration-300"
                data-atlas="button"
                data-ripple="true"
            >
                Secondary Button
            </button>
            <button
                class="px-6 py-3 rounded-xl text-violet-400 font-medium hover:bg-violet-500/10 transition-all duration-300"
                data-atlas="button"
                data-ripple="true"
            >
                Ghost Button
            </button>
        </div>

        <!-- Code -->
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="flex items-center justify-between px-4 py-3 border-b border-white/10">
                <span class="text-xs text-gray-500">HTML</span>
                <button
                    class="p-1.5 rounded hover:bg-white/10 transition-colors text-gray-400 hover:text-white"
                    onclick="navigator.clipboard.writeText(document.getElementById('button-code').textContent)"
                >
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                </button>
            </div>
            <pre class="p-4 text-sm overflow-x-auto"><code id="button-code" class="text-gray-300"><span class="text-pink-400">&lt;button</span>
  <span class="text-violet-400">class</span>=<span class="text-emerald-400">"px-6 py-3 rounded-xl bg-gradient-to-r
         from-violet-500 to-purple-600 text-white"</span>
  <span class="text-violet-400">data-atlas</span>=<span class="text-emerald-400">"button"</span>
  <span class="text-violet-400">data-ripple</span>=<span class="text-emerald-400">"true"</span><span class="text-pink-400">&gt;</span>
  Primary Button
<span class="text-pink-400">&lt;/button&gt;</span></code></pre>
        </div>
    </section>
</DocsLayout>
