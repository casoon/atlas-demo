---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Button Groups"
    description="Gruppierte Buttons für zusammengehörige Aktionen"
    currentSection="components"
    currentPage="/components/button-groups"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Button Groups</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Button Groups</h1>
        <p class="text-gray-400 text-lg">Gruppierte Buttons für zusammengehörige Aktionen.</p>
    </div>

    <!-- Basic Button Group -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Button Group</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="inline-flex rounded-xl overflow-hidden border border-white/10">
                <button class="px-4 py-2 bg-violet-500 text-white hover:bg-violet-600 transition-colors">Links</button>
                <button class="px-4 py-2 bg-white/5 text-white hover:bg-white/10 transition-colors border-l border-white/10">Mitte</button>
                <button class="px-4 py-2 bg-white/5 text-white hover:bg-white/10 transition-colors border-l border-white/10">Rechts</button>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"inline-flex rounded-xl overflow-hidden
  border border-white/10"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"px-4 py-2 bg-violet-500"</span><span class="text-pink-400">&gt;</span>Links<span class="text-pink-400">&lt;/button&gt;</span>
  <span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"px-4 py-2 bg-white/5 border-l"</span><span class="text-pink-400">&gt;</span>Mitte<span class="text-pink-400">&lt;/button&gt;</span>
  <span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"px-4 py-2 bg-white/5 border-l"</span><span class="text-pink-400">&gt;</span>Rechts<span class="text-pink-400">&lt;/button&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Outline Style -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Outline Style</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="inline-flex">
                <button class="px-4 py-2 rounded-l-xl border border-violet-500 text-violet-400 hover:bg-violet-500/10 transition-colors">Option 1</button>
                <button class="px-4 py-2 border-y border-violet-500 text-violet-400 hover:bg-violet-500/10 transition-colors">Option 2</button>
                <button class="px-4 py-2 rounded-r-xl border border-violet-500 text-violet-400 hover:bg-violet-500/10 transition-colors">Option 3</button>
            </div>
        </div>
    </section>

    <!-- With Icons -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Icons</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="inline-flex rounded-xl overflow-hidden border border-white/10">
                <button class="p-3 bg-white/5 text-gray-400 hover:text-white hover:bg-white/10 transition-colors">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
                </button>
                <button class="p-3 bg-violet-500 text-white transition-colors border-l border-white/10">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" /></svg>
                </button>
                <button class="p-3 bg-white/5 text-gray-400 hover:text-white hover:bg-white/10 transition-colors border-l border-white/10">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" /></svg>
                </button>
            </div>
        </div>
    </section>

    <!-- Sizes -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Größen</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10 space-y-4">
            <!-- Small -->
            <div>
                <span class="text-xs text-gray-400 mb-2 block">Small</span>
                <div class="inline-flex rounded-lg overflow-hidden border border-white/10">
                    <button class="px-3 py-1.5 text-sm bg-violet-500 text-white">Eins</button>
                    <button class="px-3 py-1.5 text-sm bg-white/5 text-white border-l border-white/10">Zwei</button>
                    <button class="px-3 py-1.5 text-sm bg-white/5 text-white border-l border-white/10">Drei</button>
                </div>
            </div>
            <!-- Default -->
            <div>
                <span class="text-xs text-gray-400 mb-2 block">Default</span>
                <div class="inline-flex rounded-xl overflow-hidden border border-white/10">
                    <button class="px-4 py-2 bg-violet-500 text-white">Eins</button>
                    <button class="px-4 py-2 bg-white/5 text-white border-l border-white/10">Zwei</button>
                    <button class="px-4 py-2 bg-white/5 text-white border-l border-white/10">Drei</button>
                </div>
            </div>
            <!-- Large -->
            <div>
                <span class="text-xs text-gray-400 mb-2 block">Large</span>
                <div class="inline-flex rounded-2xl overflow-hidden border border-white/10">
                    <button class="px-6 py-3 text-lg bg-violet-500 text-white">Eins</button>
                    <button class="px-6 py-3 text-lg bg-white/5 text-white border-l border-white/10">Zwei</button>
                    <button class="px-6 py-3 text-lg bg-white/5 text-white border-l border-white/10">Drei</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Segmented Control -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Segmented Control</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="inline-flex p-1 rounded-xl bg-white/5">
                <button class="px-4 py-2 rounded-lg bg-violet-500 text-white text-sm font-medium">Tag</button>
                <button class="px-4 py-2 rounded-lg text-gray-400 hover:text-white text-sm font-medium transition-colors">Woche</button>
                <button class="px-4 py-2 rounded-lg text-gray-400 hover:text-white text-sm font-medium transition-colors">Monat</button>
                <button class="px-4 py-2 rounded-lg text-gray-400 hover:text-white text-sm font-medium transition-colors">Jahr</button>
            </div>
        </div>
    </section>

    <!-- Split Button -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Split Button</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="inline-flex rounded-xl overflow-hidden">
                <button class="px-4 py-2 bg-violet-500 text-white hover:bg-violet-600 transition-colors">
                    Speichern
                </button>
                <button class="px-2 py-2 bg-violet-600 text-white hover:bg-violet-700 transition-colors border-l border-violet-400">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                </button>
            </div>
        </div>
    </section>

    <!-- Vertical Group -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Vertikal</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="inline-flex flex-col rounded-xl overflow-hidden border border-white/10">
                <button class="px-4 py-2 bg-violet-500 text-white hover:bg-violet-600 transition-colors">Option 1</button>
                <button class="px-4 py-2 bg-white/5 text-white hover:bg-white/10 transition-colors border-t border-white/10">Option 2</button>
                <button class="px-4 py-2 bg-white/5 text-white hover:bg-white/10 transition-colors border-t border-white/10">Option 3</button>
            </div>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/buttons" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Buttons</span>
        </a>
        <a href="/components/dropdowns" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Dropdowns</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
