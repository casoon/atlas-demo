---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Lists"
    description="Listen-Komponenten für strukturierte Daten"
    currentSection="components"
    currentPage="/components/lists"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Lists</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Lists</h1>
        <p class="text-gray-400 text-lg">Listen für die Darstellung von Elementen und Daten.</p>
    </div>

    <!-- Basic List -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic List</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <ul class="max-w-md divide-y divide-white/10">
                <li class="py-3 text-white">Erstes Element</li>
                <li class="py-3 text-white">Zweites Element</li>
                <li class="py-3 text-white">Drittes Element</li>
            </ul>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;ul</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"divide-y divide-white/10"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;li</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"py-3 text-white"</span><span class="text-pink-400">&gt;</span>Item<span class="text-pink-400">&lt;/li&gt;</span>
  <span class="text-pink-400">&lt;li</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"py-3 text-white"</span><span class="text-pink-400">&gt;</span>Item<span class="text-pink-400">&lt;/li&gt;</span>
<span class="text-pink-400">&lt;/ul&gt;</span></code></pre>
        </div>
    </section>

    <!-- With Avatar -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Avatar</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <ul class="max-w-md divide-y divide-white/10">
                <li class="flex items-center gap-4 py-4">
                    <div class="w-10 h-10 rounded-full bg-violet-500 flex items-center justify-center text-white font-semibold">MM</div>
                    <div class="flex-1">
                        <p class="text-white font-medium">Max Mustermann</p>
                        <p class="text-sm text-gray-400">max@example.com</p>
                    </div>
                </li>
                <li class="flex items-center gap-4 py-4">
                    <div class="w-10 h-10 rounded-full bg-emerald-500 flex items-center justify-center text-white font-semibold">AS</div>
                    <div class="flex-1">
                        <p class="text-white font-medium">Anna Schmidt</p>
                        <p class="text-sm text-gray-400">anna@example.com</p>
                    </div>
                </li>
                <li class="flex items-center gap-4 py-4">
                    <div class="w-10 h-10 rounded-full bg-amber-500 flex items-center justify-center text-white font-semibold">PW</div>
                    <div class="flex-1">
                        <p class="text-white font-medium">Peter Weber</p>
                        <p class="text-sm text-gray-400">peter@example.com</p>
                    </div>
                </li>
            </ul>
        </div>
    </section>

    <!-- With Actions -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Aktionen</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <ul class="max-w-md divide-y divide-white/10">
                <li class="flex items-center justify-between py-4">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-lg bg-violet-500/20 flex items-center justify-center">
                            <svg class="w-5 h-5 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                        </div>
                        <div>
                            <p class="text-white font-medium">Dokument.pdf</p>
                            <p class="text-sm text-gray-400">2.4 MB</p>
                        </div>
                    </div>
                    <button class="p-2 rounded-lg hover:bg-white/10 text-gray-400 hover:text-white transition-colors">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
                    </button>
                </li>
                <li class="flex items-center justify-between py-4">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-lg bg-cyan-500/20 flex items-center justify-center">
                            <svg class="w-5 h-5 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                        </div>
                        <div>
                            <p class="text-white font-medium">Bild.png</p>
                            <p class="text-sm text-gray-400">1.8 MB</p>
                        </div>
                    </div>
                    <button class="p-2 rounded-lg hover:bg-white/10 text-gray-400 hover:text-white transition-colors">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
                    </button>
                </li>
            </ul>
        </div>
    </section>

    <!-- Selectable List -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Selektierbar</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <ul class="max-w-md space-y-2">
                <li class="flex items-center gap-3 p-3 rounded-xl bg-violet-500/20 border border-violet-500/30 cursor-pointer">
                    <div class="w-5 h-5 rounded-full bg-violet-500 flex items-center justify-center">
                        <svg class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /></svg>
                    </div>
                    <span class="text-white">Option 1</span>
                </li>
                <li class="flex items-center gap-3 p-3 rounded-xl bg-white/5 border border-white/10 cursor-pointer hover:bg-white/10 transition-colors">
                    <div class="w-5 h-5 rounded-full border-2 border-white/20"></div>
                    <span class="text-gray-400">Option 2</span>
                </li>
                <li class="flex items-center gap-3 p-3 rounded-xl bg-white/5 border border-white/10 cursor-pointer hover:bg-white/10 transition-colors">
                    <div class="w-5 h-5 rounded-full border-2 border-white/20"></div>
                    <span class="text-gray-400">Option 3</span>
                </li>
            </ul>
        </div>
    </section>

    <!-- Nested List -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Verschachtelt</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <ul class="max-w-md space-y-2">
                <li>
                    <div class="flex items-center gap-2 p-2 text-white">
                        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" /></svg>
                        Ordner
                    </div>
                    <ul class="ml-6 mt-1 space-y-1 border-l border-white/10 pl-4">
                        <li class="flex items-center gap-2 p-2 text-gray-400 hover:text-white cursor-pointer">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                            Datei 1
                        </li>
                        <li class="flex items-center gap-2 p-2 text-gray-400 hover:text-white cursor-pointer">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                            Datei 2
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/tables" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Tables</span>
        </a>
        <a href="/components/badges" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Badges</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
