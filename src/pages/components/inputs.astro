---
import DocsLayout from "@layouts/DocsLayout.astro";
import { componentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Inputs"
    description="Input-Komponenten für Formulare"
    currentSection="components"
    currentPage="/components/inputs"
    sidebar={componentsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/components" class="hover:text-white transition-colors">Components</a>
            <span>/</span>
            <span class="text-white">Inputs</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Inputs</h1>
        <p class="text-gray-400 text-lg">
            Formular-Eingabefelder mit verschiedenen Stilen und Zuständen.
        </p>
    </div>

    <!-- Basic Input -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Input</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Label</label>
                    <input type="text" placeholder="Placeholder text" class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder:text-gray-500 focus:outline-none focus:border-violet-500 focus:ring-1 focus:ring-violet-500 transition-colors" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Mit Hilfetext</label>
                    <input type="text" placeholder="Email eingeben" class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder:text-gray-500 focus:outline-none focus:border-violet-500 transition-colors" />
                    <p class="mt-2 text-sm text-gray-500">Wir werden Ihre Email niemals teilen.</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;input</span> <span class="text-violet-400">type</span>=<span class="text-emerald-400">"text"</span> <span class="text-violet-400">placeholder</span>=<span class="text-emerald-400">"..."</span>
  <span class="text-violet-400">class</span>=<span class="text-emerald-400">"w-full px-4 py-3 rounded-xl bg-white/5
    border border-white/10 text-white
    focus:border-violet-500 focus:ring-1"</span> <span class="text-pink-400">/&gt;</span></code></pre>
        </div>
    </section>

    <!-- Input with Icons -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Icons</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md space-y-4">
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                        <svg class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                    <input type="text" placeholder="Suchen..." class="w-full pl-12 pr-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder:text-gray-500 focus:outline-none focus:border-violet-500" />
                </div>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                        <svg class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <input type="email" placeholder="Email" class="w-full pl-12 pr-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder:text-gray-500 focus:outline-none focus:border-violet-500" />
                </div>
            </div>
        </div>
    </section>

    <!-- Input States -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Zustände</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="max-w-md space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Disabled</label>
                    <input type="text" value="Disabled Input" disabled class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-gray-500 cursor-not-allowed opacity-50" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Error</label>
                    <input type="text" value="Error Input" class="w-full px-4 py-3 rounded-xl bg-red-500/10 border border-red-500 text-white focus:outline-none" />
                    <p class="mt-2 text-sm text-red-400">Dieses Feld ist erforderlich.</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Success</label>
                    <input type="text" value="Valid Input" class="w-full px-4 py-3 rounded-xl bg-emerald-500/10 border border-emerald-500 text-white focus:outline-none" />
                    <p class="mt-2 text-sm text-emerald-400">Sieht gut aus!</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Glass Input -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Glass Input</h2>
        <div class="mb-4 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <div class="max-w-md space-y-4">
                <input type="text" placeholder="Glass Input" class="cs-input-glass w-full px-4 py-3 rounded-xl text-white placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-violet-500/50" />
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;input</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"cs-input-glass ..."</span> <span class="text-pink-400">/&gt;</span></code></pre>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/components/dropdowns" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Dropdowns</span>
        </a>
        <a href="/components/select" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Select</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
