---
import DocsLayout from "@layouts/DocsLayout.astro";
import { webComponentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="atlas-tabs"
    description="Tabbed interface component for organizing content into switchable panels"
    currentSection="web-components"
    currentPage="/web-components/tabs"
    sidebar={webComponentsSidebar}
>
    <nav class="mb-6 text-sm breadcrumbs">
        <ul class="flex gap-2 text-surface-400">
            <li><a href="/web-components" class="hover:text-primary-400">Web Components</a></li>
            <li class="before:content-['/'] before:mr-2">atlas-tabs</li>
        </ul>
    </nav>

    <header class="mb-12">
        <h1 class="text-4xl font-bold text-surface-900 mb-4">atlas-tabs</h1>
        <p class="text-xl text-surface-600 max-w-3xl">
            A tabbed interface component for organizing content into switchable panels with keyboard navigation.
        </p>
    </header>

    <!-- Basic Tabs -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Basic Tabs</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="bg-white rounded-lg border border-surface-200 overflow-hidden">
                <div class="flex border-b border-surface-200">
                    <button class="px-6 py-3 text-primary-600 border-b-2 border-primary-500 font-medium">Tab 1</button>
                    <button class="px-6 py-3 text-surface-600 hover:text-surface-800">Tab 2</button>
                    <button class="px-6 py-3 text-surface-600 hover:text-surface-800">Tab 3</button>
                </div>
                <div class="p-6">
                    <p class="text-surface-600">Content for Tab 1. Click other tabs to switch content.</p>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-tabs&gt;
    &lt;atlas-tab label="Tab 1"&gt;
        &lt;p&gt;Content for Tab 1&lt;/p&gt;
    &lt;/atlas-tab&gt;
    &lt;atlas-tab label="Tab 2"&gt;
        &lt;p&gt;Content for Tab 2&lt;/p&gt;
    &lt;/atlas-tab&gt;
    &lt;atlas-tab label="Tab 3"&gt;
        &lt;p&gt;Content for Tab 3&lt;/p&gt;
    &lt;/atlas-tab&gt;
&lt;/atlas-tabs&gt;</code></pre>
    </section>

    <!-- Tab Variants -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Variants</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="space-y-6">
                <div>
                    <p class="text-sm text-surface-500 mb-2">Underline (default)</p>
                    <div class="flex border-b border-surface-200">
                        <button class="px-4 py-2 text-primary-600 border-b-2 border-primary-500">Active</button>
                        <button class="px-4 py-2 text-surface-600">Tab</button>
                        <button class="px-4 py-2 text-surface-600">Tab</button>
                    </div>
                </div>
                <div>
                    <p class="text-sm text-surface-500 mb-2">Pills</p>
                    <div class="flex gap-2">
                        <button class="px-4 py-2 bg-primary-500 text-white rounded-full">Active</button>
                        <button class="px-4 py-2 text-surface-600 hover:bg-surface-100 rounded-full">Tab</button>
                        <button class="px-4 py-2 text-surface-600 hover:bg-surface-100 rounded-full">Tab</button>
                    </div>
                </div>
                <div>
                    <p class="text-sm text-surface-500 mb-2">Boxed</p>
                    <div class="flex bg-surface-100 p-1 rounded-lg">
                        <button class="px-4 py-2 bg-white text-surface-800 rounded-md shadow-sm">Active</button>
                        <button class="px-4 py-2 text-surface-600">Tab</button>
                        <button class="px-4 py-2 text-surface-600">Tab</button>
                    </div>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-tabs variant="underline"&gt;...&lt;/atlas-tabs&gt;
&lt;atlas-tabs variant="pills"&gt;...&lt;/atlas-tabs&gt;
&lt;atlas-tabs variant="boxed"&gt;...&lt;/atlas-tabs&gt;</code></pre>
    </section>

    <!-- With Icons -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">With Icons</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex border-b border-surface-200">
                <button class="flex items-center gap-2 px-6 py-3 text-primary-600 border-b-2 border-primary-500">
                    <span>üè†</span> Home
                </button>
                <button class="flex items-center gap-2 px-6 py-3 text-surface-600">
                    <span>üë§</span> Profile
                </button>
                <button class="flex items-center gap-2 px-6 py-3 text-surface-600">
                    <span>‚öôÔ∏è</span> Settings
                </button>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-tabs&gt;
    &lt;atlas-tab label="Home" icon="home"&gt;...&lt;/atlas-tab&gt;
    &lt;atlas-tab label="Profile" icon="user"&gt;...&lt;/atlas-tab&gt;
    &lt;atlas-tab label="Settings" icon="settings"&gt;...&lt;/atlas-tab&gt;
&lt;/atlas-tabs&gt;</code></pre>
    </section>

    <!-- Vertical Tabs -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Vertical Tabs</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex bg-white rounded-lg border border-surface-200 overflow-hidden">
                <div class="flex flex-col border-r border-surface-200 w-40">
                    <button class="px-4 py-3 text-left text-primary-600 bg-primary-50 border-l-2 border-primary-500">General</button>
                    <button class="px-4 py-3 text-left text-surface-600 hover:bg-surface-50">Security</button>
                    <button class="px-4 py-3 text-left text-surface-600 hover:bg-surface-50">Notifications</button>
                </div>
                <div class="flex-1 p-6">
                    <h3 class="font-semibold text-surface-800 mb-2">General Settings</h3>
                    <p class="text-surface-600">Configure your general preferences here.</p>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-tabs orientation="vertical"&gt;
    &lt;atlas-tab label="General"&gt;
        &lt;h3&gt;General Settings&lt;/h3&gt;
        &lt;p&gt;Configure your general preferences.&lt;/p&gt;
    &lt;/atlas-tab&gt;
    &lt;atlas-tab label="Security"&gt;...&lt;/atlas-tab&gt;
    &lt;atlas-tab label="Notifications"&gt;...&lt;/atlas-tab&gt;
&lt;/atlas-tabs&gt;</code></pre>
    </section>

    <!-- Disabled Tab -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Disabled Tabs</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex border-b border-surface-200">
                <button class="px-6 py-3 text-primary-600 border-b-2 border-primary-500">Active</button>
                <button class="px-6 py-3 text-surface-600 hover:text-surface-800">Normal</button>
                <button class="px-6 py-3 text-surface-300 cursor-not-allowed">Disabled</button>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-tabs&gt;
    &lt;atlas-tab label="Active"&gt;...&lt;/atlas-tab&gt;
    &lt;atlas-tab label="Normal"&gt;...&lt;/atlas-tab&gt;
    &lt;atlas-tab label="Disabled" disabled&gt;...&lt;/atlas-tab&gt;
&lt;/atlas-tabs&gt;</code></pre>
    </section>

    <!-- JavaScript API -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">JavaScript API</h2>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>const tabs = document.querySelector('atlas-tabs');

// Select tab by index
tabs.selectTab(0);
tabs.selectTab(2);

// Get active tab
console.log(tabs.activeIndex);
console.log(tabs.activeTab);

// Listen for tab changes
tabs.addEventListener('change', (e) =&gt; {'{'}
    console.log('Selected tab:', e.detail.index);
    console.log('Tab label:', e.detail.label);
{'}'});</code></pre>
    </section>

    <!-- Properties -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Properties</h2>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-surface-200">
                        <th class="py-4 px-4 text-surface-900 font-semibold">Property</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Type</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Default</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Description</th>
                    </tr>
                </thead>
                <tbody class="text-surface-600">
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">variant</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"underline"</td>
                        <td class="py-4 px-4">Style variant (underline, pills, boxed)</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">orientation</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"horizontal"</td>
                        <td class="py-4 px-4">Tab orientation (horizontal, vertical)</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">default-index</code></td>
                        <td class="py-4 px-4">number</td>
                        <td class="py-4 px-4">0</td>
                        <td class="py-4 px-4">Initially selected tab index</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">lazy</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">false</td>
                        <td class="py-4 px-4">Only render active tab content</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Tab Properties -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Tab Properties</h2>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-surface-200">
                        <th class="py-4 px-4 text-surface-900 font-semibold">Property</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Type</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Description</th>
                    </tr>
                </thead>
                <tbody class="text-surface-600">
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">label</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">Tab button text</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">icon</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">Icon name to display</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">disabled</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">Disable this tab</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

</DocsLayout>
