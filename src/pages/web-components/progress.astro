---
import DocsLayout from "@layouts/DocsLayout.astro";
import { webComponentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="atlas-progress"
    description="Progress bar component for showing completion status"
    currentSection="web-components"
    currentPage="/web-components/progress"
    sidebar={webComponentsSidebar}
>
    <nav class="mb-6 text-sm breadcrumbs">
        <ul class="flex gap-2 text-surface-400">
            <li><a href="/web-components" class="hover:text-primary-400">Web Components</a></li>
            <li class="before:content-['/'] before:mr-2">atlas-progress</li>
        </ul>
    </nav>

    <header class="mb-12">
        <h1 class="text-4xl font-bold text-surface-900 mb-4">atlas-progress</h1>
        <p class="text-xl text-surface-600 max-w-3xl">
            A progress bar component for displaying task completion, upload status, or any measurable progress.
        </p>
    </header>

    <!-- Basic Progress -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Basic Progress</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="space-y-4 max-w-md mx-auto">
                <div>
                    <div class="h-2 bg-surface-200 rounded-full overflow-hidden">
                        <div class="h-full w-1/4 bg-primary-500 rounded-full"></div>
                    </div>
                </div>
                <div>
                    <div class="h-2 bg-surface-200 rounded-full overflow-hidden">
                        <div class="h-full w-1/2 bg-primary-500 rounded-full"></div>
                    </div>
                </div>
                <div>
                    <div class="h-2 bg-surface-200 rounded-full overflow-hidden">
                        <div class="h-full w-3/4 bg-primary-500 rounded-full"></div>
                    </div>
                </div>
                <div>
                    <div class="h-2 bg-surface-200 rounded-full overflow-hidden">
                        <div class="h-full w-full bg-primary-500 rounded-full"></div>
                    </div>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-progress value="25"&gt;&lt;/atlas-progress&gt;
&lt;atlas-progress value="50"&gt;&lt;/atlas-progress&gt;
&lt;atlas-progress value="75"&gt;&lt;/atlas-progress&gt;
&lt;atlas-progress value="100"&gt;&lt;/atlas-progress&gt;</code></pre>
    </section>

    <!-- With Label -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">With Label</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="space-y-4 max-w-md mx-auto">
                <div>
                    <div class="flex justify-between text-sm text-surface-600 mb-1">
                        <span>Uploading...</span>
                        <span>65%</span>
                    </div>
                    <div class="h-2 bg-surface-200 rounded-full overflow-hidden">
                        <div class="h-full bg-primary-500 rounded-full" style="width: 65%"></div>
                    </div>
                </div>
                <div>
                    <div class="flex justify-between text-sm text-surface-600 mb-1">
                        <span>Processing files</span>
                        <span>3 of 10</span>
                    </div>
                    <div class="h-2 bg-surface-200 rounded-full overflow-hidden">
                        <div class="h-full bg-primary-500 rounded-full" style="width: 30%"></div>
                    </div>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-progress value="65" label="Uploading..." show-value&gt;&lt;/atlas-progress&gt;
&lt;atlas-progress value="30" label="Processing files" value-label="3 of 10"&gt;&lt;/atlas-progress&gt;</code></pre>
    </section>

    <!-- Progress Colors -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Colors</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="space-y-4 max-w-md mx-auto">
                <div class="h-3 bg-surface-200 rounded-full overflow-hidden">
                    <div class="h-full w-3/4 bg-primary-500 rounded-full"></div>
                </div>
                <div class="h-3 bg-surface-200 rounded-full overflow-hidden">
                    <div class="h-full w-3/4 bg-green-500 rounded-full"></div>
                </div>
                <div class="h-3 bg-surface-200 rounded-full overflow-hidden">
                    <div class="h-full w-3/4 bg-amber-500 rounded-full"></div>
                </div>
                <div class="h-3 bg-surface-200 rounded-full overflow-hidden">
                    <div class="h-full w-3/4 bg-red-500 rounded-full"></div>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-progress value="75" color="primary"&gt;&lt;/atlas-progress&gt;
&lt;atlas-progress value="75" color="success"&gt;&lt;/atlas-progress&gt;
&lt;atlas-progress value="75" color="warning"&gt;&lt;/atlas-progress&gt;
&lt;atlas-progress value="75" color="danger"&gt;&lt;/atlas-progress&gt;</code></pre>
    </section>

    <!-- Progress Sizes -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Sizes</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="space-y-4 max-w-md mx-auto">
                <div class="h-1 bg-surface-200 rounded-full overflow-hidden">
                    <div class="h-full w-2/3 bg-primary-500 rounded-full"></div>
                </div>
                <div class="h-2 bg-surface-200 rounded-full overflow-hidden">
                    <div class="h-full w-2/3 bg-primary-500 rounded-full"></div>
                </div>
                <div class="h-4 bg-surface-200 rounded-full overflow-hidden">
                    <div class="h-full w-2/3 bg-primary-500 rounded-full"></div>
                </div>
                <div class="h-6 bg-surface-200 rounded-full overflow-hidden">
                    <div class="h-full w-2/3 bg-primary-500 rounded-full flex items-center justify-center text-xs text-white font-medium">
                        66%
                    </div>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-progress value="66" size="xs"&gt;&lt;/atlas-progress&gt;
&lt;atlas-progress value="66" size="sm"&gt;&lt;/atlas-progress&gt;
&lt;atlas-progress value="66" size="md"&gt;&lt;/atlas-progress&gt;
&lt;atlas-progress value="66" size="lg" show-value-inside&gt;&lt;/atlas-progress&gt;</code></pre>
    </section>

    <!-- Indeterminate -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Indeterminate</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="max-w-md mx-auto">
                <div class="h-2 bg-surface-200 rounded-full overflow-hidden relative">
                    <div class="absolute inset-0 bg-primary-500 rounded-full animate-pulse" style="animation: indeterminate 1.5s infinite linear; background: linear-gradient(90deg, transparent, var(--color-primary-500), transparent);"></div>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-progress indeterminate&gt;&lt;/atlas-progress&gt;</code></pre>
    </section>

    <!-- JavaScript API -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">JavaScript API</h2>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>const progress = document.querySelector('atlas-progress');

// Set value
progress.value = 50;

// Animate to value
progress.animateTo(100, {'{'} duration: 1000 {'}'});

// Get current value
console.log(progress.value);

// Listen for changes
progress.addEventListener('change', (e) =&gt; {'{'}
    console.log('Progress:', e.detail.value);
{'}'});</code></pre>
    </section>

    <!-- Properties -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Properties</h2>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-surface-200">
                        <th class="py-4 px-4 text-surface-900 font-semibold">Property</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Type</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Default</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Description</th>
                    </tr>
                </thead>
                <tbody class="text-surface-600">
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">value</code></td>
                        <td class="py-4 px-4">number</td>
                        <td class="py-4 px-4">0</td>
                        <td class="py-4 px-4">Progress value (0-100)</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">max</code></td>
                        <td class="py-4 px-4">number</td>
                        <td class="py-4 px-4">100</td>
                        <td class="py-4 px-4">Maximum value</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">size</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"sm"</td>
                        <td class="py-4 px-4">Bar height (xs, sm, md, lg)</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">color</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"primary"</td>
                        <td class="py-4 px-4">Bar color</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">indeterminate</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">false</td>
                        <td class="py-4 px-4">Show indeterminate animation</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

</DocsLayout>
