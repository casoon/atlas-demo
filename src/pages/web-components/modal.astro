---
import DocsLayout from "@layouts/DocsLayout.astro";
import { webComponentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="atlas-modal"
    description="Dialog component for displaying content in a layer above the page"
    currentSection="web-components"
    currentPage="/web-components/modal"
    sidebar={webComponentsSidebar}
>
    <nav class="mb-6 text-sm breadcrumbs">
        <ul class="flex gap-2 text-surface-400">
            <li><a href="/web-components" class="hover:text-primary-400">Web Components</a></li>
            <li class="before:content-['/'] before:mr-2">atlas-modal</li>
        </ul>
    </nav>

    <header class="mb-12">
        <h1 class="text-4xl font-bold text-surface-900 mb-4">atlas-modal</h1>
        <p class="text-xl text-surface-600 max-w-3xl">
            A dialog component for displaying content in a layer above the page with backdrop and focus management.
        </p>
    </header>

    <!-- Basic Modal -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Basic Modal</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <button class="px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors">
                Open Modal
            </button>
            <div class="mt-4 p-6 bg-white border border-surface-200 rounded-xl shadow-lg max-w-md">
                <h3 class="text-lg font-semibold text-surface-800 mb-2">Modal Title</h3>
                <p class="text-surface-600 mb-4">This is the modal content. You can put any content here.</p>
                <div class="flex justify-end gap-2">
                    <button class="px-4 py-2 text-surface-600 hover:bg-surface-100 rounded-lg">Cancel</button>
                    <button class="px-4 py-2 bg-primary-500 text-white rounded-lg">Confirm</button>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;button onclick="document.querySelector('atlas-modal').open()"&gt;
    Open Modal
&lt;/button&gt;

&lt;atlas-modal&gt;
    &lt;h3 slot="header"&gt;Modal Title&lt;/h3&gt;
    &lt;p&gt;This is the modal content.&lt;/p&gt;
    &lt;div slot="footer"&gt;
        &lt;button onclick="this.closest('atlas-modal').close()"&gt;Cancel&lt;/button&gt;
        &lt;button class="primary"&gt;Confirm&lt;/button&gt;
    &lt;/div&gt;
&lt;/atlas-modal&gt;</code></pre>
    </section>

    <!-- Modal Sizes -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Sizes</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex flex-wrap gap-3">
                <button class="px-4 py-2 bg-surface-200 text-surface-700 rounded-lg hover:bg-surface-300">
                    Small Modal
                </button>
                <button class="px-4 py-2 bg-surface-200 text-surface-700 rounded-lg hover:bg-surface-300">
                    Medium Modal
                </button>
                <button class="px-4 py-2 bg-surface-200 text-surface-700 rounded-lg hover:bg-surface-300">
                    Large Modal
                </button>
                <button class="px-4 py-2 bg-surface-200 text-surface-700 rounded-lg hover:bg-surface-300">
                    Full Screen
                </button>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-modal size="sm"&gt;...&lt;/atlas-modal&gt;
&lt;atlas-modal size="md"&gt;...&lt;/atlas-modal&gt;
&lt;atlas-modal size="lg"&gt;...&lt;/atlas-modal&gt;
&lt;atlas-modal size="full"&gt;...&lt;/atlas-modal&gt;</code></pre>
    </section>

    <!-- Confirmation Modal -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Confirmation Modal</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="p-6 bg-white border border-surface-200 rounded-xl shadow-lg max-w-sm">
                <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center mb-4">
                    <span class="text-red-500 text-xl">⚠</span>
                </div>
                <h3 class="text-lg font-semibold text-surface-800 mb-2">Delete Item?</h3>
                <p class="text-surface-600 mb-6">This action cannot be undone. Are you sure you want to delete this item?</p>
                <div class="flex gap-3">
                    <button class="flex-1 px-4 py-2 border border-surface-300 rounded-lg hover:bg-surface-50">Cancel</button>
                    <button class="flex-1 px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600">Delete</button>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-modal variant="danger" size="sm"&gt;
    &lt;div class="icon-container"&gt;⚠&lt;/div&gt;
    &lt;h3 slot="header"&gt;Delete Item?&lt;/h3&gt;
    &lt;p&gt;This action cannot be undone.&lt;/p&gt;
    &lt;div slot="footer"&gt;
        &lt;button class="secondary"&gt;Cancel&lt;/button&gt;
        &lt;button class="danger"&gt;Delete&lt;/button&gt;
    &lt;/div&gt;
&lt;/atlas-modal&gt;</code></pre>
    </section>

    <!-- Form Modal -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Form Modal</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="p-6 bg-white border border-surface-200 rounded-xl shadow-lg max-w-md">
                <h3 class="text-lg font-semibold text-surface-800 mb-4">Create Account</h3>
                <form class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-surface-700 mb-1">Name</label>
                        <input type="text" class="w-full px-4 py-2 border border-surface-300 rounded-lg" placeholder="Enter your name" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-surface-700 mb-1">Email</label>
                        <input type="email" class="w-full px-4 py-2 border border-surface-300 rounded-lg" placeholder="email@example.com" />
                    </div>
                    <div class="flex justify-end gap-2 pt-4">
                        <button type="button" class="px-4 py-2 text-surface-600 hover:bg-surface-100 rounded-lg">Cancel</button>
                        <button type="submit" class="px-4 py-2 bg-primary-500 text-white rounded-lg">Create</button>
                    </div>
                </form>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-modal&gt;
    &lt;h3 slot="header"&gt;Create Account&lt;/h3&gt;
    &lt;form&gt;
        &lt;atlas-input label="Name" required&gt;&lt;/atlas-input&gt;
        &lt;atlas-input type="email" label="Email" required&gt;&lt;/atlas-input&gt;
    &lt;/form&gt;
    &lt;div slot="footer"&gt;
        &lt;button class="secondary"&gt;Cancel&lt;/button&gt;
        &lt;button class="primary" type="submit"&gt;Create&lt;/button&gt;
    &lt;/div&gt;
&lt;/atlas-modal&gt;</code></pre>
    </section>

    <!-- JavaScript API -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">JavaScript API</h2>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>const modal = document.querySelector('atlas-modal');

// Open and close
modal.open();
modal.close();

// Check if open
console.log(modal.isOpen);

// Listen for events
modal.addEventListener('open', () =&gt; console.log('Modal opened'));
modal.addEventListener('close', () =&gt; console.log('Modal closed'));
modal.addEventListener('confirm', () =&gt; console.log('User confirmed'));</code></pre>
    </section>

    <!-- Properties -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Properties</h2>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-surface-200">
                        <th class="py-4 px-4 text-surface-900 font-semibold">Property</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Type</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Default</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Description</th>
                    </tr>
                </thead>
                <tbody class="text-surface-600">
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">size</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"md"</td>
                        <td class="py-4 px-4">Modal size (sm, md, lg, full)</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">variant</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"default"</td>
                        <td class="py-4 px-4">Style variant (default, danger, success)</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">close-on-escape</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">true</td>
                        <td class="py-4 px-4">Close on Escape key</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">close-on-overlay</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">true</td>
                        <td class="py-4 px-4">Close when clicking overlay</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">prevent-scroll</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">true</td>
                        <td class="py-4 px-4">Prevent body scroll when open</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Slots -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Slots</h2>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-surface-200">
                        <th class="py-4 px-4 text-surface-900 font-semibold">Slot</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Description</th>
                    </tr>
                </thead>
                <tbody class="text-surface-600">
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">header</code></td>
                        <td class="py-4 px-4">Modal header/title content</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">default</code></td>
                        <td class="py-4 px-4">Main modal body content</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">footer</code></td>
                        <td class="py-4 px-4">Footer with action buttons</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

</DocsLayout>
