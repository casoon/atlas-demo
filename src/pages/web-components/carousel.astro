---
import DocsLayout from "@layouts/DocsLayout.astro";
import { webComponentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="atlas-carousel"
    description="Carousel component for sliding content"
    currentSection="web-components"
    currentPage="/web-components/carousel"
    sidebar={webComponentsSidebar}
>
    <nav class="mb-6 text-sm breadcrumbs">
        <ul class="flex gap-2 text-surface-400">
            <li><a href="/web-components" class="hover:text-primary-400">Web Components</a></li>
            <li class="before:content-['/'] before:mr-2">atlas-carousel</li>
        </ul>
    </nav>

    <header class="mb-12">
        <h1 class="text-4xl font-bold text-surface-900 mb-4">atlas-carousel</h1>
        <p class="text-xl text-surface-600 max-w-3xl">
            A responsive carousel component for images, cards, and any sliding content.
        </p>
    </header>

    <!-- Basic Carousel -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Basic Carousel</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="relative overflow-hidden rounded-lg">
                <div class="flex">
                    <div class="flex-shrink-0 w-full h-64 bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center">
                        <span class="text-white text-2xl font-bold">Slide 1</span>
                    </div>
                </div>
                <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2">
                    <button class="w-2 h-2 rounded-full bg-white"></button>
                    <button class="w-2 h-2 rounded-full bg-white/50"></button>
                    <button class="w-2 h-2 rounded-full bg-white/50"></button>
                </div>
                <button class="absolute left-4 top-1/2 -translate-y-1/2 w-10 h-10 bg-white/90 rounded-full flex items-center justify-center shadow-lg">
                    <span class="text-surface-600">&lt;</span>
                </button>
                <button class="absolute right-4 top-1/2 -translate-y-1/2 w-10 h-10 bg-white/90 rounded-full flex items-center justify-center shadow-lg">
                    <span class="text-surface-600">&gt;</span>
                </button>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-carousel&gt;
    &lt;atlas-carousel-slide&gt;Slide 1&lt;/atlas-carousel-slide&gt;
    &lt;atlas-carousel-slide&gt;Slide 2&lt;/atlas-carousel-slide&gt;
    &lt;atlas-carousel-slide&gt;Slide 3&lt;/atlas-carousel-slide&gt;
&lt;/atlas-carousel&gt;</code></pre>
    </section>

    <!-- Multi-Item Carousel -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Multi-Item Carousel</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex gap-4 overflow-hidden">
                <div class="flex-shrink-0 w-1/3 h-32 bg-primary-100 rounded-lg flex items-center justify-center">
                    <span class="text-primary-600 font-semibold">Item 1</span>
                </div>
                <div class="flex-shrink-0 w-1/3 h-32 bg-primary-100 rounded-lg flex items-center justify-center">
                    <span class="text-primary-600 font-semibold">Item 2</span>
                </div>
                <div class="flex-shrink-0 w-1/3 h-32 bg-primary-100 rounded-lg flex items-center justify-center">
                    <span class="text-primary-600 font-semibold">Item 3</span>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-carousel slides-per-view="3" gap="16"&gt;
    &lt;atlas-carousel-slide&gt;Item 1&lt;/atlas-carousel-slide&gt;
    &lt;atlas-carousel-slide&gt;Item 2&lt;/atlas-carousel-slide&gt;
    &lt;atlas-carousel-slide&gt;Item 3&lt;/atlas-carousel-slide&gt;
    &lt;atlas-carousel-slide&gt;Item 4&lt;/atlas-carousel-slide&gt;
&lt;/atlas-carousel&gt;</code></pre>
    </section>

    <!-- Autoplay -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Autoplay</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <p class="text-surface-600 text-center">Carousel with automatic slide advancement every 3 seconds.</p>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-carousel autoplay interval="3000"&gt;
    &lt;atlas-carousel-slide&gt;Slide 1&lt;/atlas-carousel-slide&gt;
    &lt;atlas-carousel-slide&gt;Slide 2&lt;/atlas-carousel-slide&gt;
    &lt;atlas-carousel-slide&gt;Slide 3&lt;/atlas-carousel-slide&gt;
&lt;/atlas-carousel&gt;</code></pre>
    </section>

    <!-- JavaScript API -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">JavaScript API</h2>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>const carousel = document.querySelector('atlas-carousel');

// Navigation
carousel.next();
carousel.prev();
carousel.goTo(2);

// Autoplay control
carousel.play();
carousel.pause();

// Get current slide
console.log(carousel.currentIndex);

// Listen for changes
carousel.addEventListener('change', (e) =&gt; {'{'}
    console.log('Current slide:', e.detail.index);
{'}'});</code></pre>
    </section>

    <!-- Properties -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Properties</h2>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-surface-200">
                        <th class="py-4 px-4 text-surface-900 font-semibold">Property</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Type</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Default</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Description</th>
                    </tr>
                </thead>
                <tbody class="text-surface-600">
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">slides-per-view</code></td>
                        <td class="py-4 px-4">number</td>
                        <td class="py-4 px-4">1</td>
                        <td class="py-4 px-4">Visible slides at once</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">gap</code></td>
                        <td class="py-4 px-4">number</td>
                        <td class="py-4 px-4">0</td>
                        <td class="py-4 px-4">Gap between slides in pixels</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">autoplay</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">false</td>
                        <td class="py-4 px-4">Enable auto-advance</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">interval</code></td>
                        <td class="py-4 px-4">number</td>
                        <td class="py-4 px-4">5000</td>
                        <td class="py-4 px-4">Autoplay interval in ms</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">loop</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">true</td>
                        <td class="py-4 px-4">Loop back to start</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">navigation</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">true</td>
                        <td class="py-4 px-4">Show prev/next buttons</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">pagination</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">true</td>
                        <td class="py-4 px-4">Show dot indicators</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

</DocsLayout>
