---
import DocsLayout from "@layouts/DocsLayout.astro";
import { webComponentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="atlas-badge"
    description="Badge component for labels and status indicators"
    currentSection="web-components"
    currentPage="/web-components/badge"
    sidebar={webComponentsSidebar}
>
    <nav class="mb-6 text-sm breadcrumbs">
        <ul class="flex gap-2 text-surface-400">
            <li><a href="/web-components" class="hover:text-primary-400">Web Components</a></li>
            <li class="before:content-['/'] before:mr-2">atlas-badge</li>
        </ul>
    </nav>

    <header class="mb-12">
        <h1 class="text-4xl font-bold text-surface-900 mb-4">atlas-badge</h1>
        <p class="text-xl text-surface-600 max-w-3xl">
            Compact labels for displaying status, categories, and counts.
        </p>
    </header>

    <!-- Badge Variants -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Variants</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex flex-wrap gap-3 justify-center">
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-surface-200 text-surface-700">Default</span>
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-500 text-white">Primary</span>
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-500 text-white">Success</span>
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-500 text-white">Warning</span>
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-500 text-white">Danger</span>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-badge&gt;Default&lt;/atlas-badge&gt;
&lt;atlas-badge variant="primary"&gt;Primary&lt;/atlas-badge&gt;
&lt;atlas-badge variant="success"&gt;Success&lt;/atlas-badge&gt;
&lt;atlas-badge variant="warning"&gt;Warning&lt;/atlas-badge&gt;
&lt;atlas-badge variant="danger"&gt;Danger&lt;/atlas-badge&gt;</code></pre>
    </section>

    <!-- Outline Badges -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Outline Style</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex flex-wrap gap-3 justify-center">
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium border border-surface-300 text-surface-700">Default</span>
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium border border-primary-500 text-primary-600">Primary</span>
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium border border-green-500 text-green-600">Success</span>
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium border border-amber-500 text-amber-600">Warning</span>
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium border border-red-500 text-red-600">Danger</span>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-badge outline&gt;Default&lt;/atlas-badge&gt;
&lt;atlas-badge variant="primary" outline&gt;Primary&lt;/atlas-badge&gt;
&lt;atlas-badge variant="success" outline&gt;Success&lt;/atlas-badge&gt;</code></pre>
    </section>

    <!-- Badge Sizes -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Sizes</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex flex-wrap items-center gap-3 justify-center">
                <span class="px-2 py-0.5 rounded-full text-xs font-medium bg-primary-500 text-white">Small</span>
                <span class="px-3 py-1 rounded-full text-sm font-medium bg-primary-500 text-white">Medium</span>
                <span class="px-4 py-1.5 rounded-full font-medium bg-primary-500 text-white">Large</span>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-badge size="sm"&gt;Small&lt;/atlas-badge&gt;
&lt;atlas-badge size="md"&gt;Medium&lt;/atlas-badge&gt;
&lt;atlas-badge size="lg"&gt;Large&lt;/atlas-badge&gt;</code></pre>
    </section>

    <!-- With Icon -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">With Icon</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex flex-wrap gap-3 justify-center">
                <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-500 text-white">
                    <span>Active</span>
                </span>
                <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-500 text-white">
                    <span>Offline</span>
                </span>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-badge variant="success" icon="check"&gt;Active&lt;/atlas-badge&gt;
&lt;atlas-badge variant="danger" icon="x"&gt;Offline&lt;/atlas-badge&gt;</code></pre>
    </section>

    <!-- Properties -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Properties</h2>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-surface-200">
                        <th class="py-4 px-4 text-surface-900 font-semibold">Property</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Type</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Default</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Description</th>
                    </tr>
                </thead>
                <tbody class="text-surface-600">
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">variant</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"default"</td>
                        <td class="py-4 px-4">Color variant</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">size</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"md"</td>
                        <td class="py-4 px-4">Badge size (sm, md, lg)</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">outline</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">false</td>
                        <td class="py-4 px-4">Use outline style</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">icon</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">""</td>
                        <td class="py-4 px-4">Icon name</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

</DocsLayout>
