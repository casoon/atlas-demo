---
import DocsLayout from "@layouts/DocsLayout.astro";
import { webComponentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="atlas-toggle"
    description="Toggle switch component for binary on/off states"
    currentSection="web-components"
    currentPage="/web-components/toggle"
    sidebar={webComponentsSidebar}
>
    <nav class="mb-6 text-sm breadcrumbs">
        <ul class="flex gap-2 text-surface-400">
            <li><a href="/web-components" class="hover:text-primary-400">Web Components</a></li>
            <li class="before:content-['/'] before:mr-2">atlas-toggle</li>
        </ul>
    </nav>

    <header class="mb-12">
        <h1 class="text-4xl font-bold text-surface-900 mb-4">atlas-toggle</h1>
        <p class="text-xl text-surface-600 max-w-3xl">
            A toggle switch component for binary on/off states, settings, and feature flags.
        </p>
    </header>

    <!-- Basic Toggle -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Basic Toggle</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex items-center gap-8 justify-center">
                <button class="relative w-11 h-6 bg-surface-300 rounded-full transition-colors">
                    <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full shadow transition-transform"></span>
                </button>
                <button class="relative w-11 h-6 bg-primary-500 rounded-full transition-colors">
                    <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full shadow transition-transform translate-x-5"></span>
                </button>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-toggle&gt;&lt;/atlas-toggle&gt;
&lt;atlas-toggle checked&gt;&lt;/atlas-toggle&gt;</code></pre>
    </section>

    <!-- With Labels -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">With Labels</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="space-y-4 max-w-md mx-auto">
                <label class="flex items-center justify-between cursor-pointer">
                    <span class="text-surface-700">Enable notifications</span>
                    <button class="relative w-11 h-6 bg-primary-500 rounded-full">
                        <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full shadow translate-x-5"></span>
                    </button>
                </label>
                <label class="flex items-center justify-between cursor-pointer">
                    <span class="text-surface-700">Dark mode</span>
                    <button class="relative w-11 h-6 bg-surface-300 rounded-full">
                        <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full shadow"></span>
                    </button>
                </label>
                <label class="flex items-center justify-between cursor-pointer opacity-50">
                    <span class="text-surface-400">Premium feature</span>
                    <button class="relative w-11 h-6 bg-surface-200 rounded-full cursor-not-allowed">
                        <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full shadow"></span>
                    </button>
                </label>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-toggle label="Enable notifications" checked&gt;&lt;/atlas-toggle&gt;
&lt;atlas-toggle label="Dark mode"&gt;&lt;/atlas-toggle&gt;
&lt;atlas-toggle label="Premium feature" disabled&gt;&lt;/atlas-toggle&gt;</code></pre>
    </section>

    <!-- Toggle Sizes -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Sizes</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex items-center gap-8 justify-center">
                <div class="text-center">
                    <button class="relative w-8 h-4 bg-primary-500 rounded-full mb-2">
                        <span class="absolute left-0.5 top-0.5 w-3 h-3 bg-white rounded-full shadow translate-x-4"></span>
                    </button>
                    <p class="text-sm text-surface-500">sm</p>
                </div>
                <div class="text-center">
                    <button class="relative w-11 h-6 bg-primary-500 rounded-full mb-2">
                        <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full shadow translate-x-5"></span>
                    </button>
                    <p class="text-sm text-surface-500">md</p>
                </div>
                <div class="text-center">
                    <button class="relative w-14 h-8 bg-primary-500 rounded-full mb-2">
                        <span class="absolute left-1 top-1 w-6 h-6 bg-white rounded-full shadow translate-x-6"></span>
                    </button>
                    <p class="text-sm text-surface-500">lg</p>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-toggle size="sm" checked&gt;&lt;/atlas-toggle&gt;
&lt;atlas-toggle size="md" checked&gt;&lt;/atlas-toggle&gt;
&lt;atlas-toggle size="lg" checked&gt;&lt;/atlas-toggle&gt;</code></pre>
    </section>

    <!-- Toggle Colors -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Colors</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex items-center gap-6 justify-center">
                <button class="relative w-11 h-6 bg-primary-500 rounded-full">
                    <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full shadow translate-x-5"></span>
                </button>
                <button class="relative w-11 h-6 bg-green-500 rounded-full">
                    <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full shadow translate-x-5"></span>
                </button>
                <button class="relative w-11 h-6 bg-red-500 rounded-full">
                    <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full shadow translate-x-5"></span>
                </button>
                <button class="relative w-11 h-6 bg-amber-500 rounded-full">
                    <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full shadow translate-x-5"></span>
                </button>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-toggle color="primary" checked&gt;&lt;/atlas-toggle&gt;
&lt;atlas-toggle color="success" checked&gt;&lt;/atlas-toggle&gt;
&lt;atlas-toggle color="danger" checked&gt;&lt;/atlas-toggle&gt;
&lt;atlas-toggle color="warning" checked&gt;&lt;/atlas-toggle&gt;</code></pre>
    </section>

    <!-- With Icons -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">With Icons</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex items-center gap-8 justify-center">
                <button class="relative w-14 h-8 bg-primary-500 rounded-full">
                    <span class="absolute left-1 top-1 w-6 h-6 bg-white rounded-full shadow translate-x-6 flex items-center justify-center text-xs">✓</span>
                </button>
                <button class="relative w-14 h-8 bg-surface-300 rounded-full">
                    <span class="absolute left-1 top-1 w-6 h-6 bg-white rounded-full shadow flex items-center justify-center text-xs">✕</span>
                </button>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-toggle checked icon-on="check" icon-off="x"&gt;&lt;/atlas-toggle&gt;</code></pre>
    </section>

    <!-- JavaScript API -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">JavaScript API</h2>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>const toggle = document.querySelector('atlas-toggle');

// Get/set checked state
toggle.checked = true;
console.log(toggle.checked);

// Toggle state
toggle.toggle();

// Listen for changes
toggle.addEventListener('change', (e) =&gt; {'{'}
    console.log('Toggle is now:', e.target.checked ? 'on' : 'off');
{'}'});</code></pre>
    </section>

    <!-- Properties -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Properties</h2>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-surface-200">
                        <th class="py-4 px-4 text-surface-900 font-semibold">Property</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Type</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Default</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Description</th>
                    </tr>
                </thead>
                <tbody class="text-surface-600">
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">checked</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">false</td>
                        <td class="py-4 px-4">Whether toggle is on</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">disabled</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">false</td>
                        <td class="py-4 px-4">Disable the toggle</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">label</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">""</td>
                        <td class="py-4 px-4">Label text</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">size</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"md"</td>
                        <td class="py-4 px-4">Toggle size (sm, md, lg)</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">color</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"primary"</td>
                        <td class="py-4 px-4">Active color</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

</DocsLayout>
