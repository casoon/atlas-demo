---
import DocsLayout from "@layouts/DocsLayout.astro";
import { webComponentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="atlas-avatar"
    description="User avatar component with image and fallback support"
    currentSection="web-components"
    currentPage="/web-components/avatar"
    sidebar={webComponentsSidebar}
>
    <nav class="mb-6 text-sm breadcrumbs">
        <ul class="flex gap-2 text-surface-400">
            <li><a href="/web-components" class="hover:text-primary-400">Web Components</a></li>
            <li class="before:content-['/'] before:mr-2">atlas-avatar</li>
        </ul>
    </nav>

    <header class="mb-12">
        <h1 class="text-4xl font-bold text-surface-900 mb-4">atlas-avatar</h1>
        <p class="text-xl text-surface-600 max-w-3xl">
            A user avatar component with image support, initials fallback, and status indicators.
        </p>
    </header>

    <!-- Avatar Sizes -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Sizes</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex items-end gap-6 justify-center">
                <div class="text-center">
                    <div class="w-8 h-8 rounded-full bg-primary-500 flex items-center justify-center text-white text-xs font-semibold">JD</div>
                    <span class="text-xs text-surface-500 mt-2 block">xs</span>
                </div>
                <div class="text-center">
                    <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center text-white text-sm font-semibold">JD</div>
                    <span class="text-xs text-surface-500 mt-2 block">sm</span>
                </div>
                <div class="text-center">
                    <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center text-white font-semibold">JD</div>
                    <span class="text-xs text-surface-500 mt-2 block">md</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 rounded-full bg-primary-500 flex items-center justify-center text-white text-xl font-semibold">JD</div>
                    <span class="text-xs text-surface-500 mt-2 block">lg</span>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 rounded-full bg-primary-500 flex items-center justify-center text-white text-2xl font-semibold">JD</div>
                    <span class="text-xs text-surface-500 mt-2 block">xl</span>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-avatar size="xs" initials="JD"&gt;&lt;/atlas-avatar&gt;
&lt;atlas-avatar size="sm" initials="JD"&gt;&lt;/atlas-avatar&gt;
&lt;atlas-avatar size="md" initials="JD"&gt;&lt;/atlas-avatar&gt;
&lt;atlas-avatar size="lg" initials="JD"&gt;&lt;/atlas-avatar&gt;
&lt;atlas-avatar size="xl" initials="JD"&gt;&lt;/atlas-avatar&gt;</code></pre>
    </section>

    <!-- With Status -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">With Status</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex gap-8 justify-center">
                <div class="relative">
                    <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center text-white font-semibold">JD</div>
                    <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full"></span>
                </div>
                <div class="relative">
                    <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center text-white font-semibold">AB</div>
                    <span class="absolute bottom-0 right-0 w-3 h-3 bg-amber-500 border-2 border-white rounded-full"></span>
                </div>
                <div class="relative">
                    <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center text-white font-semibold">CD</div>
                    <span class="absolute bottom-0 right-0 w-3 h-3 bg-surface-400 border-2 border-white rounded-full"></span>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-avatar initials="JD" status="online"&gt;&lt;/atlas-avatar&gt;
&lt;atlas-avatar initials="AB" status="away"&gt;&lt;/atlas-avatar&gt;
&lt;atlas-avatar initials="CD" status="offline"&gt;&lt;/atlas-avatar&gt;</code></pre>
    </section>

    <!-- Avatar Group -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Avatar Group</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="flex justify-center">
                <div class="flex -space-x-3">
                    <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center text-white text-sm font-semibold border-2 border-white">JD</div>
                    <div class="w-10 h-10 rounded-full bg-green-500 flex items-center justify-center text-white text-sm font-semibold border-2 border-white">AB</div>
                    <div class="w-10 h-10 rounded-full bg-amber-500 flex items-center justify-center text-white text-sm font-semibold border-2 border-white">CD</div>
                    <div class="w-10 h-10 rounded-full bg-surface-300 flex items-center justify-center text-surface-600 text-sm font-semibold border-2 border-white">+5</div>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-avatar-group max="3"&gt;
    &lt;atlas-avatar initials="JD"&gt;&lt;/atlas-avatar&gt;
    &lt;atlas-avatar initials="AB"&gt;&lt;/atlas-avatar&gt;
    &lt;atlas-avatar initials="CD"&gt;&lt;/atlas-avatar&gt;
    &lt;atlas-avatar initials="EF"&gt;&lt;/atlas-avatar&gt;
    &lt;atlas-avatar initials="GH"&gt;&lt;/atlas-avatar&gt;
&lt;/atlas-avatar-group&gt;</code></pre>
    </section>

    <!-- Properties -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Properties</h2>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-surface-200">
                        <th class="py-4 px-4 text-surface-900 font-semibold">Property</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Type</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Default</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Description</th>
                    </tr>
                </thead>
                <tbody class="text-surface-600">
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">src</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">""</td>
                        <td class="py-4 px-4">Image URL</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">initials</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">""</td>
                        <td class="py-4 px-4">Fallback initials</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">size</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"md"</td>
                        <td class="py-4 px-4">Size (xs, sm, md, lg, xl)</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">status</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">""</td>
                        <td class="py-4 px-4">Status indicator (online, away, offline)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

</DocsLayout>
