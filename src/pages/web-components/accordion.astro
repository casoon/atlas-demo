---
import DocsLayout from "@layouts/DocsLayout.astro";
import { webComponentsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="atlas-accordion"
    description="Expandable accordion component for organizing content"
    currentSection="web-components"
    currentPage="/web-components/accordion"
    sidebar={webComponentsSidebar}
>
    <nav class="mb-6 text-sm breadcrumbs">
        <ul class="flex gap-2 text-surface-400">
            <li><a href="/web-components" class="hover:text-primary-400">Web Components</a></li>
            <li class="before:content-['/'] before:mr-2">atlas-accordion</li>
        </ul>
    </nav>

    <header class="mb-12">
        <h1 class="text-4xl font-bold text-surface-900 mb-4">atlas-accordion</h1>
        <p class="text-xl text-surface-600 max-w-3xl">
            An expandable accordion component for organizing content into collapsible sections.
        </p>
    </header>

    <!-- Basic Accordion -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Basic Accordion</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="space-y-2 max-w-lg">
                <div class="border border-surface-200 rounded-lg overflow-hidden">
                    <button class="w-full px-4 py-3 flex items-center justify-between bg-white text-surface-800 font-medium hover:bg-surface-50">
                        <span>What is Atlas UI?</span>
                        <span class="text-surface-400">+</span>
                    </button>
                    <div class="px-4 py-3 bg-surface-50 text-surface-600 border-t border-surface-200">
                        Atlas UI is a modern web component library for building beautiful interfaces.
                    </div>
                </div>
                <div class="border border-surface-200 rounded-lg overflow-hidden">
                    <button class="w-full px-4 py-3 flex items-center justify-between bg-white text-surface-800 font-medium hover:bg-surface-50">
                        <span>How do I install it?</span>
                        <span class="text-surface-400">+</span>
                    </button>
                </div>
                <div class="border border-surface-200 rounded-lg overflow-hidden">
                    <button class="w-full px-4 py-3 flex items-center justify-between bg-white text-surface-800 font-medium hover:bg-surface-50">
                        <span>Is it free to use?</span>
                        <span class="text-surface-400">+</span>
                    </button>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-accordion&gt;
    &lt;atlas-accordion-item&gt;
        &lt;span slot="header"&gt;What is Atlas UI?&lt;/span&gt;
        &lt;p&gt;Atlas UI is a modern web component library...&lt;/p&gt;
    &lt;/atlas-accordion-item&gt;
    &lt;atlas-accordion-item&gt;
        &lt;span slot="header"&gt;How do I install it?&lt;/span&gt;
        &lt;p&gt;Installation instructions...&lt;/p&gt;
    &lt;/atlas-accordion-item&gt;
&lt;/atlas-accordion&gt;</code></pre>
    </section>

    <!-- Accordion Variants -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Variants</h2>

        <div class="p-8 bg-surface-50 rounded-xl border border-surface-200 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="p-4 bg-white rounded-lg border border-surface-200">
                    <h3 class="font-semibold text-surface-800 mb-2">Single Mode</h3>
                    <p class="text-surface-600 text-sm">Only one item open at a time</p>
                    <code class="text-xs text-primary-600 mt-2 block">type="single"</code>
                </div>
                <div class="p-4 bg-white rounded-lg border border-surface-200">
                    <h3 class="font-semibold text-surface-800 mb-2">Multiple Mode</h3>
                    <p class="text-surface-600 text-sm">Multiple items can be open</p>
                    <code class="text-xs text-primary-600 mt-2 block">type="multiple"</code>
                </div>
                <div class="p-4 bg-white rounded-lg border border-surface-200">
                    <h3 class="font-semibold text-surface-800 mb-2">Bordered</h3>
                    <p class="text-surface-600 text-sm">With visible borders</p>
                    <code class="text-xs text-primary-600 mt-2 block">variant="bordered"</code>
                </div>
                <div class="p-4 bg-white rounded-lg border border-surface-200">
                    <h3 class="font-semibold text-surface-800 mb-2">Ghost</h3>
                    <p class="text-surface-600 text-sm">Minimal styling</p>
                    <code class="text-xs text-primary-600 mt-2 block">variant="ghost"</code>
                </div>
            </div>
        </div>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>&lt;atlas-accordion type="single"&gt;...&lt;/atlas-accordion&gt;
&lt;atlas-accordion type="multiple"&gt;...&lt;/atlas-accordion&gt;
&lt;atlas-accordion variant="bordered"&gt;...&lt;/atlas-accordion&gt;
&lt;atlas-accordion variant="ghost"&gt;...&lt;/atlas-accordion&gt;</code></pre>
    </section>

    <!-- JavaScript API -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">JavaScript API</h2>

        <pre class="bg-surface-900 text-surface-100 p-6 rounded-xl overflow-x-auto text-sm"><code>const accordion = document.querySelector('atlas-accordion');

// Toggle items programmatically
accordion.toggle(0);  // Toggle by index
accordion.open(1);    // Open specific item
accordion.close(0);   // Close specific item

// Listen for changes
accordion.addEventListener('change', (e) =&gt; {'{'}
    console.log('Open items:', e.detail.openItems);
{'}'});</code></pre>
    </section>

    <!-- Properties -->
    <section class="mb-16">
        <h2 class="text-2xl font-semibold text-surface-800 mb-6">Properties</h2>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-surface-200">
                        <th class="py-4 px-4 text-surface-900 font-semibold">Property</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Type</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Default</th>
                        <th class="py-4 px-4 text-surface-900 font-semibold">Description</th>
                    </tr>
                </thead>
                <tbody class="text-surface-600">
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">type</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"single"</td>
                        <td class="py-4 px-4">Expansion mode (single, multiple)</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">variant</code></td>
                        <td class="py-4 px-4">string</td>
                        <td class="py-4 px-4">"default"</td>
                        <td class="py-4 px-4">Style variant (default, bordered, ghost)</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">disabled</code></td>
                        <td class="py-4 px-4">boolean</td>
                        <td class="py-4 px-4">false</td>
                        <td class="py-4 px-4">Disable all items</td>
                    </tr>
                    <tr class="border-b border-surface-100">
                        <td class="py-4 px-4"><code class="text-primary-600">default-open</code></td>
                        <td class="py-4 px-4">number[]</td>
                        <td class="py-4 px-4">[]</td>
                        <td class="py-4 px-4">Initially open item indices</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

</DocsLayout>
