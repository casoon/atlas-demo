---
import { t } from "@i18n/translations";
import BaseLayout from "@layouts/BaseLayout.astro";

const locale = "en";
---

<BaseLayout title={t(locale, "home")} locale={locale}>
  <div class="space-y-8">
    <!-- Hero Section -->
    <section class="glass-card p-8 md:p-12 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        {t(locale, "welcome")}
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        {t(locale, "welcomeMessage")}
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/en/examples" class="btn-primary">
          {t(locale, "examples")}
        </a>
        <a href="https://github.com/casoon/skibidoo-ui" target="_blank" rel="noopener" class="btn-secondary">
          Skibidoo-UI Docs
        </a>
      </div>
    </section>

    <!-- AHA Stack Info -->
    <section class="grid md:grid-cols-3 gap-6">
      <div class="glass-card p-6">
        <div class="text-3xl mb-3">A</div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Astro</h3>
        <p class="text-gray-600">
          Server-first framework with Islands Architecture. Fast, SEO-friendly and flexible.
        </p>
      </div>
      <div class="glass-card p-6">
        <div class="text-3xl mb-3">H</div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">HTMX</h3>
        <p class="text-gray-600">
          HTML-First interactivity. AJAX, WebSockets and more directly in HTML attributes.
        </p>
      </div>
      <div class="glass-card p-6">
        <div class="text-3xl mb-3">A</div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Alpine.js</h3>
        <p class="text-gray-600">
          Lightweight JavaScript framework for reactive UI components.
        </p>
      </div>
    </section>

    <!-- Quick HTMX Demo -->
    <section class="glass-card p-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, "htmxExample")}</h2>
      <p class="text-gray-600 mb-4">
        Click the button to load data from the server (without page reload):
      </p>
      <button
        class="btn-primary"
        hx-get={`/api/hello?locale=${locale}`}
        hx-target="#htmx-result"
        hx-swap="innerHTML"
      >
        Load Server Response
      </button>
      <div id="htmx-result" class="mt-4 p-4 bg-gray-100 rounded-lg min-h-[60px]">
        <!-- HTMX response will appear here -->
      </div>
    </section>

    <!-- Quick Alpine Demo -->
    <section class="glass-card p-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, "alpineExample")}</h2>
      <div x-data="{ count: 0, open: false }">
        <div class="flex items-center gap-4 mb-4">
          <button @click="count--" class="btn-secondary px-4 py-2">-</button>
          <span class="text-2xl font-bold" x-text="count"></span>
          <button @click="count++" class="btn-secondary px-4 py-2">+</button>
        </div>
        <button @click="open = !open" class="btn-primary">
          <span x-text="open ? 'Hide' : 'Show'"></span> Details
        </button>
        <div x-show="open" x-transition class="mt-4 p-4 bg-gray-100 rounded-lg">
          <p>Alpine.js makes reactive UI components easy!</p>
          <p class="mt-2">Counter: <span x-text="count" class="font-bold"></span></p>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
