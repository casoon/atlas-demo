---
import DocsLayout from "@layouts/DocsLayout.astro";
import { effectsSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Glow Effect"
    description="Dynamische Leuchteffekte für Elemente"
    currentSection="effects"
    currentPage="/effects/glow"
    sidebar={effectsSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/effects" class="hover:text-white transition-colors">Effects</a>
            <span>/</span>
            <span class="text-white">Glow Effect</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Glow Effect</h1>
        <p class="text-gray-400 text-lg">Dynamische Leuchteffekte beim Hover und für Animationen.</p>
    </div>

    <!-- Basic Glow -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Glow</h2>
        <p class="text-gray-400 mb-6">Hover über die Elemente für den Glow-Effekt.</p>
        <div class="mb-6 p-8 rounded-xl bg-[#0a0a1a] border border-white/10">
            <div class="flex flex-wrap gap-8 justify-center">
                <button class="px-8 py-4 rounded-xl bg-violet-500 text-white font-medium transition-all hover:shadow-lg hover:shadow-violet-500/50" data-effect="glow">
                    Violet Glow
                </button>
                <button class="px-8 py-4 rounded-xl bg-fuchsia-500 text-white font-medium transition-all hover:shadow-lg hover:shadow-fuchsia-500/50" data-effect="glow">
                    Fuchsia Glow
                </button>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;button</span>
  <span class="text-violet-400">class</span>=<span class="text-emerald-400">"hover:shadow-lg hover:shadow-violet-500/50"</span>
  <span class="text-violet-400">data-effect</span>=<span class="text-emerald-400">"glow"</span><span class="text-pink-400">&gt;</span>
  Violet Glow
<span class="text-pink-400">&lt;/button&gt;</span></code></pre>
        </div>
    </section>

    <!-- Animated Glow -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Animierter Glow</h2>
        <p class="text-gray-400 mb-6">Pulsierender Leuchteffekt.</p>
        <div class="mb-6 p-8 rounded-xl bg-[#0a0a1a] border border-white/10">
            <div class="flex flex-wrap gap-8 justify-center">
                <div class="w-24 h-24 rounded-full bg-violet-500 animate-glow-pulse"></div>
                <div class="w-24 h-24 rounded-full bg-fuchsia-500 animate-glow-pulse" style="animation-delay: 0.5s;"></div>
                <div class="w-24 h-24 rounded-full bg-cyan-500 animate-glow-pulse" style="animation-delay: 1s;"></div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">CSS</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-violet-400">@keyframes</span> glow-pulse {"{"}
  <span class="text-fuchsia-400">0%</span>, <span class="text-fuchsia-400">100%</span> {"{"} box-shadow: <span class="text-emerald-400">0 0 20px currentColor</span>; {"}"}
  <span class="text-fuchsia-400">50%</span> {"{"} box-shadow: <span class="text-emerald-400">0 0 40px currentColor</span>; {"}"}
{"}"}</code></pre>
        </div>
    </section>

    <!-- Glow Colors -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Glow-Farben</h2>
        <p class="text-gray-400 mb-6">Verschiedene Farbvarianten.</p>
        <div class="mb-6 p-8 rounded-xl bg-[#0a0a1a] border border-white/10">
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
                <div class="text-center">
                    <div class="w-16 h-16 mx-auto rounded-xl bg-violet-500 shadow-lg shadow-violet-500/50 mb-3"></div>
                    <span class="text-xs text-gray-400">Violet</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 mx-auto rounded-xl bg-fuchsia-500 shadow-lg shadow-fuchsia-500/50 mb-3"></div>
                    <span class="text-xs text-gray-400">Fuchsia</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 mx-auto rounded-xl bg-cyan-500 shadow-lg shadow-cyan-500/50 mb-3"></div>
                    <span class="text-xs text-gray-400">Cyan</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 mx-auto rounded-xl bg-emerald-500 shadow-lg shadow-emerald-500/50 mb-3"></div>
                    <span class="text-xs text-gray-400">Emerald</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 mx-auto rounded-xl bg-amber-500 shadow-lg shadow-amber-500/50 mb-3"></div>
                    <span class="text-xs text-gray-400">Amber</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 mx-auto rounded-xl bg-rose-500 shadow-lg shadow-rose-500/50 mb-3"></div>
                    <span class="text-xs text-gray-400">Rose</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 mx-auto rounded-xl bg-blue-500 shadow-lg shadow-blue-500/50 mb-3"></div>
                    <span class="text-xs text-gray-400">Blue</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 mx-auto rounded-xl bg-white shadow-lg shadow-white/50 mb-3"></div>
                    <span class="text-xs text-gray-400">White</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Glow on Cards -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Glow auf Cards</h2>
        <p class="text-gray-400 mb-6">Leuchtende Karten-Rahmen beim Hover.</p>
        <div class="mb-6 p-8 rounded-xl bg-[#0a0a1a] border border-white/10">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-2xl mx-auto">
                <div class="cs-glass-card p-6 transition-all hover:shadow-lg hover:shadow-violet-500/30 cursor-pointer">
                    <div class="w-12 h-12 rounded-xl bg-violet-500/20 flex items-center justify-center mb-4">
                        <svg class="w-6 h-6 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <h3 class="text-white font-semibold mb-2">Glowing Card</h3>
                    <p class="text-gray-400 text-sm">Hover für Glow-Effekt.</p>
                </div>
                <div class="cs-glass-card p-6 transition-all hover:shadow-lg hover:shadow-fuchsia-500/30 cursor-pointer">
                    <div class="w-12 h-12 rounded-xl bg-fuchsia-500/20 flex items-center justify-center mb-4">
                        <svg class="w-6 h-6 text-fuchsia-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                        </svg>
                    </div>
                    <h3 class="text-white font-semibold mb-2">Premium Card</h3>
                    <p class="text-gray-400 text-sm">Fuchsia Glow-Akzent.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Glow Intensity -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Glow-Intensität</h2>
        <p class="text-gray-400 mb-6">Verschiedene Intensitätsstufen.</p>
        <div class="mb-6 p-8 rounded-xl bg-[#0a0a1a] border border-white/10">
            <div class="flex flex-wrap gap-8 justify-center items-end">
                <div class="text-center">
                    <div class="w-16 h-16 rounded-xl bg-violet-500 shadow-md shadow-violet-500/30 mb-3"></div>
                    <span class="text-xs text-gray-400">Leicht</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 rounded-xl bg-violet-500 shadow-lg shadow-violet-500/50 mb-3"></div>
                    <span class="text-xs text-gray-400">Normal</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 rounded-xl bg-violet-500 shadow-xl shadow-violet-500/60 mb-3"></div>
                    <span class="text-xs text-gray-400">Stark</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 rounded-xl bg-violet-500 shadow-2xl shadow-violet-500/70 mb-3"></div>
                    <span class="text-xs text-gray-400">Intensiv</span>
                </div>
            </div>
        </div>
    </section>

    <!-- API Options -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">API-Optionen</h2>
        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead>
                    <tr class="border-b border-white/10">
                        <th class="text-left py-3 px-4 text-gray-400 font-medium">Attribut</th>
                        <th class="text-left py-3 px-4 text-gray-400 font-medium">Typ</th>
                        <th class="text-left py-3 px-4 text-gray-400 font-medium">Default</th>
                        <th class="text-left py-3 px-4 text-gray-400 font-medium">Beschreibung</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="border-b border-white/10">
                        <td class="py-3 px-4"><code class="text-fuchsia-400">data-effect="glow"</code></td>
                        <td class="py-3 px-4 text-gray-400">string</td>
                        <td class="py-3 px-4 text-gray-400">-</td>
                        <td class="py-3 px-4 text-gray-400">Aktiviert den Glow-Effekt</td>
                    </tr>
                    <tr class="border-b border-white/10">
                        <td class="py-3 px-4"><code class="text-fuchsia-400">data-glow-color</code></td>
                        <td class="py-3 px-4 text-gray-400">string</td>
                        <td class="py-3 px-4 text-gray-400">currentColor</td>
                        <td class="py-3 px-4 text-gray-400">Farbe des Leuchteffekts</td>
                    </tr>
                    <tr class="border-b border-white/10">
                        <td class="py-3 px-4"><code class="text-fuchsia-400">data-glow-intensity</code></td>
                        <td class="py-3 px-4 text-gray-400">number</td>
                        <td class="py-3 px-4 text-gray-400">0.5</td>
                        <td class="py-3 px-4 text-gray-400">Intensität (0-1)</td>
                    </tr>
                    <tr class="border-b border-white/10">
                        <td class="py-3 px-4"><code class="text-fuchsia-400">data-glow-animate</code></td>
                        <td class="py-3 px-4 text-gray-400">boolean</td>
                        <td class="py-3 px-4 text-gray-400">false</td>
                        <td class="py-3 px-4 text-gray-400">Aktiviert pulsierende Animation</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/effects/magnetic" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Magnetic</span>
        </a>
        <a href="/effects/parallax" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Parallax</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>

<style>
    @keyframes glow-pulse {
        0%, 100% { box-shadow: 0 0 20px currentColor; }
        50% { box-shadow: 0 0 40px currentColor, 0 0 60px currentColor; }
    }
    .animate-glow-pulse {
        animation: glow-pulse 2s ease-in-out infinite;
    }
</style>

<script>
    import { atlasInit } from "@casoon/atlas-components";
    document.addEventListener("DOMContentLoaded", atlasInit);
    document.addEventListener("astro:page-load", atlasInit);
</script>
