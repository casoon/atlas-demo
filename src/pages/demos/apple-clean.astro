---
import { ViewTransitions } from "astro:transitions";
import "@styles/base.css";
---

<!doctype html>
<html lang="de">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="Apple-Clean Design Demo - Minimalistisches Premium-Design" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>Apple-Clean Demo - Atlas UI</title>
        <ViewTransitions />
        <style>
            body {
                font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Helvetica Neue', Arial, sans-serif;
                -webkit-font-smoothing: antialiased;
                -moz-osx-font-smoothing: grayscale;
            }
        </style>
    </head>
    <body class="min-h-screen bg-white text-gray-900">
        <!-- Navigation -->
        <header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-xl border-b border-gray-100">
            <nav class="max-w-6xl mx-auto px-6 h-14 flex items-center justify-between">
                <a href="/demos/apple-clean" class="font-semibold text-lg tracking-tight">
                    <span class="text-gray-900">Atlas</span><span class="text-gray-400">Pro</span>
                </a>
                <div class="hidden md:flex items-center gap-8 text-sm text-gray-600">
                    <a href="#features" class="hover:text-gray-900 transition-colors">Features</a>
                    <a href="#pricing" class="hover:text-gray-900 transition-colors">Pricing</a>
                    <a href="#about" class="hover:text-gray-900 transition-colors">About</a>
                </div>
                <div class="flex items-center gap-4">
                    <a href="#" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Sign In</a>
                    <a href="#" class="text-sm px-4 py-2 bg-gray-900 text-white rounded-full hover:bg-gray-800 transition-colors">Get Started</a>
                </div>
            </nav>
        </header>

        <!-- Hero Section -->
        <section class="pt-32 pb-24 px-6">
            <div class="max-w-4xl mx-auto text-center">
                <p class="text-sm font-medium text-blue-600 tracking-wide uppercase mb-4">Introducing Atlas Pro</p>
                <h1 class="text-5xl md:text-7xl font-semibold tracking-tight text-gray-900 mb-6 leading-[1.1]">
                    Designed for<br />those who expect more.
                </h1>
                <p class="text-xl text-gray-500 max-w-2xl mx-auto mb-10 leading-relaxed">
                    Experience the perfect blend of power and simplicity. Built with precision, crafted for performance.
                </p>
                <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                    <a href="#" class="px-8 py-4 bg-gray-900 text-white rounded-full text-lg font-medium hover:bg-gray-800 transition-all shadow-lg shadow-gray-900/10">
                        Start Free Trial
                    </a>
                    <a href="#" class="px-8 py-4 text-gray-600 text-lg font-medium hover:text-gray-900 transition-colors flex items-center gap-2">
                        <span>Watch Demo</span>
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                        </svg>
                    </a>
                </div>
            </div>
        </section>

        <!-- Product Image -->
        <section class="px-6 pb-32">
            <div class="max-w-6xl mx-auto">
                <div class="relative rounded-3xl overflow-hidden bg-gradient-to-br from-gray-50 to-gray-100 aspect-[16/9] flex items-center justify-center shadow-2xl shadow-gray-200/50">
                    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 to-gray-800"></div>
                    <div class="relative z-10 text-center p-12">
                        <div class="w-24 h-24 mx-auto mb-8 rounded-3xl bg-white/10 backdrop-blur-sm flex items-center justify-center">
                            <svg class="w-12 h-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <p class="text-white/60 text-lg">Your product showcase here</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features Grid -->
        <section id="features" class="py-24 px-6 bg-gray-50">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-16">
                    <h2 class="text-4xl md:text-5xl font-semibold text-gray-900 tracking-tight mb-4">
                        Everything you need.
                    </h2>
                    <p class="text-xl text-gray-500">Nothing you don't.</p>
                </div>

                <div class="grid md:grid-cols-3 gap-8">
                    <div class="p-8 bg-white rounded-2xl">
                        <div class="w-12 h-12 mb-6 rounded-xl bg-blue-100 flex items-center justify-center">
                            <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-3">Lightning Fast</h3>
                        <p class="text-gray-500 leading-relaxed">
                            Optimized for speed at every level. Experience instant responsiveness.
                        </p>
                    </div>

                    <div class="p-8 bg-white rounded-2xl">
                        <div class="w-12 h-12 mb-6 rounded-xl bg-purple-100 flex items-center justify-center">
                            <svg class="w-6 h-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-3">Secure by Design</h3>
                        <p class="text-gray-500 leading-relaxed">
                            Enterprise-grade security built into every component from day one.
                        </p>
                    </div>

                    <div class="p-8 bg-white rounded-2xl">
                        <div class="w-12 h-12 mb-6 rounded-xl bg-green-100 flex items-center justify-center">
                            <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-3">Always in Sync</h3>
                        <p class="text-gray-500 leading-relaxed">
                            Real-time synchronization across all your devices, seamlessly.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonial -->
        <section class="py-32 px-6">
            <div class="max-w-4xl mx-auto text-center">
                <blockquote class="text-3xl md:text-4xl font-medium text-gray-900 leading-snug mb-8">
                    "This is what happens when you put design and performance on the same level."
                </blockquote>
                <div class="flex items-center justify-center gap-4">
                    <div class="w-12 h-12 rounded-full bg-gray-200"></div>
                    <div class="text-left">
                        <p class="font-medium text-gray-900">Sarah Chen</p>
                        <p class="text-sm text-gray-500">Product Lead, TechCorp</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Pricing -->
        <section id="pricing" class="py-24 px-6 bg-gray-50">
            <div class="max-w-4xl mx-auto">
                <div class="text-center mb-16">
                    <h2 class="text-4xl md:text-5xl font-semibold text-gray-900 tracking-tight mb-4">
                        Simple pricing.
                    </h2>
                    <p class="text-xl text-gray-500">No surprises. No hidden fees.</p>
                </div>

                <div class="grid md:grid-cols-2 gap-8">
                    <div class="p-8 bg-white rounded-2xl border border-gray-200">
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Personal</p>
                        <p class="text-4xl font-semibold text-gray-900 mb-6">Free</p>
                        <ul class="space-y-4 mb-8">
                            <li class="flex items-center gap-3 text-gray-600">
                                <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Up to 5 projects
                            </li>
                            <li class="flex items-center gap-3 text-gray-600">
                                <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Basic analytics
                            </li>
                            <li class="flex items-center gap-3 text-gray-600">
                                <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Community support
                            </li>
                        </ul>
                        <a href="#" class="block w-full py-3 text-center rounded-full border border-gray-300 text-gray-700 font-medium hover:bg-gray-50 transition-colors">
                            Get Started
                        </a>
                    </div>

                    <div class="p-8 bg-gray-900 rounded-2xl text-white">
                        <p class="text-sm font-medium text-gray-400 uppercase tracking-wide mb-2">Pro</p>
                        <p class="text-4xl font-semibold mb-6">$29<span class="text-lg text-gray-400">/mo</span></p>
                        <ul class="space-y-4 mb-8">
                            <li class="flex items-center gap-3 text-gray-300">
                                <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Unlimited projects
                            </li>
                            <li class="flex items-center gap-3 text-gray-300">
                                <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Advanced analytics
                            </li>
                            <li class="flex items-center gap-3 text-gray-300">
                                <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Priority support
                            </li>
                        </ul>
                        <a href="#" class="block w-full py-3 text-center rounded-full bg-white text-gray-900 font-medium hover:bg-gray-100 transition-colors">
                            Start Free Trial
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-32 px-6">
            <div class="max-w-3xl mx-auto text-center">
                <h2 class="text-4xl md:text-5xl font-semibold text-gray-900 tracking-tight mb-6">
                    Ready to get started?
                </h2>
                <p class="text-xl text-gray-500 mb-10">
                    Join thousands of teams who've already made the switch.
                </p>
                <a href="#" class="inline-block px-8 py-4 bg-gray-900 text-white rounded-full text-lg font-medium hover:bg-gray-800 transition-all shadow-lg shadow-gray-900/10">
                    Start Your Free Trial
                </a>
            </div>
        </section>

        <!-- Footer -->
        <footer class="py-12 px-6 border-t border-gray-100">
            <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between gap-6">
                <p class="text-sm text-gray-500">2025 AtlasPro. All rights reserved.</p>
                <div class="flex items-center gap-6 text-sm text-gray-500">
                    <a href="#" class="hover:text-gray-900 transition-colors">Privacy</a>
                    <a href="#" class="hover:text-gray-900 transition-colors">Terms</a>
                    <a href="#" class="hover:text-gray-900 transition-colors">Contact</a>
                </div>
            </div>
        </footer>

        <!-- Back to Demos -->
        <a href="/" class="fixed bottom-6 left-6 px-4 py-2 bg-gray-900 text-white text-sm rounded-full shadow-lg hover:bg-gray-800 transition-colors flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Atlas
        </a>
    </body>
</html>
