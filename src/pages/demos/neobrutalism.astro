        @import url('https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Inter:wght@400;500;700;900&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --black: #000000;
            --white: #ffffff;
            --yellow: #ffde59;
            --pink: #ff6b9d;
            --blue: #4ecdc4;
            --purple: #a855f7;
            --orange: #ff6b35;
            --green: #7bed9f;
            --border: 4px solid var(--black);
            --shadow: 8px 8px 0 var(--black);
            --shadow-sm: 4px 4px 0 var(--black);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--white);
            color: var(--black);
            overflow-x: hidden;
        }

        .mono {
            font-family: 'Space Mono', monospace;
        }

        .border-brutal {
            border: var(--border);
        }

        .shadow-brutal {
            box-shadow: var(--shadow);
        }

        .shadow-brutal-sm {
            box-shadow: var(--shadow-sm);
        }

        .hover-lift {
            transition: transform 0.15s ease, box-shadow 0.15s ease;
        }

        .hover-lift:hover {
            transform: translate(-4px, -4px);
            box-shadow: 12px 12px 0 var(--black);
        }

        .marquee {
            animation: marquee 20s linear infinite;
        }

        @keyframes marquee {
            0% { transform: translateX(0); }
            100% { transform: translateX(-50%); }
        }

        .rotate-hover {
            transition: transform 0.2s ease;
        }

        .rotate-hover:hover {
            transform: rotate(-2deg);
        }

        .skew-text {
            transform: skewX(-5deg);
        }

        .grid-bg {
            background-image:
                linear-gradient(to right, rgba(0,0,0,0.05) 1px, transparent 1px),
                linear-gradient(to bottom, rgba(0,0,0,0.05) 1px, transparent 1px);
            background-size: 40px 40px;
        }

        .checkerboard {
            background-image:
                linear-gradient(45deg, #eee 25%, transparent 25%),
                linear-gradient(-45deg, #eee 25%, transparent 25%),
                linear-gradient(45deg, transparent 75%, #eee 75%),
                linear-gradient(-45deg, transparent 75%, #eee 75%);
            background-size: 20px 20px;
            background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
        }

        .btn-brutal {
            padding: 16px 32px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            border: var(--border);
            box-shadow: var(--shadow-sm);
            transition: all 0.15s ease;
            cursor: pointer;
        }

        .btn-brutal:hover {
            transform: translate(-2px, -2px);
            box-shadow: 6px 6px 0 var(--black);
        }

        .btn-brutal:active {
            transform: translate(2px, 2px);
            box-shadow: 2px 2px 0 var(--black);
        }

        .zigzag {
            background: linear-gradient(135deg, var(--yellow) 25%, transparent 25%) -20px 0,
                        linear-gradient(225deg, var(--yellow) 25%, transparent 25%) -20px 0,
                        linear-gradient(315deg, var(--yellow) 25%, transparent 25%),
                        linear-gradient(45deg, var(--yellow) 25%, transparent 25%);
            background-size: 40px 40px;
            background-color: var(--pink);
