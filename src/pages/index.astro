---
import MainLayout from "@layouts/MainLayout.astro";

const projects = [
    {
        id: "components",
        title: "UI Components",
        description: "Fertige UI-Komponenten wie Buttons, Cards, Modals, Forms und mehr. Inspiriert von TailwindUI, Flowbite und HyperUI.",
        href: "/components",
        icon: "cube",
        gradient: "from-violet-500 to-purple-600",
        features: ["50+ Komponenten", "Dark & Light Mode", "Responsive Design", "Copy & Paste Ready"]
    },
    {
        id: "styles",
        title: "Atlas Styles",
        description: "CSS-Utilities und Klassen des Atlas Frameworks. Glassmorphism, Gradients, Animationen und mehr.",
        href: "/styles",
        icon: "palette",
        gradient: "from-fuchsia-500 to-pink-600",
        features: ["Glassmorphism", "Gradient Utilities", "CSS Animationen", "Theme System"]
    },
    {
        id: "effects",
        title: "Effects & Animations",
        description: "JavaScript-basierte Effekte wie Ripple, Tilt, Magnetic, Glow, Parallax und Scroll-Animationen.",
        href: "/effects",
        icon: "sparkles",
        gradient: "from-cyan-500 to-blue-600",
        features: ["Ripple Effect", "3D Tilt", "Magnetic Cursor", "Scroll Reveal"]
    },
    {
        id: "web-components",
        title: "Web Components",
        description: "Native Web Components für framework-unabhängige Wiederverwendung. Custom Elements mit Shadow DOM.",
        href: "/web-components",
        icon: "code",
        gradient: "from-emerald-500 to-teal-600",
        features: ["Native Custom Elements", "Shadow DOM", "Framework Agnostic", "Lightweight"]
    },
    {
        id: "admin",
        title: "Admin Dashboard",
        description: "Vollständiges Admin-Dashboard mit HTMX, Alpine.js und Atlas. Navigation, Charts, Tabellen und mehr.",
        href: "/admin",
        icon: "layout",
        gradient: "from-orange-500 to-red-600",
        features: ["HTMX Integration", "Responsive Layout", "Dark Theme", "Real-time Updates"]
    }
];

const stats = [
    { value: "50+", label: "Komponenten" },
    { value: "20+", label: "Effekte" },
    { value: "100%", label: "TypeScript" },
    { value: "0.2.0", label: "Version" }
];

const icons: Record<string, string> = {
    cube: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />`,
    palette: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />`,
    sparkles: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />`,
    code: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />`,
    layout: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />`
};
---

<MainLayout title="Home" currentSection="home">
    <!-- Hero Section -->
    <section class="relative py-20 sm:py-32 overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center max-w-4xl mx-auto">
                <!-- Badge -->
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 text-sm text-gray-400 mb-8">
                    <span class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"></span>
                    Version 0.2.0 verfügbar
                </div>

                <!-- Headline -->
                <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight mb-6">
                    <span class="text-white">Moderne UI mit</span>
                    <br />
                    <span class="bg-gradient-to-r from-violet-400 via-fuchsia-400 to-pink-400 bg-clip-text text-transparent">
                        Atlas Framework
                    </span>
                </h1>

                <!-- Subtitle -->
                <p class="text-lg sm:text-xl text-gray-400 max-w-2xl mx-auto mb-10">
                    Ein CSS Framework mit eleganten Glassmorphism-Effekten,
                    interaktiven Komponenten und modernen Web Components.
                    Bereit für Production.
                </p>

                <!-- CTAs -->
                <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                    <a
                        href="/components"
                        class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-8 py-4 rounded-xl bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white font-semibold shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 hover:scale-105 transition-all duration-300"
                        data-atlas="button"
                        data-ripple="true"
                    >
                        <span>Komponenten erkunden</span>
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                        </svg>
                    </a>
                    <a
                        href="https://github.com/casoon/atlas"
                        target="_blank"
                        rel="noopener"
                        class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-8 py-4 rounded-xl bg-white/5 border border-white/10 text-white font-semibold hover:bg-white/10 transition-all duration-300"
                    >
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                        </svg>
                        <span>GitHub</span>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-12 border-y border-white/5">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                {stats.map((stat) => (
                    <div class="text-center">
                        <div class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">
                            {stat.value}
                        </div>
                        <div class="text-gray-400 text-sm mt-1">{stat.label}</div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Projects Grid -->
    <section class="py-20 sm:py-32">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Section Header -->
            <div class="text-center mb-16">
                <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
                    Entdecke Atlas
                </h2>
                <p class="text-gray-400 text-lg max-w-2xl mx-auto">
                    Verschiedene Bereiche des Frameworks - von fertigen Komponenten bis hin zu interaktiven Effekten.
                </p>
            </div>

            <!-- Projects -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" data-atlas="grid" data-stagger="100">
                {projects.map((project) => (
                    <a
                        href={project.href}
                        class="group block"
                        data-atlas="card"
                        data-hover="lift"
                    >
                        <div class="h-full p-6 rounded-2xl bg-white/5 border border-white/10 hover:border-white/20 transition-all duration-300">
                            <!-- Icon -->
                            <div class={`w-14 h-14 rounded-xl bg-gradient-to-br ${project.gradient} flex items-center justify-center mb-5 shadow-lg group-hover:scale-110 transition-transform duration-300`}>
                                <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[project.icon]} />
                            </div>

                            <!-- Content -->
                            <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-violet-400 transition-colors">
                                {project.title}
                            </h3>
                            <p class="text-gray-400 text-sm mb-5">
                                {project.description}
                            </p>

                            <!-- Features -->
                            <div class="flex flex-wrap gap-2">
                                {project.features.map((feature) => (
                                    <span class="px-3 py-1 rounded-full bg-white/5 text-xs text-gray-400">
                                        {feature}
                                    </span>
                                ))}
                            </div>

                            <!-- Arrow -->
                            <div class="mt-5 flex items-center gap-2 text-sm text-violet-400 opacity-0 group-hover:opacity-100 transition-opacity">
                                <span>Erkunden</span>
                                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                                </svg>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </section>

    <!-- Feature Highlight -->
    <section class="py-20 sm:py-32 border-t border-white/5">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <!-- Content -->
                <div>
                    <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
                        Warum Atlas?
                    </h2>
                    <div class="space-y-6">
                        <div class="flex gap-4">
                            <div class="w-10 h-10 rounded-lg bg-violet-500/20 flex items-center justify-center flex-shrink-0">
                                <svg class="w-5 h-5 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-white font-semibold mb-1">Schnell & Leichtgewichtig</h3>
                                <p class="text-gray-400 text-sm">Keine schweren Dependencies. Nur das, was du wirklich brauchst.</p>
                            </div>
                        </div>
                        <div class="flex gap-4">
                            <div class="w-10 h-10 rounded-lg bg-fuchsia-500/20 flex items-center justify-center flex-shrink-0">
                                <svg class="w-5 h-5 text-fuchsia-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-white font-semibold mb-1">Modernes Design</h3>
                                <p class="text-gray-400 text-sm">Glassmorphism, Gradients und subtile Animationen out of the box.</p>
                            </div>
                        </div>
                        <div class="flex gap-4">
                            <div class="w-10 h-10 rounded-lg bg-cyan-500/20 flex items-center justify-center flex-shrink-0">
                                <svg class="w-5 h-5 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-white font-semibold mb-1">Framework Agnostic</h3>
                                <p class="text-gray-400 text-sm">Funktioniert mit React, Vue, Svelte, Astro oder vanilla HTML.</p>
                            </div>
                        </div>
                        <div class="flex gap-4">
                            <div class="w-10 h-10 rounded-lg bg-emerald-500/20 flex items-center justify-center flex-shrink-0">
                                <svg class="w-5 h-5 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-white font-semibold mb-1">Production Ready</h3>
                                <p class="text-gray-400 text-sm">Getestet und optimiert für den Produktionseinsatz.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Code Preview -->
                <div class="relative">
                    <div class="absolute inset-0 bg-gradient-to-r from-violet-500/20 to-fuchsia-500/20 rounded-2xl blur-xl"></div>
                    <div class="relative rounded-2xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
                        <div class="flex items-center gap-2 px-4 py-3 border-b border-white/10">
                            <div class="w-3 h-3 rounded-full bg-red-500"></div>
                            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                            <div class="w-3 h-3 rounded-full bg-green-500"></div>
                            <span class="ml-2 text-xs text-gray-500">index.html</span>
                        </div>
                        <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-gray-500">&lt;!-- Glassmorphism Card --&gt;</span>
<span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"cs-glass-card p-6"</span>
     <span class="text-violet-400">data-atlas</span>=<span class="text-emerald-400">"card"</span>
     <span class="text-violet-400">data-hover</span>=<span class="text-emerald-400">"lift"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;h3&gt;</span>Hello Atlas<span class="text-pink-400">&lt;/h3&gt;</span>
  <span class="text-pink-400">&lt;p&gt;</span>Moderne UI-Komponenten<span class="text-pink-400">&lt;/p&gt;</span>

  <span class="text-pink-400">&lt;button</span>
    <span class="text-violet-400">class</span>=<span class="text-emerald-400">"cs-glass-button"</span>
    <span class="text-violet-400">data-ripple</span>=<span class="text-emerald-400">"true"</span><span class="text-pink-400">&gt;</span>
    Click me
  <span class="text-pink-400">&lt;/button&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 sm:py-32">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="relative rounded-3xl overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-r from-violet-600 to-fuchsia-600"></div>
                <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30"></div>

                <div class="relative px-6 py-16 sm:px-12 sm:py-20 text-center">
                    <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
                        Bereit loszulegen?
                    </h2>
                    <p class="text-white/80 text-lg max-w-xl mx-auto mb-8">
                        Installiere Atlas und beginne mit dem Bauen von modernen UIs.
                    </p>

                    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                        <div class="flex items-center gap-3 px-6 py-3 rounded-xl bg-black/20 border border-white/20 font-mono text-sm text-white">
                            <span class="text-white/60">$</span>
                            <span>npm install @casoon/atlas-styles</span>
                            <button
                                class="p-1.5 rounded hover:bg-white/10 transition-colors"
                                onclick="navigator.clipboard.writeText('npm install @casoon/atlas-styles')"
                                title="Copy to clipboard"
                            >
                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                </svg>
                            </button>
                        </div>

                        <a
                            href="/components"
                            class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-white text-violet-600 font-semibold hover:bg-white/90 transition-colors"
                        >
                            <span>Dokumentation</span>
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</MainLayout>
