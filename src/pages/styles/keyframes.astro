---
import DocsLayout from "@layouts/DocsLayout.astro";
import { stylesSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Keyframes"
    description="CSS Keyframe-Animationen für dynamische Effekte"
    currentSection="styles"
    currentPage="/styles/keyframes"
    sidebar={stylesSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/styles" class="hover:text-white transition-colors">Styles</a>
            <span>/</span>
            <span class="text-white">Keyframes</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Keyframes</h1>
        <p class="text-gray-400 text-lg">CSS Keyframe-Animationen für dynamische UI-Effekte.</p>
    </div>

    <!-- Built-in Animations -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Standard-Animationen</h2>
        <p class="text-gray-400 mb-6">Vordefinierte Tailwind-Animationen.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-8 items-center">
                <div class="text-center">
                    <div class="w-16 h-16 bg-violet-500/30 rounded-xl flex items-center justify-center animate-spin">
                        <svg class="w-6 h-6 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                    </div>
                    <span class="text-xs text-gray-400 mt-2 block">animate-spin</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-fuchsia-500/30 rounded-xl flex items-center justify-center animate-ping">
                        <div class="w-4 h-4 bg-fuchsia-500 rounded-full"></div>
                    </div>
                    <span class="text-xs text-gray-400 mt-2 block">animate-ping</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-cyan-500/30 rounded-xl flex items-center justify-center animate-pulse">
                        <div class="w-8 h-8 bg-cyan-500/50 rounded-full"></div>
                    </div>
                    <span class="text-xs text-gray-400 mt-2 block">animate-pulse</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-emerald-500/30 rounded-xl flex items-center justify-center animate-bounce">
                        <svg class="w-6 h-6 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                        </svg>
                    </div>
                    <span class="text-xs text-gray-400 mt-2 block">animate-bounce</span>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"animate-spin"</span><span class="text-pink-400">&gt;</span>...<span class="text-pink-400">&lt;/div&gt;</span>
<span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"animate-ping"</span><span class="text-pink-400">&gt;</span>...<span class="text-pink-400">&lt;/div&gt;</span>
<span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"animate-pulse"</span><span class="text-pink-400">&gt;</span>...<span class="text-pink-400">&lt;/div&gt;</span>
<span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"animate-bounce"</span><span class="text-pink-400">&gt;</span>...<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Fade Animation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Fade Animation</h2>
        <p class="text-gray-400 mb-6">Ein- und Ausblenden von Elementen.</p>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <div class="flex flex-wrap gap-6">
                <div class="cs-glass-card p-6 animate-fade-in">
                    <span class="text-white">Fade In</span>
                </div>
                <div class="cs-glass-card p-6 animate-fade-in-up">
                    <span class="text-white">Fade In Up</span>
                </div>
                <div class="cs-glass-card p-6 animate-fade-in-down">
                    <span class="text-white">Fade In Down</span>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">CSS</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-violet-400">@keyframes</span> <span class="text-cyan-400">fadeIn</span> {"{"}
  <span class="text-fuchsia-400">from</span> {"{"} <span class="text-cyan-400">opacity</span>: <span class="text-emerald-400">0</span>; {"}"}
  <span class="text-fuchsia-400">to</span> {"{"} <span class="text-cyan-400">opacity</span>: <span class="text-emerald-400">1</span>; {"}"}
{"}"}

<span class="text-violet-400">@keyframes</span> <span class="text-cyan-400">fadeInUp</span> {"{"}
  <span class="text-fuchsia-400">from</span> {"{"} <span class="text-cyan-400">opacity</span>: <span class="text-emerald-400">0</span>; <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">translateY(20px)</span>; {"}"}
  <span class="text-fuchsia-400">to</span> {"{"} <span class="text-cyan-400">opacity</span>: <span class="text-emerald-400">1</span>; <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">translateY(0)</span>; {"}"}
{"}"}</code></pre>
        </div>
    </section>

    <!-- Scale Animation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Scale Animation</h2>
        <p class="text-gray-400 mb-6">Skalierungs-Animationen.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-8 items-center">
                <div class="text-center">
                    <div class="w-16 h-16 bg-violet-500/30 rounded-xl flex items-center justify-center animate-scale-in">
                        <span class="text-violet-400 font-bold">1</span>
                    </div>
                    <span class="text-xs text-gray-400 mt-2 block">Scale In</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-fuchsia-500/30 rounded-xl flex items-center justify-center animate-scale-pulse">
                        <span class="text-fuchsia-400 font-bold">2</span>
                    </div>
                    <span class="text-xs text-gray-400 mt-2 block">Scale Pulse</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-cyan-500/30 rounded-xl flex items-center justify-center animate-pop">
                        <span class="text-cyan-400 font-bold">3</span>
                    </div>
                    <span class="text-xs text-gray-400 mt-2 block">Pop</span>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">CSS</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-violet-400">@keyframes</span> <span class="text-cyan-400">scaleIn</span> {"{"}
  <span class="text-fuchsia-400">from</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">scale(0)</span>; {"}"}
  <span class="text-fuchsia-400">to</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">scale(1)</span>; {"}"}
{"}"}

<span class="text-violet-400">@keyframes</span> <span class="text-cyan-400">pop</span> {"{"}
  <span class="text-fuchsia-400">0%</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">scale(0)</span>; {"}"}
  <span class="text-fuchsia-400">70%</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">scale(1.1)</span>; {"}"}
  <span class="text-fuchsia-400">100%</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">scale(1)</span>; {"}"}
{"}"}</code></pre>
        </div>
    </section>

    <!-- Slide Animation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Slide Animation</h2>
        <p class="text-gray-400 mb-6">Verschiebungs-Animationen.</p>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-cyan-500/20 to-blue-500/20 border border-white/10">
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                <div class="cs-glass-card p-4 text-center animate-slide-in-left">
                    <span class="text-sm text-white">Slide Left</span>
                </div>
                <div class="cs-glass-card p-4 text-center animate-slide-in-right">
                    <span class="text-sm text-white">Slide Right</span>
                </div>
                <div class="cs-glass-card p-4 text-center animate-slide-in-up">
                    <span class="text-sm text-white">Slide Up</span>
                </div>
                <div class="cs-glass-card p-4 text-center animate-slide-in-down">
                    <span class="text-sm text-white">Slide Down</span>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">CSS</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-violet-400">@keyframes</span> <span class="text-cyan-400">slideInLeft</span> {"{"}
  <span class="text-fuchsia-400">from</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">translateX(-100%)</span>; <span class="text-cyan-400">opacity</span>: <span class="text-emerald-400">0</span>; {"}"}
  <span class="text-fuchsia-400">to</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">translateX(0)</span>; <span class="text-cyan-400">opacity</span>: <span class="text-emerald-400">1</span>; {"}"}
{"}"}

<span class="text-violet-400">@keyframes</span> <span class="text-cyan-400">slideInUp</span> {"{"}
  <span class="text-fuchsia-400">from</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">translateY(100%)</span>; <span class="text-cyan-400">opacity</span>: <span class="text-emerald-400">0</span>; {"}"}
  <span class="text-fuchsia-400">to</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">translateY(0)</span>; <span class="text-cyan-400">opacity</span>: <span class="text-emerald-400">1</span>; {"}"}
{"}"}</code></pre>
        </div>
    </section>

    <!-- Rotate Animation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Rotate Animation</h2>
        <p class="text-gray-400 mb-6">Rotations-Animationen.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-8 items-center">
                <div class="text-center">
                    <div class="w-16 h-16 bg-violet-500/30 rounded-xl flex items-center justify-center animate-rotate-slow">
                        <svg class="w-6 h-6 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    </div>
                    <span class="text-xs text-gray-400 mt-2 block">Slow Rotate</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-fuchsia-500/30 rounded-xl flex items-center justify-center animate-spin">
                        <svg class="w-6 h-6 text-fuchsia-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                    </div>
                    <span class="text-xs text-gray-400 mt-2 block">Normal Spin</span>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-cyan-500/30 rounded-xl flex items-center justify-center animate-wiggle">
                        <svg class="w-6 h-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                        </svg>
                    </div>
                    <span class="text-xs text-gray-400 mt-2 block">Wiggle</span>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">CSS</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-violet-400">@keyframes</span> <span class="text-cyan-400">wiggle</span> {"{"}
  <span class="text-fuchsia-400">0%, 100%</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">rotate(-3deg)</span>; {"}"}
  <span class="text-fuchsia-400">50%</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">rotate(3deg)</span>; {"}"}
{"}"}</code></pre>
        </div>
    </section>

    <!-- Shimmer Effect -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Shimmer Effect</h2>
        <p class="text-gray-400 mb-6">Glänzender Ladeeffekt für Skeletons.</p>
        <div class="mb-6 p-8 rounded-xl bg-[#0a0a1a] border border-white/10">
            <div class="space-y-4 max-w-md">
                <div class="animate-shimmer h-4 bg-gradient-to-r from-white/5 via-white/10 to-white/5 rounded bg-[length:200%_100%]"></div>
                <div class="animate-shimmer h-4 w-3/4 bg-gradient-to-r from-white/5 via-white/10 to-white/5 rounded bg-[length:200%_100%]"></div>
                <div class="animate-shimmer h-4 w-1/2 bg-gradient-to-r from-white/5 via-white/10 to-white/5 rounded bg-[length:200%_100%]"></div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">CSS</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-violet-400">@keyframes</span> <span class="text-cyan-400">shimmer</span> {"{"}
  <span class="text-fuchsia-400">0%</span> {"{"} <span class="text-cyan-400">background-position</span>: <span class="text-emerald-400">200% 0</span>; {"}"}
  <span class="text-fuchsia-400">100%</span> {"{"} <span class="text-cyan-400">background-position</span>: <span class="text-emerald-400">-200% 0</span>; {"}"}
{"}"}

<span class="text-violet-400">.animate-shimmer</span> {"{"}
  <span class="text-cyan-400">animation</span>: <span class="text-emerald-400">shimmer 2s infinite linear</span>;
  <span class="text-cyan-400">background-size</span>: <span class="text-emerald-400">200% 100%</span>;
{"}"}</code></pre>
        </div>
    </section>

    <!-- Gradient Animation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Gradient Animation</h2>
        <p class="text-gray-400 mb-6">Animierte Farbverläufe.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="h-24 rounded-xl bg-gradient-to-r from-violet-500 via-fuchsia-500 to-pink-500 bg-[length:200%_100%] animate-gradient"></div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">CSS</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-violet-400">@keyframes</span> <span class="text-cyan-400">gradient</span> {"{"}
  <span class="text-fuchsia-400">0%</span> {"{"} <span class="text-cyan-400">background-position</span>: <span class="text-emerald-400">0% 50%</span>; {"}"}
  <span class="text-fuchsia-400">50%</span> {"{"} <span class="text-cyan-400">background-position</span>: <span class="text-emerald-400">100% 50%</span>; {"}"}
  <span class="text-fuchsia-400">100%</span> {"{"} <span class="text-cyan-400">background-position</span>: <span class="text-emerald-400">0% 50%</span>; {"}"}
{"}"}

<span class="text-violet-400">.animate-gradient</span> {"{"}
  <span class="text-cyan-400">animation</span>: <span class="text-emerald-400">gradient 3s ease infinite</span>;
  <span class="text-cyan-400">background-size</span>: <span class="text-emerald-400">200% 100%</span>;
{"}"}</code></pre>
        </div>
    </section>

    <!-- Float Animation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Float Animation</h2>
        <p class="text-gray-400 mb-6">Schwebende Elemente.</p>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <div class="flex flex-wrap gap-8 items-center justify-center">
                <div class="w-20 h-20 bg-violet-500/30 rounded-full flex items-center justify-center animate-float">
                    <svg class="w-8 h-8 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                </div>
                <div class="w-16 h-16 bg-fuchsia-500/30 rounded-full flex items-center justify-center animate-float animation-delay-500">
                    <svg class="w-6 h-6 text-fuchsia-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                </div>
                <div class="w-12 h-12 bg-cyan-500/30 rounded-full flex items-center justify-center animate-float animation-delay-1000">
                    <div class="w-4 h-4 bg-cyan-400 rounded-full"></div>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">CSS</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-violet-400">@keyframes</span> <span class="text-cyan-400">float</span> {"{"}
  <span class="text-fuchsia-400">0%, 100%</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">translateY(0)</span>; {"}"}
  <span class="text-fuchsia-400">50%</span> {"{"} <span class="text-cyan-400">transform</span>: <span class="text-emerald-400">translateY(-10px)</span>; {"}"}
{"}"}

<span class="text-violet-400">.animate-float</span> {"{"}
  <span class="text-cyan-400">animation</span>: <span class="text-emerald-400">float 3s ease-in-out infinite</span>;
{"}"}</code></pre>
        </div>
    </section>

    <!-- Animation Properties -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Animation Properties</h2>
        <p class="text-gray-400 mb-6">Tailwind-Klassen für Animation-Timing.</p>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">Tailwind Classes</span></div>
            <div class="p-4 space-y-2 text-sm">
                <div class="flex justify-between text-gray-300">
                    <code class="text-fuchsia-400">animate-none</code>
                    <span class="text-gray-500">animation: none</span>
                </div>
                <div class="flex justify-between text-gray-300">
                    <code class="text-fuchsia-400">animate-spin</code>
