---
import DocsLayout from "@layouts/DocsLayout.astro";
import { stylesSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Shadows"
    description="Box-Schatten und Tiefeneffekte"
    currentSection="styles"
    currentPage="/styles/shadows"
    sidebar={stylesSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/styles" class="hover:text-white transition-colors">Styles</a>
            <span>/</span>
            <span class="text-white">Shadows</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Shadows</h1>
        <p class="text-gray-400 text-lg">Box-Schatten für Tiefe und visuelle Hierarchie.</p>
    </div>

    <!-- Standard Shadows -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Standard Shadows</h2>
        <div class="mb-4 p-8 rounded-xl bg-[#1e1e2e] border border-white/10">
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-8">
                <div class="text-center">
                    <div class="w-20 h-20 mx-auto bg-white/10 rounded-xl shadow-sm"></div>
                    <span class="text-xs text-gray-400 mt-3 block">shadow-sm</span>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 mx-auto bg-white/10 rounded-xl shadow"></div>
                    <span class="text-xs text-gray-400 mt-3 block">shadow</span>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 mx-auto bg-white/10 rounded-xl shadow-md"></div>
                    <span class="text-xs text-gray-400 mt-3 block">shadow-md</span>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 mx-auto bg-white/10 rounded-xl shadow-lg"></div>
                    <span class="text-xs text-gray-400 mt-3 block">shadow-lg</span>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 mx-auto bg-white/10 rounded-xl shadow-xl"></div>
                    <span class="text-xs text-gray-400 mt-3 block">shadow-xl</span>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 mx-auto bg-white/10 rounded-xl shadow-2xl"></div>
                    <span class="text-xs text-gray-400 mt-3 block">shadow-2xl</span>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"shadow-sm"</span><span class="text-pink-400">&gt;</span>Small<span class="text-pink-400">&lt;/div&gt;</span>
<span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"shadow-md"</span><span class="text-pink-400">&gt;</span>Medium<span class="text-pink-400">&lt;/div&gt;</span>
<span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"shadow-xl"</span><span class="text-pink-400">&gt;</span>Extra Large<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Colored Shadows -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Farbige Schatten</h2>
        <p class="text-gray-400 mb-6">Schatten mit Farbakzenten für lebendige UI-Elemente.</p>
        <div class="mb-4 p-8 rounded-xl bg-[#0a0a1a] border border-white/10">
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-8">
                <div class="text-center">
                    <div class="w-20 h-20 mx-auto bg-violet-500 rounded-xl shadow-lg shadow-violet-500/50"></div>
                    <span class="text-xs text-gray-400 mt-3 block">violet</span>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 mx-auto bg-fuchsia-500 rounded-xl shadow-lg shadow-fuchsia-500/50"></div>
                    <span class="text-xs text-gray-400 mt-3 block">fuchsia</span>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 mx-auto bg-cyan-500 rounded-xl shadow-lg shadow-cyan-500/50"></div>
                    <span class="text-xs text-gray-400 mt-3 block">cyan</span>
                </div>
                <div class="text-center">
                    <div class="w-20 h-20 mx-auto bg-emerald-500 rounded-xl shadow-lg shadow-emerald-500/50"></div>
                    <span class="text-xs text-gray-400 mt-3 block">emerald</span>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"shadow-lg shadow-violet-500/50"</span><span class="text-pink-400">&gt;</span>
  Violet Shadow
<span class="text-pink-400">&lt;/div&gt;</span>

<span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"bg-fuchsia-500 shadow-lg shadow-fuchsia-500/50"</span><span class="text-pink-400">&gt;</span>
  Glow Button
<span class="text-pink-400">&lt;/button&gt;</span></code></pre>
        </div>
    </section>

    <!-- Inner Shadow -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Inner Shadow</h2>
        <p class="text-gray-400 mb-6">Innere Schatten für eingeprägte Elemente.</p>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="grid grid-cols-2 gap-8">
                <div class="text-center">
                    <div class="w-32 h-20 mx-auto bg-white/5 rounded-xl shadow-inner"></div>
                    <span class="text-xs text-gray-400 mt-3 block">shadow-inner</span>
                </div>
                <div class="text-center">
                    <input type="text" placeholder="Input Field" class="w-full px-4 py-3 rounded-xl bg-black/30 shadow-inner border border-white/10 text-white placeholder:text-gray-500" />
                    <span class="text-xs text-gray-400 mt-3 block">Input mit shadow-inner</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Glow Effects -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Glow Effects</h2>
        <p class="text-gray-400 mb-6">Leuchtende Schatten für Hervorhebungen.</p>
        <div class="mb-4 p-8 rounded-xl bg-[#0a0a1a] border border-white/10">
            <div class="flex flex-wrap justify-center gap-8">
                <button class="px-6 py-3 rounded-xl bg-violet-500 text-white font-medium shadow-lg shadow-violet-500/50 hover:shadow-xl hover:shadow-violet-500/60 transition-all">
                    Primary Glow
                </button>
                <button class="px-6 py-3 rounded-xl bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white font-medium shadow-lg shadow-fuchsia-500/40 hover:shadow-xl hover:shadow-fuchsia-500/50 transition-all">
                    Gradient Glow
                </button>
                <button class="px-6 py-3 rounded-xl bg-cyan-500 text-white font-medium shadow-lg shadow-cyan-500/50 hover:shadow-xl hover:shadow-cyan-500/60 transition-all">
                    Neon Glow
                </button>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"bg-violet-500
    shadow-lg shadow-violet-500/50
    hover:shadow-xl hover:shadow-violet-500/60
    transition-all"</span><span class="text-pink-400">&gt;</span>
  Glow Button
<span class="text-pink-400">&lt;/button&gt;</span></code></pre>
        </div>
    </section>

    <!-- Card Shadows -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Card Shadows</h2>
        <p class="text-gray-400 mb-6">Verschiedene Schattenstile für Karten.</p>
        <div class="mb-4 p-8 rounded-xl bg-[#0f0f1a] border border-white/10">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                <div class="p-6 bg-white/5 rounded-xl shadow-lg">
                    <h3 class="text-white font-medium mb-2">Standard</h3>
                    <p class="text-gray-400 text-sm">shadow-lg</p>
                </div>
                <div class="p-6 bg-white/5 rounded-xl shadow-xl shadow-violet-500/10">
                    <h3 class="text-white font-medium mb-2">Colored</h3>
                    <p class="text-gray-400 text-sm">shadow-violet-500/10</p>
                </div>
                <div class="p-6 bg-white/5 rounded-xl shadow-2xl hover:shadow-violet-500/20 transition-shadow">
                    <h3 class="text-white font-medium mb-2">Hover Effect</h3>
                    <p class="text-gray-400 text-sm">hover:shadow</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Drop Shadow -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Drop Shadow</h2>
        <p class="text-gray-400 mb-6">Filter-basierte Schatten für SVGs und komplexe Formen.</p>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex justify-center gap-12">
                <div class="text-center">
                    <svg class="w-16 h-16 text-violet-500 drop-shadow-lg mx-auto" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    <span class="text-xs text-gray-400 mt-3 block">drop-shadow-lg</span>
                </div>
                <div class="text-center">
                    <svg class="w-16 h-16 text-fuchsia-500 drop-shadow-xl mx-auto" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                    </svg>
                    <span class="text-xs text-gray-400 mt-3 block">drop-shadow-xl</span>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;svg</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"drop-shadow-lg"</span><span class="text-pink-400">&gt;</span>...<span class="text-pink-400">&lt;/svg&gt;</span>
<span class="text-pink-400">&lt;img</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"drop-shadow-xl"</span> <span class="text-violet-400">src</span>=<span class="text-emerald-400">"..."</span> <span class="text-pink-400">/&gt;</span></code></pre>
        </div>
    </section>

    <!-- Shadow on Hover -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Hover Transitions</h2>
        <div class="mb-4 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex justify-center gap-6">
                <div class="p-6 bg-white/5 rounded-xl shadow-md hover:shadow-xl transition-shadow cursor-pointer">
                    <p class="text-white text-sm">Hover me</p>
                </div>
                <div class="p-6 bg-white/5 rounded-xl shadow-md hover:shadow-2xl hover:shadow-violet-500/20 transition-all cursor-pointer">
                    <p class="text-white text-sm">Colored hover</p>
                </div>
                <div class="p-6 bg-white/5 rounded-xl shadow-md hover:shadow-xl hover:-translate-y-1 transition-all cursor-pointer">
                    <p class="text-white text-sm">Lift effect</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"shadow-md hover:shadow-xl transition-shadow"</span><span class="text-pink-400">&gt;</span>
  Hover Shadow
<span class="text-pink-400">&lt;/div&gt;</span>

<span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"shadow-md hover:shadow-xl hover:-translate-y-1 transition-all"</span><span class="text-pink-400">&gt;</span>
  Lift Effect
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/styles/spacing" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Spacing</span>
        </a>
        <a href="/styles/gradients" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Gradients</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
