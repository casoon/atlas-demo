---
import DocsLayout from "@layouts/DocsLayout.astro";
import { stylesSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Glass Inputs"
    description="Glassmorphism-Eingabefelder für Formulare"
    currentSection="styles"
    currentPage="/styles/glass-inputs"
    sidebar={stylesSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/styles" class="hover:text-white transition-colors">Styles</a>
            <span>/</span>
            <span class="text-white">Glass Inputs</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Glass Inputs</h1>
        <p class="text-gray-400 text-lg">Glassmorphism-Eingabefelder für Formulare.</p>
    </div>

    <!-- Basic Input -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Input</h2>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <input type="text" placeholder="Glass Input" class="cs-input-glass px-4 py-3 rounded-xl w-full max-w-md text-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-violet-500/50" />
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;input</span>
  <span class="text-violet-400">type</span>=<span class="text-emerald-400">"text"</span>
  <span class="text-violet-400">class</span>=<span class="text-emerald-400">"cs-input-glass px-4 py-3 rounded-xl text-white"</span>
<span class="text-pink-400">/&gt;</span></code></pre>
        </div>
    </section>

    <!-- Input Sizes -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Größen</h2>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-cyan-500/20 to-blue-500/20 border border-white/10 space-y-4">
            <input type="text" placeholder="Small" class="cs-input-glass px-3 py-2 rounded-lg w-full max-w-md text-sm text-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-cyan-500/50" />
            <input type="text" placeholder="Medium" class="cs-input-glass px-4 py-3 rounded-xl w-full max-w-md text-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-cyan-500/50" />
            <input type="text" placeholder="Large" class="cs-input-glass px-5 py-4 rounded-xl w-full max-w-md text-lg text-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-cyan-500/50" />
        </div>
    </section>

    <!-- With Icons -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Mit Icons</h2>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10 space-y-4">
            <div class="relative max-w-md">
                <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                <input type="text" placeholder="Suchen..." class="cs-input-glass pl-12 pr-4 py-3 rounded-xl w-full text-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-violet-500/50" />
            </div>
            <div class="relative max-w-md">
                <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <input type="email" placeholder="email@example.com" class="cs-input-glass pl-12 pr-4 py-3 rounded-xl w-full text-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-violet-500/50" />
            </div>
        </div>
    </section>

    <!-- Validation States -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Validierungszustände</h2>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10 space-y-4">
            <div class="max-w-md">
                <label class="block text-sm text-gray-300 mb-2">Erfolgreich</label>
                <input type="text" value="Gültige Eingabe" class="cs-input-glass px-4 py-3 rounded-xl w-full text-white border-2 border-emerald-500/50 focus:outline-none focus:ring-2 focus:ring-emerald-500/50" />
                <p class="text-emerald-400 text-sm mt-2">Eingabe ist gültig</p>
            </div>
            <div class="max-w-md">
                <label class="block text-sm text-gray-300 mb-2">Fehler</label>
                <input type="text" value="Ungültige Eingabe" class="cs-input-glass px-4 py-3 rounded-xl w-full text-white border-2 border-red-500/50 focus:outline-none focus:ring-2 focus:ring-red-500/50" />
                <p class="text-red-400 text-sm mt-2">Bitte korrigieren Sie die Eingabe</p>
            </div>
        </div>
    </section>

    <!-- Textarea -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Textarea</h2>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <textarea placeholder="Nachricht eingeben..." rows="4" class="cs-input-glass px-4 py-3 rounded-xl w-full max-w-md text-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-violet-500/50 resize-none"></textarea>
        </div>
    </section>

    <!-- Form Example -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Formular-Beispiel</h2>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <form class="max-w-md space-y-4">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm text-gray-300 mb-2">Vorname</label>
                        <input type="text" placeholder="Max" class="cs-input-glass px-4 py-3 rounded-xl w-full text-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-violet-500/50" />
                    </div>
                    <div>
                        <label class="block text-sm text-gray-300 mb-2">Nachname</label>
                        <input type="text" placeholder="Mustermann" class="cs-input-glass px-4 py-3 rounded-xl w-full text-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-violet-500/50" />
                    </div>
                </div>
                <div>
                    <label class="block text-sm text-gray-300 mb-2">E-Mail</label>
                    <input type="email" placeholder="max@example.com" class="cs-input-glass px-4 py-3 rounded-xl w-full text-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-violet-500/50" />
                </div>
                <button type="submit" class="w-full px-6 py-3 bg-gradient-to-r from-violet-500 to-fuchsia-500 rounded-xl text-white font-medium hover:from-violet-600 hover:to-fuchsia-600 transition-all">
                    Absenden
                </button>
            </form>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/styles/glass-buttons" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Glass Buttons</span>
        </a>
        <a href="/styles/transitions" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Transitions</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
