---
import DocsLayout from "@layouts/DocsLayout.astro";
import { stylesSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Hover States"
    description="Interaktive Hover-Effekte für UI-Elemente"
    currentSection="styles"
    currentPage="/styles/hover"
    sidebar={stylesSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/styles" class="hover:text-white transition-colors">Styles</a>
            <span>/</span>
            <span class="text-white">Hover States</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Hover States</h1>
        <p class="text-gray-400 text-lg">Interaktive Hover-Effekte und Zustände für UI-Elemente.</p>
    </div>

    <!-- Basic Hover Colors -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Hover-Farben</h2>
        <p class="text-gray-400 mb-6">Grundlegende Farbänderungen bei Hover.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-4">
                <button class="px-6 py-3 bg-violet-500 hover:bg-violet-600 rounded-xl text-white transition-colors">
                    hover:bg-violet-600
                </button>
                <button class="px-6 py-3 bg-fuchsia-500 hover:bg-fuchsia-600 rounded-xl text-white transition-colors">
                    hover:bg-fuchsia-600
                </button>
                <button class="px-6 py-3 bg-cyan-500 hover:bg-cyan-600 rounded-xl text-white transition-colors">
                    hover:bg-cyan-600
                </button>
                <button class="px-6 py-3 bg-emerald-500 hover:bg-emerald-600 rounded-xl text-white transition-colors">
                    hover:bg-emerald-600
                </button>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"bg-violet-500 hover:bg-violet-600 transition-colors"</span><span class="text-pink-400">&gt;</span>
  Button
<span class="text-pink-400">&lt;/button&gt;</span></code></pre>
        </div>
    </section>

    <!-- Hover Opacity -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Hover Opacity</h2>
        <p class="text-gray-400 mb-6">Transparenzänderungen bei Hover.</p>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <div class="flex flex-wrap gap-4">
                <div class="px-6 py-4 bg-white/10 hover:bg-white/20 rounded-xl text-white transition-colors cursor-pointer">
                    hover:bg-white/20
                </div>
                <div class="px-6 py-4 bg-white/10 hover:bg-white/30 rounded-xl text-white transition-colors cursor-pointer">
                    hover:bg-white/30
                </div>
                <div class="px-6 py-4 bg-violet-500/30 hover:bg-violet-500/50 rounded-xl text-white transition-colors cursor-pointer">
                    hover:bg-violet-500/50
                </div>
            </div>
        </div>
    </section>

    <!-- Hover Scale -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Hover Scale</h2>
        <p class="text-gray-400 mb-6">Skalierungseffekte beim Überfahren.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-6">
                <div class="px-6 py-4 bg-violet-500/20 rounded-xl text-white hover:scale-95 transition-transform cursor-pointer">
                    hover:scale-95
                </div>
                <div class="px-6 py-4 bg-violet-500/20 rounded-xl text-white hover:scale-100 transition-transform cursor-pointer">
                    hover:scale-100
                </div>
                <div class="px-6 py-4 bg-violet-500/20 rounded-xl text-white hover:scale-105 transition-transform cursor-pointer">
                    hover:scale-105
                </div>
                <div class="px-6 py-4 bg-violet-500/20 rounded-xl text-white hover:scale-110 transition-transform cursor-pointer">
                    hover:scale-110
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"hover:scale-105 transition-transform"</span><span class="text-pink-400">&gt;</span>
  Scalable Element
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Hover Translate -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Hover Translate</h2>
        <p class="text-gray-400 mb-6">Verschiebungseffekte bei Hover.</p>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-cyan-500/20 to-blue-500/20 border border-white/10">
            <div class="flex flex-wrap gap-6">
                <div class="px-6 py-4 bg-white/10 rounded-xl text-white hover:-translate-y-1 transition-transform cursor-pointer">
                    hover:-translate-y-1
                </div>
                <div class="px-6 py-4 bg-white/10 rounded-xl text-white hover:-translate-y-2 transition-transform cursor-pointer">
                    hover:-translate-y-2
                </div>
                <div class="px-6 py-4 bg-white/10 rounded-xl text-white hover:translate-x-1 transition-transform cursor-pointer">
                    hover:translate-x-1
                </div>
                <div class="px-6 py-4 bg-white/10 rounded-xl text-white hover:-translate-x-1 transition-transform cursor-pointer">
                    hover:-translate-x-1
                </div>
            </div>
        </div>
    </section>

    <!-- Hover Rotate -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Hover Rotate</h2>
        <p class="text-gray-400 mb-6">Rotationseffekte beim Überfahren.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-6 items-center">
                <div class="w-16 h-16 bg-violet-500/30 rounded-xl flex items-center justify-center text-white hover:rotate-6 transition-transform cursor-pointer">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3l14 9-14 9V3z" />
                    </svg>
                </div>
                <div class="w-16 h-16 bg-fuchsia-500/30 rounded-xl flex items-center justify-center text-white hover:rotate-12 transition-transform cursor-pointer">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                </div>
                <div class="w-16 h-16 bg-cyan-500/30 rounded-xl flex items-center justify-center text-white hover:-rotate-12 transition-transform cursor-pointer">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                </div>
                <div class="w-16 h-16 bg-emerald-500/30 rounded-xl flex items-center justify-center text-white hover:rotate-180 transition-transform duration-500 cursor-pointer">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                </div>
            </div>
        </div>
    </section>

    <!-- Hover Shadow -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Hover Shadow</h2>
        <p class="text-gray-400 mb-6">Schatten-Änderungen bei Hover.</p>
        <div class="mb-6 p-8 rounded-xl bg-[#0a0a1a] border border-white/10">
            <div class="flex flex-wrap gap-6">
                <div class="px-6 py-4 bg-white/10 rounded-xl text-white shadow-none hover:shadow-lg transition-shadow cursor-pointer">
                    hover:shadow-lg
                </div>
                <div class="px-6 py-4 bg-white/10 rounded-xl text-white shadow-md hover:shadow-xl transition-shadow cursor-pointer">
                    hover:shadow-xl
                </div>
                <div class="px-6 py-4 bg-white/10 rounded-xl text-white shadow-lg shadow-violet-500/20 hover:shadow-violet-500/40 transition-shadow cursor-pointer">
                    Colored Shadow
                </div>
            </div>
        </div>
    </section>

    <!-- Hover Border -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Hover Border</h2>
        <p class="text-gray-400 mb-6">Rahmenänderungen bei Hover.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-6">
                <div class="px-6 py-4 bg-white/5 border border-white/10 hover:border-white/30 rounded-xl text-white transition-colors cursor-pointer">
                    hover:border-white/30
                </div>
                <div class="px-6 py-4 bg-white/5 border border-transparent hover:border-violet-500 rounded-xl text-white transition-colors cursor-pointer">
                    hover:border-violet-500
                </div>
                <div class="px-6 py-4 bg-white/5 border-2 border-white/10 hover:border-fuchsia-500 rounded-xl text-white transition-colors cursor-pointer">
                    hover:border-fuchsia-500
                </div>
            </div>
        </div>
    </section>

    <!-- Hover Text -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Hover Text</h2>
        <p class="text-gray-400 mb-6">Textfarben-Änderungen bei Hover.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-6">
                <a href="#" class="text-gray-400 hover:text-white transition-colors">hover:text-white</a>
                <a href="#" class="text-gray-400 hover:text-violet-400 transition-colors">hover:text-violet-400</a>
                <a href="#" class="text-gray-400 hover:text-fuchsia-400 transition-colors">hover:text-fuchsia-400</a>
                <a href="#" class="text-gray-400 hover:text-cyan-400 transition-colors">hover:text-cyan-400</a>
            </div>
        </div>
    </section>

    <!-- Combined Hover Effects -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Kombinierte Effekte</h2>
        <p class="text-gray-400 mb-6">Mehrere Hover-Effekte kombiniert.</p>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                <div class="cs-glass-card p-6 hover:bg-white/15 hover:scale-105 hover:-translate-y-1 hover:shadow-lg transition-all cursor-pointer">
                    <h3 class="text-white font-semibold mb-2">Full Effect</h3>
                    <p class="text-gray-400 text-sm">Scale + Translate + Shadow + Background</p>
                </div>
                <div class="cs-glass-card p-6 hover:border-violet-500/50 hover:shadow-lg hover:shadow-violet-500/20 transition-all cursor-pointer">
                    <h3 class="text-white font-semibold mb-2">Glow Effect</h3>
                    <p class="text-gray-400 text-sm">Border + Colored Shadow</p>
                </div>
                <div class="p-[1px] rounded-xl bg-white/10 hover:bg-gradient-to-r hover:from-violet-500 hover:to-fuchsia-500 transition-all cursor-pointer">
                    <div class="p-6 rounded-[11px] bg-[#0a0a1a]">
                        <h3 class="text-white font-semibold mb-2">Gradient Border</h3>
                        <p class="text-gray-400 text-sm">Border auf Gradient wechseln</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"hover:bg-white/15 hover:scale-105 hover:-translate-y-1 hover:shadow-lg transition-all"</span><span class="text-pink-400">&gt;</span>
  Combined Effects
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <!-- Group Hover -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Group Hover</h2>
        <p class="text-gray-400 mb-6">Elemente basierend auf Parent-Hover stylen.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="group cs-glass-card p-6 max-w-md cursor-pointer hover:bg-white/10 transition-colors">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-violet-500/20 rounded-xl flex items-center justify-center group-hover:bg-violet-500 transition-colors">
                        <svg class="w-6 h-6 text-violet-400 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-white font-semibold group-hover:text-violet-300 transition-colors">Group Hover Card</h3>
                        <p class="text-gray-400 text-sm group-hover:text-gray-300 transition-colors">Hover über die ganze Card</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"group"</span><span class="text-pink-400">&gt;</span>
  <span class="text-pink-400">&lt;div</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"group-hover:bg-violet-500"</span><span class="text-pink-400">&gt;</span>Icon<span class="text-pink-400">&lt;/div&gt;</span>
  <span class="text-pink-400">&lt;span</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"group-hover:text-violet-300"</span><span class="text-pink-400">&gt;</span>Text<span class="text-pink-400">&lt;/span&gt;</span>
<span class="text-pink-400">&lt;/div&gt;</span></code></pre>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/styles/transitions" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Transitions</span>
        </a>
        <a href="/styles/keyframes" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Keyframes</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
