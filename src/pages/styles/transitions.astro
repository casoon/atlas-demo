---
import DocsLayout from "@layouts/DocsLayout.astro";
import { stylesSidebar } from "@/data/sidebars";
---

<DocsLayout
    title="Transitions"
    description="CSS-Übergänge und Animationen"
    currentSection="styles"
    currentPage="/styles/transitions"
    sidebar={stylesSidebar}
>
    <div class="mb-10">
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/styles" class="hover:text-white transition-colors">Styles</a>
            <span>/</span>
            <span class="text-white">Transitions</span>
        </nav>
        <h1 class="text-3xl font-bold text-white mb-3">Transitions</h1>
        <p class="text-gray-400 text-lg">CSS-Übergänge für flüssige Animationen.</p>
    </div>

    <!-- Basic Transitions -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Basic Transitions</h2>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-4">
                <button class="px-6 py-3 bg-violet-500 hover:bg-violet-600 rounded-xl text-white transition-colors">
                    transition-colors
                </button>
                <button class="px-6 py-3 bg-violet-500 hover:opacity-75 rounded-xl text-white transition-opacity">
                    transition-opacity
                </button>
                <button class="px-6 py-3 bg-violet-500 hover:shadow-xl rounded-xl text-white transition-shadow">
                    transition-shadow
                </button>
                <button class="px-6 py-3 bg-violet-500 hover:scale-110 rounded-xl text-white transition-transform">
                    transition-transform
                </button>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"transition-colors hover:bg-violet-600"</span><span class="text-pink-400">&gt;</span>
  Colors
<span class="text-pink-400">&lt;/button&gt;</span>
<span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"transition-transform hover:scale-110"</span><span class="text-pink-400">&gt;</span>
  Transform
<span class="text-pink-400">&lt;/button&gt;</span></code></pre>
        </div>
    </section>

    <!-- Duration -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Duration</h2>
        <p class="text-gray-400 mb-6">Verschiedene Übergangszeiten.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-4">
                <button class="px-6 py-3 bg-fuchsia-500 hover:bg-fuchsia-600 rounded-xl text-white transition-colors duration-75">
                    75ms
                </button>
                <button class="px-6 py-3 bg-fuchsia-500 hover:bg-fuchsia-600 rounded-xl text-white transition-colors duration-150">
                    150ms
                </button>
                <button class="px-6 py-3 bg-fuchsia-500 hover:bg-fuchsia-600 rounded-xl text-white transition-colors duration-300">
                    300ms
                </button>
                <button class="px-6 py-3 bg-fuchsia-500 hover:bg-fuchsia-600 rounded-xl text-white transition-colors duration-500">
                    500ms
                </button>
                <button class="px-6 py-3 bg-fuchsia-500 hover:bg-fuchsia-600 rounded-xl text-white transition-colors duration-1000">
                    1000ms
                </button>
            </div>
        </div>
    </section>

    <!-- Easing Functions -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Easing Functions</h2>
        <p class="text-gray-400 mb-6">Verschiedene Beschleunigungskurven.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-4">
                <button class="px-6 py-3 bg-cyan-500 hover:translate-x-4 rounded-xl text-white transition-transform duration-500 ease-linear">
                    linear
                </button>
                <button class="px-6 py-3 bg-cyan-500 hover:translate-x-4 rounded-xl text-white transition-transform duration-500 ease-in">
                    ease-in
                </button>
                <button class="px-6 py-3 bg-cyan-500 hover:translate-x-4 rounded-xl text-white transition-transform duration-500 ease-out">
                    ease-out
                </button>
                <button class="px-6 py-3 bg-cyan-500 hover:translate-x-4 rounded-xl text-white transition-transform duration-500 ease-in-out">
                    ease-in-out
                </button>
            </div>
        </div>
        <div class="rounded-xl bg-[#1a1a2e] border border-white/10 overflow-hidden">
            <div class="px-4 py-3 border-b border-white/10"><span class="text-xs text-gray-500">HTML</span></div>
            <pre class="p-4 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-pink-400">&lt;button</span> <span class="text-violet-400">class</span>=<span class="text-emerald-400">"transition-transform duration-500 ease-in-out"</span><span class="text-pink-400">&gt;</span>
  Smooth
<span class="text-pink-400">&lt;/button&gt;</span></code></pre>
        </div>
    </section>

    <!-- Combined Transitions -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Kombinierte Transitions</h2>
        <div class="mb-6 p-8 rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/10">
            <div class="flex flex-wrap gap-4">
                <button class="px-6 py-3 bg-violet-500 hover:bg-violet-600 hover:scale-105 hover:shadow-lg rounded-xl text-white transition-all duration-300">
                    transition-all
                </button>
                <div class="p-6 bg-white/5 rounded-xl hover:bg-white/10 hover:-translate-y-1 hover:shadow-xl transition-all duration-300 cursor-pointer">
                    <p class="text-white text-sm">Hover Card</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Delay -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Delay</h2>
        <p class="text-gray-400 mb-6">Verzögerte Übergänge.</p>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10">
            <div class="flex flex-wrap gap-4">
                <button class="px-6 py-3 bg-emerald-500 hover:bg-emerald-600 rounded-xl text-white transition-colors delay-0">
                    delay-0
                </button>
                <button class="px-6 py-3 bg-emerald-500 hover:bg-emerald-600 rounded-xl text-white transition-colors delay-75">
                    delay-75
                </button>
                <button class="px-6 py-3 bg-emerald-500 hover:bg-emerald-600 rounded-xl text-white transition-colors delay-150">
                    delay-150
                </button>
                <button class="px-6 py-3 bg-emerald-500 hover:bg-emerald-600 rounded-xl text-white transition-colors delay-300">
                    delay-300
                </button>
            </div>
        </div>
    </section>

    <!-- Hover States -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Hover States</h2>
        <div class="mb-6 p-8 rounded-xl bg-[#0a0a1a] border border-white/10">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                <div class="p-6 bg-white/5 rounded-xl hover:bg-violet-500/20 border border-transparent hover:border-violet-500/30 transition-all cursor-pointer">
                    <h3 class="text-white font-medium mb-2">Background</h3>
                    <p class="text-gray-400 text-sm">Farbwechsel</p>
                </div>
                <div class="p-6 bg-white/5 rounded-xl hover:scale-105 transition-transform cursor-pointer">
                    <h3 class="text-white font-medium mb-2">Scale</h3>
                    <p class="text-gray-400 text-sm">Vergrößerung</p>
                </div>
                <div class="p-6 bg-white/5 rounded-xl hover:-translate-y-2 hover:shadow-xl hover:shadow-violet-500/20 transition-all cursor-pointer">
                    <h3 class="text-white font-medium mb-2">Lift</h3>
                    <p class="text-gray-400 text-sm">Anheben mit Schatten</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Focus States -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-white mb-4">Focus States</h2>
        <div class="mb-6 p-8 rounded-xl bg-white/5 border border-white/10 space-y-4">
            <input type="text" placeholder="Focus me..." class="px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder:text-gray-500 focus:border-violet-500 focus:ring-2 focus:ring-violet-500/50 focus:outline-none transition-all w-full max-w-md" />
            <button class="px-6 py-3 bg-violet-500 rounded-xl text-white focus:ring-4 focus:ring-violet-500/50 focus:outline-none transition-all">
                Focus Ring
            </button>
        </div>
    </section>

    <div class="flex items-center justify-between pt-8 border-t border-white/10">
        <a href="/styles/glass-inputs" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Glass Inputs</span>
        </a>
        <a href="/styles/hover" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
            <span>Hover States</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
    </div>
</DocsLayout>
