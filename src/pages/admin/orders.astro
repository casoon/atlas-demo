---
import AdminLayout from "@layouts/AdminLayout.astro";

const orders = [
    { id: "ORD-001", customer: "Max Mustermann", email: "max@example.com", amount: 129.99, status: "completed", date: "2024-01-15", items: 3 },
    { id: "ORD-002", customer: "Anna Schmidt", email: "anna@example.com", amount: 249.50, status: "processing", date: "2024-01-15", items: 5 },
    { id: "ORD-003", customer: "Peter Weber", email: "peter@example.com", amount: 89.00, status: "pending", date: "2024-01-14", items: 2 },
    { id: "ORD-004", customer: "Lisa Meyer", email: "lisa@example.com", amount: 549.99, status: "completed", date: "2024-01-14", items: 8 },
    { id: "ORD-005", customer: "Tom Schneider", email: "tom@example.com", amount: 34.99, status: "cancelled", date: "2024-01-13", items: 1 },
    { id: "ORD-006", customer: "Sarah Braun", email: "sarah@example.com", amount: 199.00, status: "refunded", date: "2024-01-13", items: 4 },
];

const stats = [
    { label: "Total Orders", value: "1,234", change: "+12%", trend: "up" },
    { label: "Revenue", value: "$48,352", change: "+8%", trend: "up" },
    { label: "Avg. Order", value: "$89.50", change: "+3%", trend: "up" },
    { label: "Refund Rate", value: "2.4%", change: "-0.5%", trend: "down" },
];

const statusConfig: Record<string, { bg: string, text: string, dot: string }> = {
    completed: { bg: "bg-emerald-500/20", text: "text-emerald-400", dot: "bg-emerald-400" },
    processing: { bg: "bg-blue-500/20", text: "text-blue-400", dot: "bg-blue-400" },
    pending: { bg: "bg-yellow-500/20", text: "text-yellow-400", dot: "bg-yellow-400" },
    cancelled: { bg: "bg-rose-500/20", text: "text-rose-400", dot: "bg-rose-400" },
    refunded: { bg: "bg-purple-500/20", text: "text-purple-400", dot: "bg-purple-400" },
};
---

<AdminLayout title="Orders" currentPage="orders">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
        <div>
            <h2 class="text-xl sm:text-2xl font-bold text-white">Orders</h2>
            <p class="text-white/50 text-sm mt-1">Manage customer orders and transactions</p>
        </div>
        <div class="flex gap-3">
            <button class="cs-glass-button inline-flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
                Export
            </button>
            <button class="cs-glass-button inline-flex items-center gap-2 bg-gradient-to-r from-violet-500 to-fuchsia-500 border-0 text-white">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                New Order
            </button>
        </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        {stats.map((stat) => (
            <div class="cs-glass-card p-4">
                <div class="flex items-start justify-between">
                    <div>
                        <p class="text-sm text-white/50">{stat.label}</p>
                        <p class="text-2xl font-bold text-white mt-1">{stat.value}</p>
                    </div>
                    <span class:list={[
                        "px-2 py-0.5 text-xs font-medium rounded-full",
                        stat.trend === "up" ? "bg-emerald-500/20 text-emerald-400" : "bg-rose-500/20 text-rose-400"
                    ]}>
                        {stat.change}
                    </span>
                </div>
            </div>
        ))}
    </div>

    <!-- Filters -->
    <div class="cs-glass-card p-4 mb-6">
        <div class="flex flex-col sm:flex-row gap-3">
            <div class="flex-1 relative">
                <input type="text" placeholder="Search orders..." class="cs-input-glass w-full pl-10" />
                <svg class="w-4 h-4 text-white/30 absolute left-3.5 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
            </div>
            <select class="cs-input-glass">
                <option>All Status</option>
                <option>Completed</option>
                <option>Processing</option>
                <option>Pending</option>
                <option>Cancelled</option>
                <option>Refunded</option>
            </select>
            <input type="date" class="cs-input-glass" />
        </div>
    </div>

    <!-- Orders Table -->
    <div class="cs-glass-card overflow-hidden">
        <!-- Desktop Table -->
        <div class="hidden lg:block overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-white/[0.08]">
                        <th class="text-left px-6 py-4 text-xs font-medium text-white/40 uppercase tracking-wider">Order ID</th>
                        <th class="text-left px-6 py-4 text-xs font-medium text-white/40 uppercase tracking-wider">Customer</th>
                        <th class="text-left px-6 py-4 text-xs font-medium text-white/40 uppercase tracking-wider">Items</th>
                        <th class="text-left px-6 py-4 text-xs font-medium text-white/40 uppercase tracking-wider">Amount</th>
                        <th class="text-left px-6 py-4 text-xs font-medium text-white/40 uppercase tracking-wider">Status</th>
                        <th class="text-left px-6 py-4 text-xs font-medium text-white/40 uppercase tracking-wider">Date</th>
                        <th class="text-right px-6 py-4 text-xs font-medium text-white/40 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/[0.05]">
                    {orders.map((order) => (
                        <tr class="hover:bg-white/[0.02] transition-colors">
                            <td class="px-6 py-4">
                                <span class="font-mono text-sm text-violet-400">{order.id}</span>
                            </td>
                            <td class="px-6 py-4">
                                <div>
                                    <p class="font-medium text-white">{order.customer}</p>
                                    <p class="text-sm text-white/40">{order.email}</p>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-white/60">{order.items} items</td>
                            <td class="px-6 py-4 font-medium text-white">${order.amount.toFixed(2)}</td>
                            <td class="px-6 py-4">
                                <span class:list={[
                                    "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full",
                                    statusConfig[order.status].bg,
                                    statusConfig[order.status].text
                                ]}>
                                    <span class:list={["w-1.5 h-1.5 rounded-full", statusConfig[order.status].dot]}></span>
                                    {order.status.charAt(0).toUpperCase() + order.status.slice(1)}
                                </span>
                            </td>
                            <td class="px-6 py-4 text-white/50 text-sm">{order.date}</td>
                            <td class="px-6 py-4">
                                <div class="flex items-center justify-end gap-1">
                                    <button class="cs-glass-button p-2" title="View">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                        </svg>
                                    </button>
                                    <button class="cs-glass-button p-2" title="Edit">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    ))}
                </tbody>
            </table>
        </div>

        <!-- Mobile Cards -->
        <div class="lg:hidden divide-y divide-white/[0.05]">
            {orders.map((order) => (
                <div class="p-4">
                    <div class="flex items-start justify-between mb-3">
                        <div>
                            <span class="font-mono text-sm text-violet-400">{order.id}</span>
                            <p class="font-medium text-white mt-1">{order.customer}</p>
                        </div>
                        <span class:list={[
                            "inline-flex items-center gap-1.5 px-2 py-0.5 text-xs font-medium rounded-full",
                            statusConfig[order.status].bg,
                            statusConfig[order.status].text
                        ]}>
                            <span class:list={["w-1.5 h-1.5 rounded-full", statusConfig[order.status].dot]}></span>
                            {order.status.charAt(0).toUpperCase() + order.status.slice(1)}
                        </span>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-white/50">{order.items} items</span>
                        <span class="font-medium text-white">${order.amount.toFixed(2)}</span>
                    </div>
                    <p class="text-xs text-white/30 mt-2">{order.date}</p>
                </div>
            ))}
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 border-t border-white/[0.08] flex items-center justify-between">
            <p class="text-sm text-white/40">Showing 1 to 6 of 1,234 orders</p>
            <div class="flex items-center gap-2">
                <button class="cs-glass-button px-3 py-1.5 text-sm" disabled>Previous</button>
                <button class="cs-glass-button px-3 py-1.5 text-sm bg-violet-500 border-0 text-white">1</button>
                <button class="cs-glass-button px-3 py-1.5 text-sm">2</button>
                <button class="cs-glass-button px-3 py-1.5 text-sm">3</button>
                <button class="cs-glass-button px-3 py-1.5 text-sm">Next</button>
            </div>
        </div>
    </div>
</AdminLayout>
