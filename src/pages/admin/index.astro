---
import AdminLayout from "@layouts/AdminLayout.astro";

const stats = [
    { label: "Total Users", value: "12,847", change: "+12.5%", trend: "up", icon: "users" },
    { label: "Revenue", value: "$48,352", change: "+8.2%", trend: "up", icon: "dollar" },
    { label: "Active Sessions", value: "1,429", change: "-3.1%", trend: "down", icon: "activity" },
    { label: "Conversion", value: "3.24%", change: "+0.8%", trend: "up", icon: "percent" },
];

const recentActivity = [
    { user: "Max Mustermann", action: "created a new post", time: "2 min ago", avatar: "MM" },
    { user: "Anna Schmidt", action: "updated profile", time: "15 min ago", avatar: "AS" },
    { user: "Peter Weber", action: "completed purchase", time: "1 hour ago", avatar: "PW" },
    { user: "Lisa Meyer", action: "joined platform", time: "2 hours ago", avatar: "LM" },
];
---

<AdminLayout title="Dashboard" currentPage="dashboard">
    <!-- Bento Grid Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
        <!-- Stats Cards -->
        {stats.map((stat, i) => (
            <div class:list={[
                "group relative overflow-hidden rounded-2xl p-5 sm:p-6 transition-all duration-300 hover:scale-[1.02]",
                "bg-gradient-to-br border border-white/[0.08]",
                i === 0 && "from-violet-500/10 to-fuchsia-500/5",
                i === 1 && "from-emerald-500/10 to-cyan-500/5",
                i === 2 && "from-orange-500/10 to-rose-500/5",
                i === 3 && "from-blue-500/10 to-indigo-500/5",
            ]}>
                <div class="flex items-start justify-between">
                    <div>
                        <p class="text-sm text-white/50">{stat.label}</p>
                        <p class="text-2xl sm:text-3xl font-bold text-white mt-1">{stat.value}</p>
                    </div>
                    <div class:list={[
                        "flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium",
                        stat.trend === "up" ? "bg-emerald-500/20 text-emerald-400" : "bg-rose-500/20 text-rose-400"
                    ]}>
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={stat.trend === "up" ? "M5 10l7-7m0 0l7 7m-7-7v18" : "M19 14l-7 7m0 0l-7-7m7 7V3"} />
                        </svg>
                        {stat.change}
                    </div>
                </div>
                <!-- Decorative glow -->
                <div class="absolute -bottom-10 -right-10 w-32 h-32 bg-white/5 rounded-full blur-2xl group-hover:bg-white/10 transition-all"></div>
            </div>
        ))}

        <!-- Main Chart - Spans 2 cols on lg -->
        <div class="lg:col-span-2 rounded-2xl bg-white/[0.03] border border-white/[0.08] p-5 sm:p-6">
            <div class="flex items-center justify-between mb-6">
                <h3 class="font-semibold text-white">Revenue Overview</h3>
                <select class="text-sm bg-white/[0.05] border border-white/[0.1] rounded-lg px-3 py-1.5 text-white/70 focus:outline-none focus:ring-2 focus:ring-violet-500/50">
                    <option>Last 7 days</option>
                    <option>Last 30 days</option>
                    <option>Last 90 days</option>
                </select>
            </div>
            <!-- Chart Placeholder with gradient bars -->
            <div class="h-48 flex items-end justify-around gap-2 sm:gap-4">
                {[40, 65, 45, 80, 55, 90, 70].map((h, i) => (
                    <div class="flex-1 flex flex-col items-center gap-2">
                        <div 
                            class="w-full rounded-t-lg bg-gradient-to-t from-violet-500 to-fuchsia-500 transition-all duration-500 hover:from-violet-400 hover:to-fuchsia-400"
                            style={`height: ${h}%`}
                        ></div>
                        <span class="text-[10px] text-white/30">{['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'][i]}</span>
                    </div>
                ))}
            </div>
        </div>

        <!-- Activity Feed -->
        <div class="lg:col-span-2 rounded-2xl bg-white/[0.03] border border-white/[0.08] p-5 sm:p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="font-semibold text-white">Recent Activity</h3>
                <button class="text-sm text-violet-400 hover:text-violet-300 transition-colors">View all</button>
            </div>
            <div class="space-y-3">
                {recentActivity.map((item, i) => (
                    <div class="flex items-center gap-3 p-3 rounded-xl bg-white/[0.02] hover:bg-white/[0.05] transition-colors">
                        <div class:list={[
                            "w-10 h-10 rounded-full flex items-center justify-center text-sm font-medium",
                            i === 0 && "bg-gradient-to-br from-violet-500 to-fuchsia-500 text-white",
                            i === 1 && "bg-gradient-to-br from-emerald-400 to-cyan-400 text-white",
                            i === 2 && "bg-gradient-to-br from-orange-400 to-rose-400 text-white",
                            i === 3 && "bg-gradient-to-br from-blue-400 to-indigo-400 text-white",
                        ]}>
                            {item.avatar}
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm text-white/80 truncate">
                                <span class="font-medium text-white">{item.user}</span> {item.action}
                            </p>
                            <p class="text-xs text-white/40">{item.time}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Quick Actions - Full width on mobile -->
        <div class="md:col-span-2 lg:col-span-4 rounded-2xl bg-white/[0.03] border border-white/[0.08] p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-4">Quick Actions</h3>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 sm:gap-4">
                {[
                    { icon: "M12 6v6m0 0v6m0-6h6m-6 0H6", label: "Add User", color: "violet" },
                    { icon: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z", label: "New Post", color: "emerald" },
                    { icon: "M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12", label: "Upload", color: "orange" },
                    { icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z", label: "Schedule", color: "blue" },
                ].map((action) => (
                    <button class="flex flex-col items-center gap-2 p-4 sm:p-6 rounded-xl border-2 border-dashed border-white/[0.08] hover:border-white/20 hover:bg-white/[0.03] transition-all group">
                        <div class:list={[
                            "w-10 h-10 sm:w-12 sm:h-12 rounded-xl flex items-center justify-center transition-transform group-hover:scale-110",
                            action.color === "violet" && "bg-violet-500/20 text-violet-400",
                            action.color === "emerald" && "bg-emerald-500/20 text-emerald-400",
                            action.color === "orange" && "bg-orange-500/20 text-orange-400",
                            action.color === "blue" && "bg-blue-500/20 text-blue-400",
                        ]}>
                            <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={action.icon} />
                            </svg>
                        </div>
                        <span class="text-xs sm:text-sm font-medium text-white/60 group-hover:text-white/80">{action.label}</span>
                    </button>
                ))}
            </div>
        </div>
    </div>
</AdminLayout>
