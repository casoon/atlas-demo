---
import AdminLayout from "@layouts/AdminLayout.astro";

const settingsSections = [
    { id: "general", label: "General", icon: "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" },
    { id: "profile", label: "Profile", icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" },
    { id: "notifications", label: "Notifications", icon: "M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" },
    { id: "security", label: "Security", icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" },
    { id: "billing", label: "Billing", icon: "M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" },
];
---

<AdminLayout title="Settings" currentPage="settings">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
        <!-- Settings Navigation -->
        <div class="lg:col-span-1">
            <div class="rounded-2xl bg-white/[0.03] border border-white/[0.08] p-3">
                <nav class="space-y-1">
                    {settingsSections.map((section, index) => (
                        <button class:list={[
                            "w-full flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-colors",
                            index === 0 ? "bg-violet-500/20 text-violet-400" : "text-white/50 hover:text-white hover:bg-white/[0.05]"
                        ]}>
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={section.icon} />
                            </svg>
                            {section.label}
                        </button>
                    ))}
                </nav>
            </div>
        </div>

        <!-- Settings Content -->
        <div class="lg:col-span-3 space-y-6">
            <!-- General Settings -->
            <div class="rounded-2xl bg-white/[0.03] border border-white/[0.08] p-5 sm:p-6">
                <h3 class="font-semibold text-white mb-6">General Settings</h3>
                
                <div class="space-y-5">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-2">Site Name</label>
                        <input type="text" value="Atlas Admin" class="w-full px-4 py-2.5 bg-white/[0.05] border border-white/[0.1] rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-transparent" />
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-2">Site URL</label>
                        <input type="url" value="https://atlas-demo.example.com" class="w-full px-4 py-2.5 bg-white/[0.05] border border-white/[0.1] rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-transparent" />
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-2">Timezone</label>
                        <select class="w-full px-4 py-2.5 bg-white/[0.05] border border-white/[0.1] rounded-xl text-white/70 focus:outline-none focus:ring-2 focus:ring-violet-500/50">
                            <option>Europe/Berlin (GMT+1)</option>
                            <option>Europe/London (GMT)</option>
                            <option>America/New_York (GMT-5)</option>
                        </select>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-2">Language</label>
                        <select class="w-full px-4 py-2.5 bg-white/[0.05] border border-white/[0.1] rounded-xl text-white/70 focus:outline-none focus:ring-2 focus:ring-violet-500/50">
                            <option>Deutsch</option>
                            <option>English</option>
                            <option>Francais</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Appearance -->
            <div class="rounded-2xl bg-white/[0.03] border border-white/[0.08] p-5 sm:p-6">
                <h3 class="font-semibold text-white mb-6">Appearance</h3>
                
                <div class="space-y-6">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-3">Theme</label>
                        <div class="flex flex-wrap gap-4">
                            <label class="flex items-center gap-3 p-4 rounded-xl border-2 border-violet-500/50 bg-violet-500/10 cursor-pointer">
                                <input type="radio" name="theme" checked class="w-4 h-4 text-violet-500 bg-transparent border-white/30 focus:ring-violet-500" />
                                <div>
                                    <div class="w-8 h-8 bg-[#0a0a1a] border border-white/20 rounded mb-1"></div>
                                    <span class="text-sm font-medium text-white">Dark</span>
                                </div>
                            </label>
                            <label class="flex items-center gap-3 p-4 rounded-xl border-2 border-white/[0.1] cursor-pointer hover:border-white/20 transition-colors">
                                <input type="radio" name="theme" class="w-4 h-4 text-violet-500 bg-transparent border-white/30 focus:ring-violet-500" />
                                <div>
                                    <div class="w-8 h-8 bg-white border border-gray-200 rounded mb-1"></div>
                                    <span class="text-sm font-medium text-white/70">Light</span>
                                </div>
                            </label>
                            <label class="flex items-center gap-3 p-4 rounded-xl border-2 border-white/[0.1] cursor-pointer hover:border-white/20 transition-colors">
                                <input type="radio" name="theme" class="w-4 h-4 text-violet-500 bg-transparent border-white/30 focus:ring-violet-500" />
                                <div>
                                    <div class="w-8 h-8 bg-gradient-to-r from-[#0a0a1a] to-white rounded mb-1"></div>
                                    <span class="text-sm font-medium text-white/70">System</span>
                                </div>
                            </label>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between py-4 border-t border-white/[0.08]" x-data="{ enabled: false }">
                        <div>
                            <p class="font-medium text-white">Compact Mode</p>
                            <p class="text-sm text-white/50">Reduce spacing and padding</p>
                        </div>
                        <button 
                            @click="enabled = !enabled"
                            :class="enabled ? 'bg-violet-500' : 'bg-white/10'"
                            class="relative w-12 h-6 rounded-full transition-colors"
                        >
                            <span 
                                :class="enabled ? 'translate-x-6' : 'translate-x-1'"
                                class="absolute top-1 left-0 w-4 h-4 bg-white rounded-full shadow transition-transform"
                            ></span>
                        </button>
                    </div>
                    
                    <div class="flex items-center justify-between py-4 border-t border-white/[0.08]" x-data="{ enabled: true }">
                        <div>
                            <p class="font-medium text-white">Animations</p>
                            <p class="text-sm text-white/50">Enable UI animations</p>
                        </div>
                        <button 
                            @click="enabled = !enabled"
                            :class="enabled ? 'bg-violet-500' : 'bg-white/10'"
                            class="relative w-12 h-6 rounded-full transition-colors"
                        >
                            <span 
                                :class="enabled ? 'translate-x-6' : 'translate-x-1'"
                                class="absolute top-1 left-0 w-4 h-4 bg-white rounded-full shadow transition-transform"
                            ></span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Save -->
            <div class="flex flex-col sm:flex-row justify-end gap-3">
                <button class="px-6 py-2.5 bg-white/[0.05] border border-white/[0.1] text-white/70 font-medium rounded-xl hover:bg-white/[0.08] transition-colors">
                    Cancel
                </button>
                <button class="px-6 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white font-medium rounded-xl hover:opacity-90 transition-opacity shadow-lg shadow-violet-500/25">
                    Save Changes
                </button>
            </div>
        </div>
    </div>
</AdminLayout>
