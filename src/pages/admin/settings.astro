---
import AdminLayout from "@layouts/AdminLayout.astro";

const settingsSections = [
    { id: "general", label: "General", icon: "cog" },
    { id: "profile", label: "Profile", icon: "user" },
    { id: "notifications", label: "Notifications", icon: "bell" },
    { id: "security", label: "Security", icon: "shield" },
    { id: "billing", label: "Billing", icon: "credit-card" },
];

const icons: Record<string, string> = {
    cog: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>`,
    user: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>`,
    bell: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/></svg>`,
    shield: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>`,
    "credit-card": `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/></svg>`,
};
---

<AdminLayout title="Settings" currentPage="settings">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
        <!-- Settings Navigation -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
                <nav class="space-y-1">
                    {settingsSections.map((section, index) => (
                        <button class={`w-full flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium transition-colors ${index === 0 ? "bg-primary-50 text-primary-700" : "text-gray-600 hover:bg-gray-50"}`}>
                            <span class={index === 0 ? "text-primary-600" : "text-gray-400"} set:html={icons[section.icon]} />
                            {section.label}
                        </button>
                    ))}
                </nav>
            </div>
        </div>

        <!-- Settings Content -->
        <div class="lg:col-span-3 space-y-6">
            <!-- General Settings -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-6">General Settings</h3>
                
                <div class="space-y-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Site Name</label>
                        <input type="text" value="Atlas Admin" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Site URL</label>
                        <input type="url" value="https://atlas-demo.example.com" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Timezone</label>
                        <select class="w-full px-4 py-2 border border-gray-200 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-primary-500">
                            <option>Europe/Berlin (GMT+1)</option>
                            <option>Europe/London (GMT)</option>
                            <option>America/New_York (GMT-5)</option>
                            <option>Asia/Tokyo (GMT+9)</option>
                        </select>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Language</label>
                        <select class="w-full px-4 py-2 border border-gray-200 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-primary-500">
                            <option>Deutsch</option>
                            <option>English</option>
                            <option>Francais</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Appearance -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-6">Appearance</h3>
                
                <div class="space-y-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-3">Theme</label>
                        <div class="flex gap-4">
                            <label class="flex items-center gap-3 p-4 border-2 border-primary-500 rounded-lg cursor-pointer bg-primary-50">
                                <input type="radio" name="theme" checked class="text-primary-600 focus:ring-primary-500" />
                                <div>
                                    <div class="w-8 h-8 bg-white border border-gray-200 rounded mb-1"></div>
                                    <span class="text-sm font-medium">Light</span>
                                </div>
                            </label>
                            <label class="flex items-center gap-3 p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-gray-300">
                                <input type="radio" name="theme" class="text-primary-600 focus:ring-primary-500" />
                                <div>
                                    <div class="w-8 h-8 bg-gray-800 rounded mb-1"></div>
                                    <span class="text-sm font-medium">Dark</span>
                                </div>
                            </label>
                            <label class="flex items-center gap-3 p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-gray-300">
                                <input type="radio" name="theme" class="text-primary-600 focus:ring-primary-500" />
                                <div>
                                    <div class="w-8 h-8 bg-gradient-to-r from-white to-gray-800 rounded mb-1"></div>
                                    <span class="text-sm font-medium">System</span>
                                </div>
                            </label>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between py-4 border-t border-gray-100">
                        <div>
                            <p class="font-medium text-gray-900">Compact Mode</p>
                            <p class="text-sm text-gray-500">Reduce spacing and padding</p>
                        </div>
                        <button class="relative w-12 h-6 bg-gray-200 rounded-full transition-colors" x-data="{ enabled: false }" @click="enabled = !enabled" :class="enabled ? bg-primary-600 : bg-gray-200">
                            <span class="absolute top-1 left-1 w-4 h-4 bg-white rounded-full shadow transition-transform" :class="enabled ? translate-x-6 : "></span>
                        </button>
                    </div>
                    
                    <div class="flex items-center justify-between py-4 border-t border-gray-100">
                        <div>
                            <p class="font-medium text-gray-900">Animations</p>
                            <p class="text-sm text-gray-500">Enable UI animations</p>
                        </div>
                        <button class="relative w-12 h-6 bg-primary-600 rounded-full transition-colors">
                            <span class="absolute top-1 left-1 w-4 h-4 bg-white rounded-full shadow translate-x-6"></span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Save Button -->
            <div class="flex justify-end gap-3">
                <button class="px-6 py-2 border border-gray-200 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    Cancel
                </button>
                <button class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors shadow-sm">
                    Save Changes
                </button>
            </div>
        </div>
    </div>
</AdminLayout>