---
import AdminLayout from "@layouts/AdminLayout.astro";
---

<AdminLayout title="Settings" currentPage="settings">
    <div class="max-w-4xl">
        <!-- Header -->
        <div class="mb-8">
            <h2 class="text-xl sm:text-2xl font-bold text-white">Settings</h2>
            <p class="text-white/50 text-sm mt-1">Manage your account and preferences</p>
        </div>

        <!-- Settings Navigation -->
        <div class="cs-glass-nav p-1 inline-flex gap-1 mb-8">
            <button class="px-4 py-2 text-sm text-white bg-white/10 rounded-lg">Profile</button>
            <button class="px-4 py-2 text-sm text-white/60 hover:text-white hover:bg-white/5 rounded-lg transition-colors">Security</button>
            <button class="px-4 py-2 text-sm text-white/60 hover:text-white hover:bg-white/5 rounded-lg transition-colors">Notifications</button>
            <button class="px-4 py-2 text-sm text-white/60 hover:text-white hover:bg-white/5 rounded-lg transition-colors">Appearance</button>
        </div>

        <!-- Profile Section -->
        <div class="cs-glass-card p-6 mb-6">
            <h3 class="font-semibold text-white mb-6">Profile Information</h3>
            
            <div class="flex flex-col sm:flex-row gap-6 mb-6">
                <div class="flex flex-col items-center gap-3">
                    <div class="w-24 h-24 rounded-full bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center">
                        <span class="text-white font-bold text-2xl">AD</span>
                    </div>
                    <button class="cs-glass-button text-sm">Change Avatar</button>
                </div>
                
                <div class="flex-1 space-y-4">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-white/60 mb-2">First Name</label>
                            <input type="text" value="Admin" class="cs-input-glass w-full" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-white/60 mb-2">Last Name</label>
                            <input type="text" value="User" class="cs-input-glass w-full" />
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/60 mb-2">Email</label>
                        <input type="email" value="admin@atlas.dev" class="cs-input-glass w-full" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/60 mb-2">Bio</label>
                        <textarea rows="3" placeholder="Tell us about yourself..." class="cs-input-glass w-full resize-none"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- Preferences -->
        <div class="cs-glass-card p-6 mb-6">
            <h3 class="font-semibold text-white mb-6">Preferences</h3>
            
            <div class="space-y-4">
                <!-- Toggle Items -->
                <div class="flex items-center justify-between p-4 cs-glass-xs rounded-xl">
                    <div>
                        <p class="font-medium text-white">Email Notifications</p>
                        <p class="text-sm text-white/40">Receive email updates about your account</p>
                    </div>
                    <button class="relative w-12 h-6 bg-violet-500 rounded-full transition-colors" x-data="{ on: true }" @click="on = !on" :class="on ? 'bg-violet-500' : 'bg-white/20'">
                        <span class="absolute top-1 left-1 w-4 h-4 bg-white rounded-full transition-transform" :class="on ? 'translate-x-6' : 'translate-x-0'"></span>
                    </button>
                </div>
                
                <div class="flex items-center justify-between p-4 cs-glass-xs rounded-xl">
                    <div>
                        <p class="font-medium text-white">Push Notifications</p>
                        <p class="text-sm text-white/40">Receive push notifications in browser</p>
                    </div>
                    <button class="relative w-12 h-6 bg-white/20 rounded-full transition-colors" x-data="{ on: false }" @click="on = !on" :class="on ? 'bg-violet-500' : 'bg-white/20'">
                        <span class="absolute top-1 left-1 w-4 h-4 bg-white rounded-full transition-transform" :class="on ? 'translate-x-6' : 'translate-x-0'"></span>
                    </button>
                </div>
                
                <div class="flex items-center justify-between p-4 cs-glass-xs rounded-xl">
                    <div>
                        <p class="font-medium text-white">Two-Factor Authentication</p>
                        <p class="text-sm text-white/40">Add extra security to your account</p>
                    </div>
                    <button class="relative w-12 h-6 bg-violet-500 rounded-full transition-colors" x-data="{ on: true }" @click="on = !on" :class="on ? 'bg-violet-500' : 'bg-white/20'">
                        <span class="absolute top-1 left-1 w-4 h-4 bg-white rounded-full transition-transform" :class="on ? 'translate-x-6' : 'translate-x-0'"></span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Theme Selection -->
        <div class="cs-glass-card p-6 mb-6">
            <h3 class="font-semibold text-white mb-6">Theme</h3>
            
            <div class="grid grid-cols-3 gap-4">
                <button class="cs-glass-card p-4 border-2 border-violet-500/50 group">
                    <div class="w-full h-16 rounded-lg bg-[#0a0a1a] mb-3 flex items-center justify-center">
                        <div class="w-8 h-8 rounded bg-gradient-to-br from-violet-500 to-fuchsia-500"></div>
                    </div>
                    <p class="text-sm font-medium text-white">Dark</p>
                    <p class="text-xs text-violet-400">Active</p>
                </button>
                
                <button class="cs-glass-card p-4 hover:border-white/20 group">
                    <div class="w-full h-16 rounded-lg bg-gray-100 mb-3 flex items-center justify-center">
                        <div class="w-8 h-8 rounded bg-gradient-to-br from-violet-500 to-fuchsia-500"></div>
                    </div>
                    <p class="text-sm font-medium text-white">Light</p>
                    <p class="text-xs text-white/40">Click to select</p>
                </button>
                
                <button class="cs-glass-card p-4 hover:border-white/20 group">
                    <div class="w-full h-16 rounded-lg bg-gradient-to-b from-gray-100 to-[#0a0a1a] mb-3 flex items-center justify-center">
                        <div class="w-8 h-8 rounded bg-gradient-to-br from-violet-500 to-fuchsia-500"></div>
                    </div>
                    <p class="text-sm font-medium text-white">System</p>
                    <p class="text-xs text-white/40">Click to select</p>
                </button>
            </div>
        </div>

        <!-- Danger Zone -->
        <div class="cs-glass-card p-6 border-rose-500/20">
            <h3 class="font-semibold text-rose-400 mb-4">Danger Zone</h3>
            <p class="text-sm text-white/50 mb-4">Once you delete your account, there is no going back. Please be certain.</p>
            <button class="cs-glass-button bg-rose-500/10 border-rose-500/30 text-rose-400 hover:bg-rose-500/20">
                Delete Account
            </button>
        </div>

        <!-- Save Button -->
        <div class="flex justify-end mt-6">
            <button class="cs-button-primary-glass bg-gradient-to-r from-violet-500 to-fuchsia-500 border-0">
                Save Changes
            </button>
        </div>
    </div>
</AdminLayout>
