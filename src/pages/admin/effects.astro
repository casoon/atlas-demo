---
import AdminLayout from "@layouts/AdminLayout.astro";
---

<AdminLayout title="Atlas Effects Demo" currentPage="effects">
    <div class="space-y-8">
        <!-- Header -->
        <div>
            <h2 class="text-2xl font-bold text-gray-900">Atlas Effects</h2>
            <p class="text-gray-500 mt-1">Visual effects and animations showcase</p>
        </div>

        <!-- Glass Effects -->
        <section class="relative overflow-hidden rounded-xl">
            <!-- Background with gradient -->
            <div class="absolute inset-0 bg-gradient-to-br from-purple-500 via-pink-500 to-orange-400"></div>
            <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.1"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')]"></div>
            
            <div class="relative p-8">
                <h3 class="text-xl font-semibold text-white mb-6">Glass Morphism</h3>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <!-- Glass Card 1 -->
                    <div class="bg-white/20 backdrop-blur-md rounded-2xl border border-white/30 p-6 shadow-xl">
                        <div class="w-12 h-12 bg-white/30 rounded-xl flex items-center justify-center mb-4">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            </svg>
                        </div>
                        <h4 class="text-lg font-semibold text-white mb-2">Frosted Glass</h4>
                        <p class="text-white/80 text-sm">Beautiful frosted glass effect with backdrop blur.</p>
                    </div>

                    <!-- Glass Card 2 -->
                    <div class="bg-white/10 backdrop-blur-lg rounded-2xl border border-white/20 p-6 shadow-xl">
                        <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-4">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                            </svg>
                        </div>
                        <h4 class="text-lg font-semibold text-white mb-2">Subtle Glass</h4>
                        <p class="text-white/80 text-sm">More transparent variant with stronger blur.</p>
                    </div>

                    <!-- Glass Card 3 -->
                    <div class="bg-gradient-to-br from-white/30 to-white/10 backdrop-blur-md rounded-2xl border border-white/40 p-6 shadow-xl">
                        <div class="w-12 h-12 bg-white/30 rounded-xl flex items-center justify-center mb-4">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                            </svg>
                        </div>
                        <h4 class="text-lg font-semibold text-white mb-2">Gradient Glass</h4>
                        <p class="text-white/80 text-sm">Glass with gradient overlay effect.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Animations -->
        <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">Animations</h3>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <!-- Pulse -->
                <div class="text-center">
                    <div class="w-16 h-16 mx-auto bg-primary-500 rounded-full animate-pulse mb-3"></div>
                    <p class="text-sm font-medium text-gray-700">Pulse</p>
                </div>

                <!-- Bounce -->
                <div class="text-center">
                    <div class="w-16 h-16 mx-auto bg-green-500 rounded-lg animate-bounce mb-3"></div>
                    <p class="text-sm font-medium text-gray-700">Bounce</p>
                </div>

                <!-- Spin -->
                <div class="text-center">
                    <div class="w-16 h-16 mx-auto border-4 border-purple-200 border-t-purple-600 rounded-full animate-spin mb-3"></div>
                    <p class="text-sm font-medium text-gray-700">Spin</p>
                </div>

                <!-- Ping -->
                <div class="text-center">
                    <div class="relative w-16 h-16 mx-auto mb-3">
                        <div class="absolute inset-0 bg-red-400 rounded-full animate-ping opacity-75"></div>
                        <div class="relative w-16 h-16 bg-red-500 rounded-full"></div>
                    </div>
                    <p class="text-sm font-medium text-gray-700">Ping</p>
                </div>
            </div>
        </section>

        <!-- Hover Effects -->
        <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">Hover Effects</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <!-- Scale -->
                <div class="bg-gray-100 rounded-xl p-6 text-center cursor-pointer transition-transform duration-300 hover:scale-110">
                    <div class="w-12 h-12 mx-auto bg-blue-500 rounded-lg mb-3"></div>
                    <p class="text-sm font-medium text-gray-700">Scale Up</p>
                </div>

                <!-- Lift -->
                <div class="bg-gray-100 rounded-xl p-6 text-center cursor-pointer transition-all duration-300 hover:-translate-y-2 hover:shadow-lg">
                    <div class="w-12 h-12 mx-auto bg-green-500 rounded-lg mb-3"></div>
                    <p class="text-sm font-medium text-gray-700">Lift</p>
                </div>

                <!-- Glow -->
                <div class="bg-gray-100 rounded-xl p-6 text-center cursor-pointer transition-all duration-300 hover:shadow-[0_0_30px_rgba(139,92,246,0.5)]">
                    <div class="w-12 h-12 mx-auto bg-purple-500 rounded-lg mb-3"></div>
                    <p class="text-sm font-medium text-gray-700">Glow</p>
                </div>

                <!-- Rotate -->
                <div class="bg-gray-100 rounded-xl p-6 text-center cursor-pointer group">
                    <div class="w-12 h-12 mx-auto bg-orange-500 rounded-lg mb-3 transition-transform duration-500 group-hover:rotate-180"></div>
                    <p class="text-sm font-medium text-gray-700">Rotate</p>
                </div>
            </div>
        </section>

        <!-- Shimmer / Skeleton -->
        <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">Loading States</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Skeleton Card -->
                <div class="p-4 border border-gray-200 rounded-xl">
                    <h4 class="text-sm font-medium text-gray-500 mb-4">Skeleton Loading</h4>
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-gray-200 rounded-full animate-pulse"></div>
                        <div class="flex-1 space-y-2">
                            <div class="h-4 bg-gray-200 rounded w-3/4 animate-pulse"></div>
                            <div class="h-3 bg-gray-200 rounded w-1/2 animate-pulse"></div>
                        </div>
                    </div>
                    <div class="mt-4 space-y-2">
                        <div class="h-3 bg-gray-200 rounded animate-pulse"></div>
                        <div class="h-3 bg-gray-200 rounded w-5/6 animate-pulse"></div>
                        <div class="h-3 bg-gray-200 rounded w-4/6 animate-pulse"></div>
                    </div>
                </div>

                <!-- Shimmer Effect -->
                <div class="p-4 border border-gray-200 rounded-xl">
                    <h4 class="text-sm font-medium text-gray-500 mb-4">Shimmer Effect</h4>
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-gray-200 rounded-full shimmer"></div>
                        <div class="flex-1 space-y-2">
                            <div class="h-4 bg-gray-200 rounded w-3/4 shimmer"></div>
                            <div class="h-3 bg-gray-200 rounded w-1/2 shimmer"></div>
                        </div>
                    </div>
                    <div class="mt-4 space-y-2">
                        <div class="h-3 bg-gray-200 rounded shimmer"></div>
                        <div class="h-3 bg-gray-200 rounded w-5/6 shimmer"></div>
                        <div class="h-3 bg-gray-200 rounded w-4/6 shimmer"></div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Gradient Backgrounds -->
        <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">Gradient Backgrounds</h3>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="h-24 rounded-xl bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500"></div>
                <div class="h-24 rounded-xl bg-gradient-to-r from-green-400 via-blue-500 to-purple-600"></div>
                <div class="h-24 rounded-xl bg-gradient-to-br from-purple-600 to-blue-500"></div>
                <div class="h-24 rounded-xl bg-gradient-to-r from-gray-900 via-purple-900 to-violet-600"></div>
                <div class="h-24 rounded-xl bg-gradient-to-r from-emerald-400 to-cyan-400"></div>
                <div class="h-24 rounded-xl bg-gradient-to-r from-orange-500 to-pink-500"></div>
                <div class="h-24 rounded-xl bg-gradient-to-bl from-fuchsia-600 via-purple-600 to-blue-600"></div>
                <div class="h-24 rounded-xl bg-[conic-gradient(at_top,_var(--tw-gradient-stops))] from-yellow-200 via-emerald-200 to-yellow-200"></div>
            </div>
        </section>

        <!-- Interactive Demo -->
        <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">Interactive Demo</h3>
            
            <div class="flex flex-wrap gap-4" x-data="{ activeEffect: 'none' }">
                <button 
                    @click="activeEffect = 'ripple'"
                    class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors"
                    :class="activeEffect === 'ripple' && 'ring-2 ring-primary-300'"
                >
                    Ripple Effect
                </button>
                <button 
                    @click="activeEffect = 'glow'"
                    class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors"
                    :class="activeEffect === 'glow' && 'ring-2 ring-purple-300'"
                >
                    Glow Effect
                </button>
                <button 
                    @click="activeEffect = 'tilt'"
                    class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors"
                    :class="activeEffect === 'tilt' && 'ring-2 ring-green-300'"
                >
                    3D Tilt
                </button>
                
                <div class="w-full mt-6">
                    <!-- Demo Area -->
                    <div 
                        class="h-48 rounded-xl flex items-center justify-center text-white font-semibold text-lg transition-all duration-300"
                        :class="{
                            'bg-gradient-to-br from-primary-500 to-primary-700': activeEffect === 'ripple',
                            'bg-gradient-to-br from-purple-500 to-purple-700 shadow-[0_0_50px_rgba(139,92,246,0.5)]': activeEffect === 'glow',
                            'bg-gradient-to-br from-green-500 to-green-700 transform hover:rotate-3 hover:scale-105': activeEffect === 'tilt',
                            'bg-gray-200 text-gray-500': activeEffect === 'none'
                        }"
                        data-atlas-ripple
                    >
                        <span x-show="activeEffect === 'none'">Select an effect above</span>
                        <span x-show="activeEffect === 'ripple'">Click me for ripple!</span>
                        <span x-show="activeEffect === 'glow'">Glowing in the dark</span>
                        <span x-show="activeEffect === 'tilt'">Hover for 3D effect</span>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Styles -->
    <style>
        .shimmer {
            background: linear-gradient(90deg, #e5e7eb 25%, #f3f4f6 50%, #e5e7eb 75%);
            background-size: 200% 100%;
            animation: shimmer 1.5s infinite;
        }

        @keyframes shimmer {
            0% { background-position: 200% 0; }
            100% { background-position: -200% 0; }
        }
    </style>

    <!-- Ripple Script -->
    <script>
        document.querySelectorAll("[data-atlas-ripple]").forEach((el) => {
            el.style.position = "relative";
            el.style.overflow = "hidden";
            
            el.addEventListener("pointerdown", (e) => {
                const rect = el.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const ripple = document.createElement("span");
                const size = Math.max(rect.width, rect.height) * 2;
                
                ripple.style.cssText = `
                    position: absolute;
                    border-radius: 50%;
                    background: rgba(255, 255, 255, 0.4);
                    pointer-events: none;
                    transform: translate(-50%, -50%) scale(0);
                    width: ${size}px;
                    height: ${size}px;
                    left: ${x}px;
                    top: ${y}px;
                    animation: ripple-anim 600ms ease-out forwards;
                `;
                
                el.appendChild(ripple);
                setTimeout(() => ripple.remove(), 600);
            });
        });
    </script>

    <style>
        @keyframes ripple-anim {
            to {
                transform: translate(-50%, -50%) scale(1);
                opacity: 0;
            }
        }
    </style>
</AdminLayout>