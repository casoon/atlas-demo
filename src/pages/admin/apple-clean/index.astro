---
import { ViewTransitions } from "astro:transitions";
import "@styles/base.css";

const stats = [
    { label: "Total Users", value: "12,847", change: "+12.5%", trend: "up" },
    { label: "Revenue", value: "$48,352", change: "+8.2%", trend: "up" },
    { label: "Active Sessions", value: "1,429", change: "-3.1%", trend: "down" },
    { label: "Conversion", value: "3.24%", change: "+0.8%", trend: "up" },
];

const recentActivity = [
    { user: "Max Mustermann", action: "created a new post", time: "2 min ago", initials: "MM" },
    { user: "Anna Schmidt", action: "updated profile", time: "15 min ago", initials: "AS" },
    { user: "Peter Weber", action: "completed purchase", time: "1 hour ago", initials: "PW" },
    { user: "Lisa Meyer", action: "joined platform", time: "2 hours ago", initials: "LM" },
];

const navItems = [
    { label: "Dashboard", href: "/admin/apple-clean", active: true, icon: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" },
    { label: "Analytics", href: "#", active: false, icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" },
    { label: "Users", href: "#", active: false, icon: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" },
    { label: "Settings", href: "#", active: false, icon: "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z" },
];
---

<!doctype html>
<html lang="de">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="Apple-Clean Admin Dashboard - Premium minimalist design" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>Dashboard - Apple Clean Admin</title>
        <ViewTransitions />
        <style>
            body {
                font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Helvetica Neue', Arial, sans-serif;
                -webkit-font-smoothing: antialiased;
                -moz-osx-font-smoothing: grayscale;
            }
        </style>
    </head>
    <body class="min-h-screen bg-[#f5f5f7]">
        <!-- Sidebar -->
        <aside class="fixed left-0 top-0 bottom-0 w-64 bg-white border-r border-gray-200/80 hidden lg:block">
            <div class="p-6">
                <a href="/admin/apple-clean" class="flex items-center gap-2">
                    <div class="w-8 h-8 bg-gray-900 rounded-lg flex items-center justify-center">
                        <span class="text-white font-semibold text-sm">A</span>
                    </div>
                    <span class="font-semibold text-gray-900 tracking-tight">Atlas Admin</span>
                </a>
            </div>

            <nav class="px-3 mt-4">
                {navItems.map((item) => (
                    <a
                        href={item.href}
                        class:list={[
                            "flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium transition-colors mb-1",
                            item.active
                                ? "bg-gray-100 text-gray-900"
                                : "text-gray-500 hover:text-gray-900 hover:bg-gray-50"
                        ]}
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={item.icon} />
                        </svg>
                        {item.label}
                    </a>
                ))}
            </nav>

            <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-gray-100">
                <a href="/" class="flex items-center gap-2 text-sm text-gray-500 hover:text-gray-900 transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Back to Atlas
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="lg:pl-64">
            <!-- Header -->
            <header class="sticky top-0 z-40 bg-[#f5f5f7]/80 backdrop-blur-xl border-b border-gray-200/50">
                <div class="flex items-center justify-between px-6 lg:px-8 h-16">
                    <div>
                        <h1 class="text-xl font-semibold text-gray-900 tracking-tight">Dashboard</h1>
                    </div>
                    <div class="flex items-center gap-4">
                        <button class="p-2 text-gray-500 hover:text-gray-900 transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </button>
                        <button class="p-2 text-gray-500 hover:text-gray-900 transition-colors relative">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                            </svg>
                            <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-blue-500 rounded-full"></span>
                        </button>
                        <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white text-sm font-medium">
                            JD
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <div class="p-6 lg:p-8">
                <!-- Stats Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
                    {stats.map((stat) => (
                        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow">
                            <div class="flex items-start justify-between">
                                <div>
                                    <p class="text-sm text-gray-500">{stat.label}</p>
                                    <p class="text-2xl font-semibold text-gray-900 mt-1 tracking-tight">{stat.value}</p>
                                </div>
                                <span class:list={[
                                    "inline-flex items-center px-2 py-1 rounded-full text-xs font-medium",
                                    stat.trend === "up" ? "bg-green-50 text-green-600" : "bg-red-50 text-red-600"
                                ]}>
                                    {stat.change}
                                </span>
                            </div>
                        </div>
                    ))}
                </div>

                <!-- Main Grid -->
                <div class="grid lg:grid-cols-3 gap-6">
                    <!-- Chart Card -->
                    <div class="lg:col-span-2 bg-white rounded-2xl p-6 shadow-sm">
                        <div class="flex items-center justify-between mb-6">
                            <h2 class="font-semibold text-gray-900">Revenue Overview</h2>
                            <select class="text-sm text-gray-500 bg-gray-50 border-0 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500">
                                <option>Last 7 days</option>
                                <option>Last 30 days</option>
                                <option>Last 90 days</option>
                            </select>
                        </div>
                        <div class="h-64 flex items-end justify-around gap-3">
                            {[40, 65, 45, 80, 55, 90, 70].map((h, i) => (
                                <div class="flex-1 flex flex-col items-center gap-3">
                                    <div
                                        class="w-full rounded-lg bg-gradient-to-t from-blue-500 to-blue-400 transition-all duration-300 hover:from-blue-600 hover:to-blue-500"
                                        style={`height: ${h}%`}
                                    />
                                    <span class="text-xs text-gray-400">
                                        {["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"][i]}
                                    </span>
                                </div>
                            ))}
                        </div>
                    </div>

                    <!-- Recent Activity -->
                    <div class="bg-white rounded-2xl p-6 shadow-sm">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="font-semibold text-gray-900">Recent Activity</h2>
                            <button class="text-sm text-blue-500 hover:text-blue-600 font-medium">View all</button>
                        </div>
                        <div class="space-y-4">
                            {recentActivity.map((item) => (
                                <div class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 transition-colors cursor-pointer">
                                    <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center text-sm font-medium text-gray-600">
                                        {item.initials}
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm text-gray-900">
                                            <span class="font-medium">{item.user}</span>
                                            <span class="text-gray-500"> {item.action}</span>
                                        </p>
                                        <p class="text-xs text-gray-400">{item.time}</p>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="mt-6 bg-white rounded-2xl p-6 shadow-sm">
                    <h2 class="font-semibold text-gray-900 mb-4">Quick Actions</h2>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        {[
                            { icon: "M12 6v6m0 0v6m0-6h6m-6 0H6", label: "Add User", color: "blue" },
                            { icon: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z", label: "New Post", color: "green" },
                            { icon: "M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12", label: "Upload", color: "orange" },
                            { icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z", label: "Schedule", color: "purple" },
                        ].map((action) => (
                            <button class="flex flex-col items-center gap-3 p-6 rounded-xl border border-gray-100 hover:border-gray-200 hover:bg-gray-50 transition-all group">
                                <div class:list={[
                                    "w-12 h-12 rounded-xl flex items-center justify-center transition-transform group-hover:scale-110",
                                    action.color === "blue" && "bg-blue-50 text-blue-500",
                                    action.color === "green" && "bg-green-50 text-green-500",
                                    action.color === "orange" && "bg-orange-50 text-orange-500",
                                    action.color === "purple" && "bg-purple-50 text-purple-500",
                                ]}>
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={action.icon} />
                                    </svg>
                                </div>
                                <span class="text-sm font-medium text-gray-600 group-hover:text-gray-900">{action.label}</span>
                            </button>
                        ))}
                    </div>
                </div>
            </div>
        </main>

        <!-- Mobile Back Button -->
        <a href="/" class="lg:hidden fixed bottom-6 left-6 px-4 py-2 bg-gray-900 text-white text-sm rounded-full shadow-lg hover:bg-gray-800 transition-colors flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Atlas
        </a>
    </body>
</html>
