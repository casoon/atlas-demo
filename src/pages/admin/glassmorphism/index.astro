---
import { ViewTransitions } from "astro:transitions";
import "@styles/base.css";

const stats = [
    { label: "Total Users", value: "12,847", change: "+12.5%", trend: "up", gradient: "from-violet-500 to-fuchsia-500" },
    { label: "Revenue", value: "$48,352", change: "+8.2%", trend: "up", gradient: "from-emerald-400 to-cyan-400" },
    { label: "Active Sessions", value: "1,429", change: "-3.1%", trend: "down", gradient: "from-orange-400 to-rose-400" },
    { label: "Conversion", value: "3.24%", change: "+0.8%", trend: "up", gradient: "from-blue-400 to-indigo-400" },
];

const recentActivity = [
    { user: "Max Mustermann", action: "created a new post", time: "2 min ago", initials: "MM", gradient: "from-violet-500 to-fuchsia-500" },
    { user: "Anna Schmidt", action: "updated profile", time: "15 min ago", initials: "AS", gradient: "from-emerald-400 to-cyan-400" },
    { user: "Peter Weber", action: "completed purchase", time: "1 hour ago", initials: "PW", gradient: "from-orange-400 to-rose-400" },
    { user: "Lisa Meyer", action: "joined platform", time: "2 hours ago", initials: "LM", gradient: "from-blue-400 to-indigo-400" },
];

const navItems = [
    { label: "Dashboard", href: "/admin/glassmorphism", active: true, icon: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" },
    { label: "Analytics", href: "#", active: false, icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" },
    { label: "Users", href: "#", active: false, icon: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" },
    { label: "Settings", href: "#", active: false, icon: "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z" },
];
---

<!doctype html>
<html lang="de" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="Glassmorphism Admin Dashboard - Modern UI with blur and transparency" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>Dashboard - Glassmorphism Admin</title>
        <ViewTransitions />
    </head>
    <body class="min-h-screen bg-[#0f0f1a] text-white overflow-x-hidden">
        <!-- Animated Background -->
        <div class="fixed inset-0 overflow-hidden pointer-events-none">
            <div class="absolute top-[-20%] left-[-10%] w-[600px] h-[600px] bg-violet-600/30 rounded-full blur-[120px] animate-pulse"></div>
            <div class="absolute bottom-[-10%] right-[-10%] w-[500px] h-[500px] bg-fuchsia-600/30 rounded-full blur-[100px] animate-pulse" style="animation-delay: 1s;"></div>
            <div class="absolute top-1/2 left-1/2 w-[400px] h-[400px] bg-cyan-500/20 rounded-full blur-[80px] animate-pulse" style="animation-delay: 2s;"></div>
        </div>

        <!-- Sidebar -->
        <aside class="fixed left-0 top-0 bottom-0 w-64 backdrop-blur-xl bg-white/5 border-r border-white/10 hidden lg:block z-40">
            <div class="p-6">
                <a href="/admin/glassmorphism" class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center shadow-lg shadow-violet-500/25">
                        <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                    </div>
                    <span class="text-lg font-semibold bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">GlassAdmin</span>
                </a>
            </div>

            <nav class="px-3 mt-4">
                {navItems.map((item) => (
                    <a
                        href={item.href}
                        class:list={[
                            "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all mb-1",
                            item.active
                                ? "bg-white/10 text-white border border-white/10"
                                : "text-white/50 hover:text-white hover:bg-white/5"
                        ]}
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={item.icon} />
                        </svg>
                        {item.label}
                    </a>
                ))}
            </nav>

            <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-white/10">
                <a href="/" class="flex items-center gap-2 text-sm text-white/50 hover:text-white transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Back to Atlas
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="lg:pl-64 relative z-10">
            <!-- Header -->
            <header class="sticky top-0 z-40 backdrop-blur-xl bg-[#0f0f1a]/80 border-b border-white/5">
                <div class="flex items-center justify-between px-6 lg:px-8 h-16">
                    <div>
                        <h1 class="text-xl font-semibold text-white">Dashboard</h1>
                    </div>
                    <div class="flex items-center gap-4">
                        <button class="p-2.5 rounded-xl bg-white/5 border border-white/10 text-white/60 hover:text-white hover:bg-white/10 transition-all">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </button>
                        <button class="p-2.5 rounded-xl bg-white/5 border border-white/10 text-white/60 hover:text-white hover:bg-white/10 transition-all relative">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                            </svg>
                            <span class="absolute top-2 right-2 w-2 h-2 bg-fuchsia-500 rounded-full"></span>
                        </button>
                        <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center text-white text-sm font-medium shadow-lg shadow-violet-500/25">
                            JD
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <div class="p-6 lg:p-8">
                <!-- Stats Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
                    {stats.map((stat) => (
                        <div class="group relative overflow-hidden rounded-2xl p-6 backdrop-blur-xl bg-white/5 border border-white/10 hover:bg-white/10 hover:border-white/20 transition-all duration-300">
                            <div class="flex items-start justify-between">
                                <div>
                                    <p class="text-sm text-white/50">{stat.label}</p>
                                    <p class="text-2xl font-bold text-white mt-1">{stat.value}</p>
                                </div>
                                <span class:list={[
                                    "inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium",
                                    stat.trend === "up" ? "bg-emerald-500/20 text-emerald-400" : "bg-rose-500/20 text-rose-400"
                                ]}>
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={stat.trend === "up" ? "M5 10l7-7m0 0l7 7m-7-7v18" : "M19 14l-7 7m0 0l-7-7m7 7V3"} />
                                    </svg>
                                    {stat.change}
                                </span>
                            </div>
                            <div class:list={["absolute -bottom-10 -right-10 w-32 h-32 rounded-full blur-2xl opacity-20 group-hover:opacity-40 transition-opacity", `bg-gradient-to-br ${stat.gradient}`]} />
                        </div>
                    ))}
                </div>

                <!-- Main Grid -->
                <div class="grid lg:grid-cols-3 gap-6">
                    <!-- Chart Card -->
                    <div class="lg:col-span-2 rounded-2xl p-6 backdrop-blur-xl bg-white/5 border border-white/10">
                        <div class="flex items-center justify-between mb-6">
                            <h2 class="font-semibold text-white">Revenue Overview</h2>
                            <select class="text-sm text-white/60 bg-white/5 border border-white/10 rounded-xl px-4 py-2 focus:outline-none focus:border-violet-500/50">
                                <option>Last 7 days</option>
                                <option>Last 30 days</option>
                                <option>Last 90 days</option>
                            </select>
                        </div>
                        <div class="h-64 flex items-end justify-around gap-3">
                            {[40, 65, 45, 80, 55, 90, 70].map((h, i) => (
                                <div class="flex-1 flex flex-col items-center gap-3">
                                    <div
                                        class="w-full rounded-lg bg-gradient-to-t from-violet-500 to-fuchsia-500 transition-all duration-300 hover:from-violet-400 hover:to-fuchsia-400 shadow-lg shadow-violet-500/20"
                                        style={`height: ${h}%`}
                                    />
                                    <span class="text-xs text-white/30">
                                        {["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"][i]}
                                    </span>
                                </div>
                            ))}
                        </div>
                    </div>

                    <!-- Recent Activity -->
                    <div class="rounded-2xl p-6 backdrop-blur-xl bg-white/5 border border-white/10">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="font-semibold text-white">Recent Activity</h2>
                            <button class="text-sm text-violet-400 hover:text-violet-300 font-medium transition-colors">View all</button>
                        </div>
                        <div class="space-y-3">
                            {recentActivity.map((item) => (
                                <div class="flex items-center gap-3 p-3 rounded-xl bg-white/5 hover:bg-white/10 transition-colors cursor-pointer border border-transparent hover:border-white/10">
                                    <div class:list={["w-10 h-10 rounded-full flex items-center justify-center text-sm font-medium text-white shadow-lg", `bg-gradient-to-br ${item.gradient}`]}>
                                        {item.initials}
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm">
                                            <span class="font-medium text-white">{item.user}</span>
                                            <span class="text-white/50"> {item.action}</span>
                                        </p>
                                        <p class="text-xs text-white/30">{item.time}</p>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="mt-6 rounded-2xl p-6 backdrop-blur-xl bg-white/5 border border-white/10">
                    <h2 class="font-semibold text-white mb-4">Quick Actions</h2>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        {[
                            { icon: "M12 6v6m0 0v6m0-6h6m-6 0H6", label: "Add User", gradient: "from-violet-500 to-fuchsia-500" },
                            { icon: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z", label: "New Post", gradient: "from-emerald-400 to-cyan-400" },
                            { icon: "M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12", label: "Upload", gradient: "from-orange-400 to-rose-400" },
                            { icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z", label: "Schedule", gradient: "from-blue-400 to-indigo-400" },
                        ].map((action) => (
                            <button class="flex flex-col items-center gap-3 p-6 rounded-xl border border-dashed border-white/10 hover:border-white/20 hover:bg-white/5 transition-all group">
                                <div class:list={["w-12 h-12 rounded-xl flex items-center justify-center transition-transform group-hover:scale-110 shadow-lg", `bg-gradient-to-br ${action.gradient}`]}>
                                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={action.icon} />
                                    </svg>
                                </div>
                                <span class="text-sm font-medium text-white/60 group-hover:text-white">{action.label}</span>
                            </button>
                        ))}
                    </div>
                </div>
            </div>
        </main>

        <!-- Mobile Back Button -->
        <a href="/" class="lg:hidden fixed bottom-6 left-6 px-4 py-2 rounded-xl backdrop-blur-xl bg-white/10 border border-white/20 text-white text-sm hover:bg-white/20 transition-colors flex items-center gap-2 z-50">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Atlas
        </a>
    </body>
</html>
