---
import AdminLayout from "@layouts/AdminLayout.astro";

const contentItems = [
    { id: 1, title: "Getting Started Guide", type: "Article", status: "published", author: "Max M.", date: "2024-12-01", views: 1234 },
    { id: 2, title: "Product Announcement", type: "News", status: "published", author: "Anna S.", date: "2024-11-28", views: 892 },
    { id: 3, title: "Tutorial: Advanced Features", type: "Tutorial", status: "draft", author: "Peter W.", date: "2024-11-25", views: 0 },
    { id: 4, title: "Company Update Q4", type: "News", status: "scheduled", author: "Lisa M.", date: "2024-12-15", views: 0 },
    { id: 5, title: "Best Practices", type: "Article", status: "published", author: "Tom S.", date: "2024-11-20", views: 2456 },
];

const statusStyles: Record<string, string> = {
    published: "bg-emerald-500/20 text-emerald-400 border-emerald-500/30",
    draft: "bg-yellow-500/20 text-yellow-400 border-yellow-500/30",
    scheduled: "bg-blue-500/20 text-blue-400 border-blue-500/30",
};

const typeStyles: Record<string, string> = {
    Article: "bg-violet-500/20 text-violet-400",
    News: "bg-orange-500/20 text-orange-400",
    Tutorial: "bg-cyan-500/20 text-cyan-400",
};
---

<AdminLayout title="Content" currentPage="content">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
        <div>
            <h2 class="text-xl sm:text-2xl font-bold text-white">Content Management</h2>
            <p class="text-white/50 text-sm mt-1">Create, edit, and manage your content</p>
        </div>
        <div class="flex gap-3">
            <button class="inline-flex items-center gap-2 px-4 py-2.5 bg-white/[0.05] border border-white/[0.1] text-white/70 text-sm font-medium rounded-xl hover:bg-white/[0.08] transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
                </svg>
                Import
            </button>
            <button class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white text-sm font-medium rounded-xl hover:opacity-90 transition-opacity shadow-lg shadow-violet-500/25">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                New Content
            </button>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6">
        {[
            { icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z", label: "Published", value: "12", color: "emerald" },
            { icon: "M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z", label: "Drafts", value: "5", color: "yellow" },
            { icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z", label: "Scheduled", value: "3", color: "blue" },
            { icon: "M15 12a3 3 0 11-6 0 3 3 0 016 0z", label: "Total Views", value: "24.5K", color: "violet" },
        ].map((stat) => (
            <div class="rounded-2xl bg-white/[0.03] border border-white/[0.08] p-4 flex items-center gap-3">
                <div class:list={[
                    "w-10 h-10 sm:w-12 sm:h-12 rounded-xl flex items-center justify-center",
                    stat.color === "emerald" && "bg-emerald-500/20 text-emerald-400",
                    stat.color === "yellow" && "bg-yellow-500/20 text-yellow-400",
                    stat.color === "blue" && "bg-blue-500/20 text-blue-400",
                    stat.color === "violet" && "bg-violet-500/20 text-violet-400",
                ]}>
                    <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={stat.icon} />
                    </svg>
                </div>
                <div>
                    <p class="text-xl sm:text-2xl font-bold text-white">{stat.value}</p>
                    <p class="text-xs sm:text-sm text-white/50">{stat.label}</p>
                </div>
            </div>
        ))}
    </div>

    <!-- Content Table -->
    <div class="rounded-2xl bg-white/[0.03] border border-white/[0.08] overflow-hidden">
        <div class="p-4 border-b border-white/[0.08]">
            <div class="flex flex-col sm:flex-row gap-3">
                <div class="flex-1 relative">
                    <input type="text" placeholder="Search content..." class="w-full pl-10 pr-4 py-2.5 bg-white/[0.05] border border-white/[0.1] rounded-xl text-white placeholder:text-white/30 focus:outline-none focus:ring-2 focus:ring-violet-500/50" />
                    <svg class="w-4 h-4 text-white/30 absolute left-3.5 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </div>
                <div class="flex gap-2">
                    <select class="px-3 py-2 bg-white/[0.05] border border-white/[0.1] rounded-xl text-sm text-white/70 focus:outline-none">
                        <option>All Types</option>
                        <option>Article</option>
                        <option>News</option>
                        <option>Tutorial</option>
                    </select>
                    <select class="px-3 py-2 bg-white/[0.05] border border-white/[0.1] rounded-xl text-sm text-white/70 focus:outline-none">
                        <option>All Status</option>
                        <option>Published</option>
                        <option>Draft</option>
                        <option>Scheduled</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Desktop Table -->
        <div class="hidden md:block overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="bg-white/[0.02]">
                        <th class="text-left px-6 py-3 text-xs font-medium text-white/40 uppercase">Title</th>
                        <th class="text-left px-6 py-3 text-xs font-medium text-white/40 uppercase">Type</th>
                        <th class="text-left px-6 py-3 text-xs font-medium text-white/40 uppercase">Status</th>
                        <th class="text-left px-6 py-3 text-xs font-medium text-white/40 uppercase">Author</th>
                        <th class="text-right px-6 py-3 text-xs font-medium text-white/40 uppercase">Views</th>
                        <th class="px-6 py-3"></th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/[0.05]">
                    {contentItems.map((item) => (
                        <tr class="hover:bg-white/[0.02] transition-colors">
                            <td class="px-6 py-4">
                                <span class="font-medium text-white hover:text-violet-400 cursor-pointer transition-colors">{item.title}</span>
                                <p class="text-xs text-white/40 mt-0.5">{item.date}</p>
                            </td>
                            <td class="px-6 py-4">
                                <span class={`inline-flex px-2 py-1 text-xs font-medium rounded-full ${typeStyles[item.type]}`}>{item.type}</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class={`inline-flex px-2 py-1 text-xs font-medium rounded-full border capitalize ${statusStyles[item.status]}`}>{item.status}</span>
                            </td>
                            <td class="px-6 py-4 text-sm text-white/60">{item.author}</td>
                            <td class="px-6 py-4 text-sm text-white/60 text-right">{item.views.toLocaleString()}</td>
                            <td class="px-6 py-4">
                                <button class="p-1.5 rounded-lg hover:bg-white/10 text-white/40 hover:text-white transition-colors">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    ))}
                </tbody>
            </table>
        </div>

        <!-- Mobile Cards -->
        <div class="md:hidden divide-y divide-white/[0.05]">
            {contentItems.map((item) => (
                <div class="p-4 hover:bg-white/[0.02]">
                    <div class="flex items-start justify-between gap-3">
                        <div class="flex-1 min-w-0">
                            <p class="font-medium text-white truncate">{item.title}</p>
                            <p class="text-xs text-white/40 mt-0.5">{item.author} - {item.date}</p>
                            <div class="flex items-center gap-2 mt-2">
                                <span class={`inline-flex px-2 py-0.5 text-xs font-medium rounded-full ${typeStyles[item.type]}`}>{item.type}</span>
                                <span class={`inline-flex px-2 py-0.5 text-xs font-medium rounded-full border ${statusStyles[item.status]}`}>{item.status}</span>
                            </div>
                        </div>
                        <button class="p-1.5 rounded-lg hover:bg-white/10 text-white/40">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                            </svg>
                        </button>
                    </div>
                </div>
            ))}
        </div>
    </div>
</AdminLayout>
