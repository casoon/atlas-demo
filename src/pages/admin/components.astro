---
import AdminLayout from "@layouts/AdminLayout.astro";
---

<AdminLayout title="Atlas Components" currentPage="components">
    <div class="space-y-8">
        <div>
            <h2 class="text-xl sm:text-2xl font-bold text-white">Atlas Components</h2>
            <p class="text-white/50 text-sm mt-1">Declarative components with data-atlas attributes</p>
        </div>

        <!-- Usage Example -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-4">Usage Pattern</h3>
            <div class="bg-black/30 rounded-lg p-4 font-mono text-sm text-white/70 overflow-x-auto">
                <pre>&lt;button data-atlas="button" data-ripple data-hover="breathing"&gt;
  Click me
&lt;/button&gt;</pre>
            </div>
            <p class="text-white/50 text-sm mt-3">
                Components auto-initialize on page load and work with HTMX, Alpine.js, and Astro view transitions.
            </p>
        </section>

        <!-- Buttons with data-atlas -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Buttons</h3>

            <div class="space-y-6">
                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-3">Hover Effects</h4>
                    <div class="flex flex-wrap gap-3">
                        <button 
                            data-atlas="button" 
                            data-ripple="true"
                            data-hover="breathing"
                            class="px-4 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white text-sm font-medium rounded-xl shadow-lg shadow-violet-500/25"
                        >
                            Breathing Hover
                        </button>
                        <button 
                            data-atlas="button" 
                            data-ripple="true"
                            data-hover="glow"
                            class="px-4 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white text-sm font-medium rounded-xl"
                        >
                            Glow Hover
                        </button>
                        <button 
                            data-atlas="button" 
                            data-ripple="true"
                            data-hover="lift"
                            class="px-4 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white text-sm font-medium rounded-xl"
                        >
                            Lift Hover
                        </button>
                        <button 
                            data-atlas="button" 
                            data-ripple="true"
                            data-hover="none"
                            class="px-4 py-2.5 bg-white/[0.08] text-white/80 text-sm font-medium rounded-xl border border-white/[0.1]"
                        >
                            Ripple Only
                        </button>
                    </div>
                </div>

                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-3">Loading States (with Alpine.js)</h4>
                    <div class="flex flex-wrap gap-3" x-data="{ loading1: false, loading2: false }">
                        <button 
                            data-atlas="button" 
                            data-ripple="true"
                            :data-loading="loading1"
                            @click="loading1 = true; setTimeout(() => loading1 = false, 2000)"
                            class="px-4 py-2.5 bg-gradient-to-r from-emerald-500 to-cyan-500 text-white text-sm font-medium rounded-xl"
                        >
                            Save Changes
                        </button>
                        <button 
                            data-atlas="button" 
                            data-ripple="true"
                            :data-loading="loading2"
                            @click="loading2 = true; setTimeout(() => loading2 = false, 3000)"
                            class="px-4 py-2.5 bg-white/[0.08] text-white/80 text-sm font-medium rounded-xl border border-white/[0.1]"
                        >
                            Upload File
                        </button>
                        <p class="text-white/40 text-xs self-center">(Click to see loading state)</p>
                    </div>
                </div>

                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-3">With Icons</h4>
                    <div class="flex flex-wrap gap-3">
                        <button 
                            data-atlas="button" 
                            data-ripple="true"
                            data-hover="breathing"
                            class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white text-sm font-medium rounded-xl"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>
                            Add Item
                        </button>
                        <button 
                            data-atlas="button" 
                            data-ripple="true"
                            data-hover="lift"
                            class="inline-flex items-center gap-2 px-4 py-2.5 bg-rose-500/20 text-rose-400 text-sm font-medium rounded-xl"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                            Delete
                        </button>
                        <button 
                            data-atlas="button" 
                            data-ripple="true"
                            class="p-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white rounded-xl"
                            data-atlas-tooltip="Search"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Tooltips -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Tooltips</h3>
            
            <div class="flex flex-wrap gap-4">
                <button 
                    data-atlas="tooltip"
                    data-content="This is a top tooltip"
                    data-placement="top"
                    class="px-4 py-2 bg-white/[0.08] text-white/80 text-sm rounded-xl border border-white/[0.1]"
                >
                    Hover (Top)
                </button>
                <button 
                    data-atlas="tooltip"
                    data-content="Bottom placement"
                    data-placement="bottom"
                    class="px-4 py-2 bg-white/[0.08] text-white/80 text-sm rounded-xl border border-white/[0.1]"
                >
                    Hover (Bottom)
                </button>
                <button 
                    data-atlas="tooltip"
                    data-content="Right side tooltip"
                    data-placement="right"
                    class="px-4 py-2 bg-white/[0.08] text-white/80 text-sm rounded-xl border border-white/[0.1]"
                >
                    Hover (Right)
                </button>
                <button 
                    data-atlas="tooltip"
                    data-content="Click to toggle"
                    data-trigger="click"
                    class="px-4 py-2 bg-violet-500/20 text-violet-400 text-sm rounded-xl border border-violet-500/30"
                >
                    Click Trigger
                </button>
            </div>
        </section>

        <!-- Integration with Alpine -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-4">Alpine.js Integration</h3>
            
            <div x-data="{ count: 0, saved: false }" class="space-y-4">
                <div class="flex items-center gap-4">
                    <button 
                        data-atlas="button" 
                        data-ripple="true"
                        @click="count++"
                        class="px-4 py-2 bg-white/[0.08] text-white/80 text-sm rounded-xl border border-white/[0.1]"
                    >
                        Count: <span x-text="count">0</span>
                    </button>
                    <button 
                        data-atlas="button" 
                        data-ripple="true"
                        :data-loading="saved"
                        @click="saved = true; setTimeout(() => saved = false, 1500)"
                        class="px-4 py-2 bg-emerald-500/20 text-emerald-400 text-sm rounded-xl"
                    >
                        <span x-show="!saved">Save</span>
                        <span x-show="saved" x-cloak>Saving...</span>
                    </button>
                </div>
                <p class="text-white/40 text-sm">
                    Atlas components work seamlessly with Alpine.js reactive data.
                </p>
            </div>
        </section>

        <!-- Attribute Reference -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-4">Attribute Reference</h3>
            
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-white/[0.08]">
                            <th class="text-left py-3 px-4 text-white/50 font-medium">Attribute</th>
                            <th class="text-left py-3 px-4 text-white/50 font-medium">Values</th>
                            <th class="text-left py-3 px-4 text-white/50 font-medium">Description</th>
                        </tr>
                    </thead>
                    <tbody class="text-white/70">
                        <tr class="border-b border-white/[0.05]">
                            <td class="py-3 px-4 font-mono text-violet-400">data-atlas</td>
                            <td class="py-3 px-4">button, tooltip</td>
                            <td class="py-3 px-4">Component type</td>
                        </tr>
                        <tr class="border-b border-white/[0.05]">
                            <td class="py-3 px-4 font-mono text-violet-400">data-ripple</td>
                            <td class="py-3 px-4">true, false</td>
                            <td class="py-3 px-4">Enable ripple effect</td>
                        </tr>
                        <tr class="border-b border-white/[0.05]">
                            <td class="py-3 px-4 font-mono text-violet-400">data-hover</td>
                            <td class="py-3 px-4">breathing, glow, lift, none</td>
                            <td class="py-3 px-4">Hover animation style</td>
                        </tr>
                        <tr class="border-b border-white/[0.05]">
                            <td class="py-3 px-4 font-mono text-violet-400">data-loading</td>
                            <td class="py-3 px-4">true, false</td>
                            <td class="py-3 px-4">Show loading spinner</td>
                        </tr>
                        <tr class="border-b border-white/[0.05]">
                            <td class="py-3 px-4 font-mono text-violet-400">data-content</td>
                            <td class="py-3 px-4">string</td>
                            <td class="py-3 px-4">Tooltip content</td>
                        </tr>
                        <tr class="border-b border-white/[0.05]">
                            <td class="py-3 px-4 font-mono text-violet-400">data-placement</td>
                            <td class="py-3 px-4">top, bottom, left, right</td>
                            <td class="py-3 px-4">Tooltip position</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-violet-400">data-trigger</td>
                            <td class="py-3 px-4">hover, click, focus</td>
                            <td class="py-3 px-4">Tooltip trigger type</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</AdminLayout>

<script>
    import { atlasInit } from "@/atlas/components";
    
    // Initialize on page load
    document.addEventListener("DOMContentLoaded", atlasInit);
    
    // Re-initialize on Astro view transitions
    document.addEventListener("astro:page-load", atlasInit);
</script>

<style>
    /* Tooltip CSS (data-tooltip-visible attribute) */
    [data-atlas="tooltip"] {
        position: relative;
    }
    
    [data-atlas="tooltip"]::after {
        content: attr(data-content);
        position: absolute;
        padding: 0.5rem 0.75rem;
        background: rgba(0, 0, 0, 0.9);
        color: white;
        font-size: 0.75rem;
        border-radius: 0.5rem;
        white-space: nowrap;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.2s, visibility 0.2s;
        pointer-events: none;
        z-index: 50;
    }
    
    [data-atlas="tooltip"][data-placement="top"]::after {
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        margin-bottom: 0.5rem;
    }
    
    [data-atlas="tooltip"][data-placement="bottom"]::after {
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        margin-top: 0.5rem;
    }
    
    [data-atlas="tooltip"][data-placement="left"]::after {
        right: 100%;
        top: 50%;
        transform: translateY(-50%);
        margin-right: 0.5rem;
    }
    
    [data-atlas="tooltip"][data-placement="right"]::after {
        left: 100%;
        top: 50%;
        transform: translateY(-50%);
        margin-left: 0.5rem;
    }
    
    [data-atlas="tooltip"][data-tooltip-visible="true"]::after {
        opacity: 1;
        visibility: visible;
    }
    
    /* Atlas button animations keyframes */
    @keyframes atlas-ripple {
        to {
            transform: scale(2);
            opacity: 0;
        }
    }
    
    @keyframes atlas-spin {
        to {
            transform: rotate(360deg);
        }
    }
    
    @keyframes atlas-checkmark-draw {
        to {
            stroke-dashoffset: 0;
        }
    }
</style>
