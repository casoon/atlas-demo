---
import AdminLayout from "@layouts/AdminLayout.astro";
---

<AdminLayout title="Atlas Components" currentPage="components">
    <div class="space-y-8">
        <div>
            <h2 class="text-xl sm:text-2xl font-bold text-white">Atlas Components</h2>
            <p class="text-white/50 text-sm mt-1">Declarative components with data-atlas attributes and micro-transitions</p>
        </div>

        <!-- Buttons -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Buttons</h3>
            <div class="space-y-6">
                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-3">Hover Effects</h4>
                    <div class="flex flex-wrap gap-3">
                        <button data-atlas="button" data-ripple="true" data-hover="breathing"
                            class="px-4 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white text-sm font-medium rounded-xl shadow-lg shadow-violet-500/25">
                            Breathing
                        </button>
                        <button data-atlas="button" data-ripple="true" data-hover="glow"
                            class="px-4 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white text-sm font-medium rounded-xl">
                            Glow
                        </button>
                        <button data-atlas="button" data-ripple="true" data-hover="lift"
                            class="px-4 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white text-sm font-medium rounded-xl">
                            Lift
                        </button>
                    </div>
                </div>
                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-3">Loading State (Alpine.js)</h4>
                    <div class="flex gap-3" x-data="{ loading: false }">
                        <button data-atlas="button" data-ripple="true" :data-loading="loading"
                            @click="loading = true; setTimeout(() => loading = false, 2000)"
                            class="px-4 py-2.5 bg-emerald-500 text-white text-sm font-medium rounded-xl">
                            Click to Load
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Cards with Micro-Transitions -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Cards</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4" data-atlas="grid" data-stagger="100">
                <div data-atlas="card" data-hover="lift" data-tilt="true" data-shine="true"
                    class="p-5 rounded-xl bg-white/[0.03] border border-white/[0.08]">
                    <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center mb-4">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    <h4 class="font-semibold text-white mb-2">Lift + Tilt + Shine</h4>
                    <p class="text-sm text-white/50">Hover for 3D tilt effect with shine overlay</p>
                </div>
                
                <div data-atlas="card" data-hover="scale"
                    class="p-5 rounded-xl bg-white/[0.03] border border-white/[0.08]">
                    <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-emerald-500 to-cyan-500 flex items-center justify-center mb-4">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"/>
                        </svg>
                    </div>
                    <h4 class="font-semibold text-white mb-2">Scale Effect</h4>
                    <p class="text-sm text-white/50">Subtle scale on hover</p>
                </div>
                
                <div data-atlas="card" data-hover="glow"
                    class="p-5 rounded-xl bg-white/[0.03] border border-white/[0.08]">
                    <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-rose-500 to-orange-500 flex items-center justify-center mb-4">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                        </svg>
                    </div>
                    <h4 class="font-semibold text-white mb-2">Glow Effect</h4>
                    <p class="text-sm text-white/50">Colored glow on hover</p>
                </div>
            </div>
        </section>

        <!-- Grid Stagger Animation -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-4">Grid Stagger Animation</h3>
            <p class="text-white/50 text-sm mb-6">Items animate in sequence on page load</p>
            
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-3" data-atlas="grid" data-stagger="75" data-initial-delay="200">
                {[1,2,3,4,5,6,7,8].map((i) => (
                    <div class="aspect-square rounded-xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/[0.08] flex items-center justify-center">
                        <span class="text-2xl font-bold text-white/30">{i}</span>
                    </div>
                ))}
            </div>
            
            <div class="mt-4 bg-black/30 rounded-lg p-3 font-mono text-xs text-white/60 overflow-x-auto">
                &lt;div data-atlas="grid" data-stagger="75" data-initial-delay="200"&gt;...&lt;/div&gt;
            </div>
        </section>

        <!-- Form Inputs with Micro-Transitions -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Form Inputs</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6" x-data="{ 
                email: '', 
                emailError: false,
                emailSuccess: false,
                password: '',
                validateEmail() {
                    this.emailSuccess = false;
                    if (!this.email.includes('@')) {
                        this.emailError = true;
                    } else {
                        this.emailError = false;
                        this.emailSuccess = true;
                        setTimeout(() => this.emailSuccess = false, 2000);
                    }
                }
            }">
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-2">Email (with validation)</label>
                    <input 
                        type="email" 
                        data-atlas="input"
                        data-focus-glow="true"
                        :data-error="emailError"
                        :data-success="emailSuccess"
                        x-model="email"
                        @blur="validateEmail()"
                        placeholder="Enter email..."
                        class="w-full px-4 py-2.5 bg-white/[0.05] border border-white/[0.15] rounded-xl text-white placeholder:text-white/30 focus:outline-none"
                    />
                    <p x-show="emailError" x-cloak class="text-rose-400 text-xs mt-1.5">Please enter a valid email</p>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-2">Password</label>
                    <input 
                        type="password" 
                        data-atlas="input"
                        data-focus-glow="true"
                        data-glow-color="rgba(139, 92, 246, 0.5)"
                        placeholder="Enter password..."
                        class="w-full px-4 py-2.5 bg-white/[0.05] border border-white/[0.15] rounded-xl text-white placeholder:text-white/30 focus:outline-none"
                    />
                </div>
                
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-white/70 mb-2">Message</label>
                    <textarea 
                        data-atlas="input"
                        data-focus-glow="true"
                        rows="3"
                        placeholder="Type your message..."
                        class="w-full px-4 py-3 bg-white/[0.05] border border-white/[0.15] rounded-xl text-white placeholder:text-white/30 focus:outline-none resize-none"
                    ></textarea>
                </div>
            </div>
            
            <div class="mt-4 bg-black/30 rounded-lg p-3 font-mono text-xs text-white/60 overflow-x-auto">
                &lt;input data-atlas="input" data-focus-glow :data-error="hasError" /&gt;
            </div>
        </section>

        <!-- Attribute Reference -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-4">Attribute Reference</h3>
            
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-white/[0.08]">
                            <th class="text-left py-3 px-4 text-white/50 font-medium">Component</th>
                            <th class="text-left py-3 px-4 text-white/50 font-medium">Attributes</th>
                            <th class="text-left py-3 px-4 text-white/50 font-medium">Description</th>
                        </tr>
                    </thead>
                    <tbody class="text-white/70">
                        <tr class="border-b border-white/[0.05]">
                            <td class="py-3 px-4 font-mono text-violet-400">button</td>
                            <td class="py-3 px-4 text-xs">data-ripple, data-hover, data-loading</td>
                            <td class="py-3 px-4">Interactive button with micro-transitions</td>
                        </tr>
                        <tr class="border-b border-white/[0.05]">
                            <td class="py-3 px-4 font-mono text-violet-400">card</td>
                            <td class="py-3 px-4 text-xs">data-hover, data-tilt, data-shine</td>
                            <td class="py-3 px-4">Card with lift/scale/glow and 3D tilt</td>
                        </tr>
                        <tr class="border-b border-white/[0.05]">
                            <td class="py-3 px-4 font-mono text-violet-400">input</td>
                            <td class="py-3 px-4 text-xs">data-focus-glow, data-error, data-success</td>
                            <td class="py-3 px-4">Input with focus glow and validation states</td>
                        </tr>
                        <tr class="border-b border-white/[0.05]">
                            <td class="py-3 px-4 font-mono text-violet-400">grid</td>
                            <td class="py-3 px-4 text-xs">data-stagger, data-initial-delay, data-animate-on-scroll</td>
                            <td class="py-3 px-4">Stagger animation for children</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-violet-400">tooltip</td>
                            <td class="py-3 px-4 text-xs">data-content, data-placement, data-trigger</td>
                            <td class="py-3 px-4">Tooltip with various triggers</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</AdminLayout>

<script>
    import { atlasInit } from "@casoon/atlas-components";
    
    document.addEventListener("DOMContentLoaded", atlasInit);
    document.addEventListener("astro:page-load", atlasInit);
</script>

<style>
    [data-atlas="tooltip"] {
        position: relative;
    }
    
    [data-atlas="tooltip"]::after {
        content: attr(data-content);
        position: absolute;
        padding: 0.5rem 0.75rem;
        background: rgba(0, 0, 0, 0.9);
        color: white;
        font-size: 0.75rem;
        border-radius: 0.5rem;
        white-space: nowrap;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.2s, visibility 0.2s;
        pointer-events: none;
        z-index: 50;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        margin-bottom: 0.5rem;
    }
    
    [data-atlas="tooltip"][data-tooltip-visible="true"]::after {
        opacity: 1;
        visibility: visible;
    }
    
    @keyframes atlas-ripple {
        to { transform: scale(2); opacity: 0; }
    }
    
    @keyframes atlas-spin {
        to { transform: rotate(360deg); }
    }
    
    [x-cloak] { display: none !important; }
</style>
