---
import AdminLayout from "@layouts/AdminLayout.astro";
---

<AdminLayout title="Components" currentPage="components">
    <div class="space-y-8">
        <!-- Header -->
        <div>
            <h2 class="text-xl sm:text-2xl font-bold text-white">Atlas Components</h2>
            <p class="text-white/50 text-sm mt-1">Interactive component showcase</p>
        </div>

        <!-- Buttons -->
        <section class="rounded-2xl bg-white/[0.03] border border-white/[0.08] p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Buttons</h3>
            
            <div class="space-y-6">
                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-3">Variants</h4>
                    <div class="flex flex-wrap gap-3">
                        <button class="px-4 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white text-sm font-medium rounded-xl hover:opacity-90 transition-all shadow-lg shadow-violet-500/25" data-ripple>
                            Primary
                        </button>
                        <button class="px-4 py-2.5 bg-white/[0.08] text-white/80 text-sm font-medium rounded-xl hover:bg-white/[0.12] transition-all border border-white/[0.1]" data-ripple>
                            Secondary
                        </button>
                        <button class="px-4 py-2.5 bg-transparent text-violet-400 text-sm font-medium rounded-xl border border-violet-500/50 hover:bg-violet-500/10 transition-all" data-ripple>
                            Outline
                        </button>
                        <button class="px-4 py-2.5 bg-emerald-500/20 text-emerald-400 text-sm font-medium rounded-xl hover:bg-emerald-500/30 transition-all" data-ripple>
                            Success
                        </button>
                        <button class="px-4 py-2.5 bg-rose-500/20 text-rose-400 text-sm font-medium rounded-xl hover:bg-rose-500/30 transition-all" data-ripple>
                            Danger
                        </button>
                    </div>
                </div>
                
                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-3">Sizes</h4>
                    <div class="flex flex-wrap items-center gap-3">
                        <button class="px-3 py-1.5 text-xs bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white font-medium rounded-lg">XS</button>
                        <button class="px-3 py-2 text-sm bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white font-medium rounded-xl">Small</button>
                        <button class="px-4 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white font-medium rounded-xl">Medium</button>
                        <button class="px-6 py-3 text-lg bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white font-medium rounded-xl">Large</button>
                    </div>
                </div>

                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-3">With Icons</h4>
                    <div class="flex flex-wrap gap-3">
                        <button class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white text-sm font-medium rounded-xl">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>
                            Add Item
                        </button>
                        <button class="inline-flex items-center gap-2 px-4 py-2.5 bg-white/[0.08] text-white/80 text-sm font-medium rounded-xl border border-white/[0.1]">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/></svg>
                            Upload
                        </button>
                        <button class="p-2.5 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white rounded-xl">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Cards -->
        <section class="rounded-2xl bg-white/[0.03] border border-white/[0.08] p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Cards</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6">
                <div class="rounded-xl bg-white/[0.03] border border-white/[0.08] overflow-hidden hover:border-white/[0.15] transition-colors">
                    <div class="h-32 bg-gradient-to-br from-violet-500 to-fuchsia-500"></div>
                    <div class="p-4">
                        <h4 class="font-semibold text-white">Basic Card</h4>
                        <p class="text-sm text-white/50 mt-1">A simple card with gradient header.</p>
                    </div>
                </div>

                <div class="rounded-xl bg-white/[0.03] border border-white/[0.08] overflow-hidden hover:scale-[1.02] hover:border-white/[0.15] transition-all cursor-pointer group">
                    <div class="h-32 bg-gradient-to-br from-emerald-400 to-cyan-400 group-hover:scale-105 transition-transform"></div>
                    <div class="p-4">
                        <h4 class="font-semibold text-white">Interactive Card</h4>
                        <p class="text-sm text-white/50 mt-1">Hover for scale effect.</p>
                    </div>
                </div>

                <div class="rounded-xl bg-white/[0.05] backdrop-blur-sm border border-white/[0.1] p-4">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-10 h-10 bg-gradient-to-br from-orange-400 to-rose-400 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            </svg>
                        </div>
                        <div>
                            <h4 class="font-semibold text-white">Glass Card</h4>
                            <p class="text-xs text-white/40">With blur effect</p>
                        </div>
                    </div>
                    <p class="text-sm text-white/60">Glassmorphism style card.</p>
                </div>
            </div>
        </section>

        <!-- Form Elements -->
        <section class="rounded-2xl bg-white/[0.03] border border-white/[0.08] p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Form Elements</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-2">Text Input</label>
                    <input type="text" placeholder="Enter text..." class="w-full px-4 py-2.5 bg-white/[0.05] border border-white/[0.1] rounded-xl text-white placeholder:text-white/30 focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-transparent transition-all" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-2">Select</label>
                    <select class="w-full px-4 py-2.5 bg-white/[0.05] border border-white/[0.1] rounded-xl text-white/70 focus:outline-none focus:ring-2 focus:ring-violet-500/50">
                        <option>Option 1</option>
                        <option>Option 2</option>
                        <option>Option 3</option>
                    </select>
                </div>
                
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-white/70 mb-2">Textarea</label>
                    <textarea rows="3" placeholder="Enter description..." class="w-full px-4 py-3 bg-white/[0.05] border border-white/[0.1] rounded-xl text-white placeholder:text-white/30 focus:outline-none focus:ring-2 focus:ring-violet-500/50 resize-none"></textarea>
                </div>
            </div>
        </section>

        <!-- Badges -->
        <section class="rounded-2xl bg-white/[0.03] border border-white/[0.08] p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Badges & Tags</h3>
            
            <div class="space-y-4">
                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-3">Status Badges</h4>
                    <div class="flex flex-wrap gap-2">
                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-emerald-500/20 text-emerald-400">
                            <span class="w-1.5 h-1.5 bg-emerald-400 rounded-full"></span>Active
                        </span>
                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-yellow-500/20 text-yellow-400">
                            <span class="w-1.5 h-1.5 bg-yellow-400 rounded-full"></span>Pending
                        </span>
                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-rose-500/20 text-rose-400">
                            <span class="w-1.5 h-1.5 bg-rose-400 rounded-full"></span>Inactive
                        </span>
                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-blue-500/20 text-blue-400">
                            <span class="w-1.5 h-1.5 bg-blue-400 rounded-full"></span>In Progress
                        </span>
                    </div>
                </div>
                
                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-3">Tags</h4>
                    <div class="flex flex-wrap gap-2">
                        <span class="px-3 py-1 text-sm bg-white/[0.08] text-white/70 rounded-full hover:bg-white/[0.12] cursor-pointer transition-colors">Design</span>
                        <span class="px-3 py-1 text-sm bg-violet-500/20 text-violet-400 rounded-full hover:bg-violet-500/30 cursor-pointer transition-colors">Development</span>
                        <span class="px-3 py-1 text-sm bg-fuchsia-500/20 text-fuchsia-400 rounded-full hover:bg-fuchsia-500/30 cursor-pointer transition-colors">Marketing</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Alerts -->
        <section class="rounded-2xl bg-white/[0.03] border border-white/[0.08] p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Alerts</h3>
            
            <div class="space-y-4">
                <div class="flex items-start gap-3 p-4 bg-blue-500/10 border border-blue-500/20 rounded-xl">
                    <svg class="w-5 h-5 text-blue-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                        <p class="font-medium text-blue-400">Information</p>
                        <p class="text-sm text-blue-400/70 mt-1">This is an informational message.</p>
                    </div>
                </div>
                
                <div class="flex items-start gap-3 p-4 bg-emerald-500/10 border border-emerald-500/20 rounded-xl">
                    <svg class="w-5 h-5 text-emerald-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                        <p class="font-medium text-emerald-400">Success</p>
                        <p class="text-sm text-emerald-400/70 mt-1">Changes saved successfully.</p>
                    </div>
                </div>
                
                <div class="flex items-start gap-3 p-4 bg-yellow-500/10 border border-yellow-500/20 rounded-xl">
                    <svg class="w-5 h-5 text-yellow-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                    <div>
                        <p class="font-medium text-yellow-400">Warning</p>
                        <p class="text-sm text-yellow-400/70 mt-1">Please review before proceeding.</p>
                    </div>
                </div>
                
                <div class="flex items-start gap-3 p-4 bg-rose-500/10 border border-rose-500/20 rounded-xl">
                    <svg class="w-5 h-5 text-rose-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                        <p class="font-medium text-rose-400">Error</p>
                        <p class="text-sm text-rose-400/70 mt-1">An error occurred. Please try again.</p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</AdminLayout>
