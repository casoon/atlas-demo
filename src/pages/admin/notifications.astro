---
import AdminLayout from "@layouts/AdminLayout.astro";

const notifications = [
    { id: 1, type: "order", title: "New order received", message: "Order #ORD-007 from Sarah Braun - $299.00", time: "2 min ago", read: false },
    { id: 2, type: "user", title: "New user registered", message: "Tom Schneider just created an account", time: "15 min ago", read: false },
    { id: 3, type: "alert", title: "Server CPU high", message: "CPU usage exceeded 80% for 5 minutes", time: "1 hour ago", read: false },
    { id: 4, type: "payment", title: "Payment received", message: "Payment of $549.99 confirmed for Order #ORD-004", time: "2 hours ago", read: true },
    { id: 5, type: "comment", title: "New comment", message: "Lisa Meyer commented on 'Getting Started with Atlas'", time: "3 hours ago", read: true },
    { id: 6, type: "system", title: "Backup completed", message: "Daily backup completed successfully", time: "5 hours ago", read: true },
    { id: 7, type: "order", title: "Order shipped", message: "Order #ORD-001 has been shipped via DHL", time: "1 day ago", read: true },
    { id: 8, type: "alert", title: "Failed login attempt", message: "3 failed login attempts from IP 192.168.1.100", time: "1 day ago", read: true },
];

const typeConfig: Record<string, { icon: string, bg: string, color: string }> = {
    order: {
        icon: "M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z",
        bg: "bg-violet-500/20",
        color: "text-violet-400"
    },
    user: {
        icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
        bg: "bg-blue-500/20",
        color: "text-blue-400"
    },
    alert: {
        icon: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z",
        bg: "bg-rose-500/20",
        color: "text-rose-400"
    },
    payment: {
        icon: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
        bg: "bg-emerald-500/20",
        color: "text-emerald-400"
    },
    comment: {
        icon: "M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z",
        bg: "bg-cyan-500/20",
        color: "text-cyan-400"
    },
    system: {
        icon: "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z",
        bg: "bg-white/10",
        color: "text-white/60"
    },
};

const unreadCount = notifications.filter(n => !n.read).length;
---

<AdminLayout title="Notifications" currentPage="notifications">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
        <div>
            <h2 class="text-xl sm:text-2xl font-bold text-white">Notifications</h2>
            <p class="text-white/50 text-sm mt-1">
                {unreadCount > 0 ? `${unreadCount} unread notifications` : "All caught up!"}
            </p>
        </div>
        <div class="flex gap-3">
            <button data-atlas="button" data-ripple="true" data-hover="lift" class="cs-glass-button inline-flex items-center gap-2 text-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7"/>
                </svg>
                Mark all read
            </button>
            <button data-atlas="button" data-ripple="true" data-hover="lift" class="cs-glass-button inline-flex items-center gap-2 text-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                </svg>
                Settings
            </button>
        </div>
    </div>

    <div class="cs-glass-nav p-1 inline-flex gap-1 mb-6">
        <button data-atlas="button" data-ripple="true" class="px-4 py-2 text-sm text-white bg-white/10 rounded-lg">All</button>
        <button data-atlas="button" data-ripple="true" class="px-4 py-2 text-sm text-white/60 hover:text-white hover:bg-white/5 rounded-lg transition-colors">
            Unread
            {unreadCount > 0 && (
                <span class="ml-1.5 px-1.5 py-0.5 text-xs bg-violet-500 text-white rounded-full">{unreadCount}</span>
            )}
        </button>
        <button data-atlas="button" data-ripple="true" class="px-4 py-2 text-sm text-white/60 hover:text-white hover:bg-white/5 rounded-lg transition-colors">Orders</button>
        <button data-atlas="button" data-ripple="true" class="px-4 py-2 text-sm text-white/60 hover:text-white hover:bg-white/5 rounded-lg transition-colors">Alerts</button>
        <button data-atlas="button" data-ripple="true" class="px-4 py-2 text-sm text-white/60 hover:text-white hover:bg-white/5 rounded-lg transition-colors">System</button>
    </div>

    <div class="cs-glass-card overflow-hidden" data-atlas="grid" data-stagger="50">
        <div class="divide-y divide-white/[0.05]">
            {notifications.map((notification) => (
                <div data-atlas="card" data-hover="none" class:list={[
                    "p-4 sm:p-5 hover:bg-white/[0.02] transition-colors cursor-pointer group",
                    !notification.read && "bg-violet-500/[0.03]"
                ]}>
                    <div class="flex gap-4">
                        <div class:list={[
                            "w-10 h-10 rounded-xl flex items-center justify-center flex-shrink-0",
                            typeConfig[notification.type].bg
                        ]}>
                            <svg class:list={["w-5 h-5", typeConfig[notification.type].color]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={typeConfig[notification.type].icon}/>
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-start justify-between gap-2">
                                <div>
                                    <p class:list={[
                                        "font-medium",
                                        notification.read ? "text-white/70" : "text-white"
                                    ]}>
                                        {notification.title}
                                        {!notification.read && (
                                            <span class="ml-2 w-2 h-2 bg-violet-500 rounded-full inline-block"></span>
                                        )}
                                    </p>
                                    <p class="text-sm text-white/50 mt-0.5 line-clamp-1">{notification.message}</p>
                                </div>
                                <span class="text-xs text-white/30 whitespace-nowrap">{notification.time}</span>
                            </div>
                        </div>
                        <div class="flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button data-atlas="button" data-ripple="true" class="cs-glass-button p-2" title="Mark as read">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7"/>
                                </svg>
                            </button>
                            <button data-atlas="button" data-ripple="true" class="cs-glass-button p-2" title="Delete">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            ))}
        </div>
        <div class="p-4 border-t border-white/[0.08] text-center">
            <button data-atlas="button" data-ripple="true" data-hover="lift" class="cs-glass-button text-sm">Load more notifications</button>
        </div>
    </div>
</AdminLayout>
