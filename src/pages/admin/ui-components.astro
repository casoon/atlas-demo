---
import PartialWrapper from "@components/PartialWrapper.astro";

const isPartial = Astro.url.searchParams.get("partial") === "true";
---

<PartialWrapper
    title="UI Components"
    currentPage="ui-components"
    isPartial={isPartial}
>
    <div class="space-y-8">
        <div>
            <h2 class="text-xl sm:text-2xl font-bold text-white">
                New UI Components
            </h2>
            <p class="text-white/50 text-sm mt-1">
                Atlas 0.1.0 - Avatar, Badge, BentoGrid, Carousel, Slider & more
            </p>
        </div>

        <!-- Avatar & Avatar Group -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Avatar & Avatar Group</h3>

            <div class="space-y-6">
                <!-- Single Avatars -->
                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-4">
                        Sizes & Status
                    </h4>
                    <div class="flex flex-wrap items-end gap-4">
                        <div
                            data-atlas="avatar"
                            data-size="xs"
                            data-status="online"
                            data-fallback="XS"
                            class="w-6 h-6 rounded-full bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center text-[10px] text-white font-medium relative"
                        >
                            XS
                        </div>
                        <div
                            data-atlas="avatar"
                            data-size="sm"
                            data-status="online"
                            data-fallback="SM"
                            class="w-8 h-8 rounded-full bg-gradient-to-br from-emerald-500 to-cyan-500 flex items-center justify-center text-xs text-white font-medium relative"
                        >
                            SM
                        </div>
                        <div
                            data-atlas="avatar"
                            data-size="default"
                            data-status="busy"
                            data-fallback="MD"
                            class="w-10 h-10 rounded-full bg-gradient-to-br from-rose-500 to-orange-500 flex items-center justify-center text-sm text-white font-medium relative"
                        >
                            MD
                        </div>
                        <div
                            data-atlas="avatar"
                            data-size="lg"
                            data-status="away"
                            data-fallback="LG"
                            class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center text-base text-white font-medium relative"
                        >
                            LG
                        </div>
                        <div
                            data-atlas="avatar"
                            data-size="xl"
                            data-status="offline"
                            data-fallback="XL"
                            class="w-16 h-16 rounded-full bg-gradient-to-br from-amber-500 to-yellow-500 flex items-center justify-center text-lg text-white font-medium relative"
                        >
                            XL
                        </div>
                    </div>
                </div>

                <!-- Avatar Group -->
                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-4">
                        Avatar Group (stacked)
                    </h4>
                    <div
                        data-atlas="avatar-group"
                        data-max="4"
                        class="flex -space-x-3"
                    >
                        <div
                            class="w-10 h-10 rounded-full bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center text-sm text-white font-medium border-2 border-[#0a0a1a] z-40"
                        >
                            AB
                        </div>
                        <div
                            class="w-10 h-10 rounded-full bg-gradient-to-br from-emerald-500 to-cyan-500 flex items-center justify-center text-sm text-white font-medium border-2 border-[#0a0a1a] z-30"
                        >
                            CD
                        </div>
                        <div
                            class="w-10 h-10 rounded-full bg-gradient-to-br from-rose-500 to-orange-500 flex items-center justify-center text-sm text-white font-medium border-2 border-[#0a0a1a] z-20"
                        >
                            EF
                        </div>
                        <div
                            class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center text-sm text-white font-medium border-2 border-[#0a0a1a] z-10"
                        >
                            GH
                        </div>
                        <div
                            class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center text-sm text-white/70 font-medium border-2 border-[#0a0a1a]"
                        >
                            +5
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Badge -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Badge</h3>

            <div class="space-y-6">
                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-4">
                        Variants
                    </h4>
                    <div class="flex flex-wrap gap-3">
                        <span
                            data-atlas="badge"
                            data-variant="default"
                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-white/10 text-white"
                            >Default</span
                        >
                        <span
                            data-atlas="badge"
                            data-variant="primary"
                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-violet-500/20 text-violet-300"
                            >Primary</span
                        >
                        <span
                            data-atlas="badge"
                            data-variant="success"
                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-500/20 text-emerald-300"
                            >Success</span
                        >
                        <span
                            data-atlas="badge"
                            data-variant="warning"
                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-500/20 text-amber-300"
                            >Warning</span
                        >
                        <span
                            data-atlas="badge"
                            data-variant="destructive"
                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-rose-500/20 text-rose-300"
                            >Destructive</span
                        >
                        <span
                            data-atlas="badge"
                            data-variant="outline"
                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border border-white/20 text-white/70"
                            >Outline</span
                        >
                    </div>
                </div>

                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-4">
                        With Pulse & Dot
                    </h4>
                    <div class="flex flex-wrap items-center gap-4">
                        <span
                            data-atlas="badge"
                            data-variant="success"
                            data-pulse="true"
                            class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-500/20 text-emerald-300"
                        >
                            <span
                                class="w-1.5 h-1.5 rounded-full bg-emerald-400 animate-pulse"
                            ></span>
                            Online
                        </span>
                        <span
                            data-atlas="badge"
                            data-variant="destructive"
                            data-pulse="true"
                            class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium bg-rose-500/20 text-rose-300"
                        >
                            <span
                                class="w-1.5 h-1.5 rounded-full bg-rose-400 animate-pulse"
                            ></span>
                            3 Errors
                        </span>
                        <span
                            data-atlas="badge"
                            data-dot="true"
                            class="w-2 h-2 rounded-full bg-violet-500"></span>
                        <span
                            data-atlas="badge"
                            data-dot="true"
                            class="w-2 h-2 rounded-full bg-emerald-500"></span>
                        <span
                            data-atlas="badge"
                            data-dot="true"
                            class="w-2 h-2 rounded-full bg-amber-500"></span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Bento Grid -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Bento Grid</h3>
            <p class="text-white/50 text-sm mb-6">
                Modern bento-box style grid layout with responsive sizing
            </p>

            <div
                id="bento-container"
                class="grid grid-cols-2 md:grid-cols-4 gap-4 auto-rows-[120px]"
            >
                <!-- 2x2 Featured -->
                <div
                    data-atlas="card"
                    data-hover="lift"
                    class="col-span-2 row-span-2 rounded-2xl bg-gradient-to-br from-violet-500/20 to-fuchsia-500/20 border border-white/[0.08] p-6 flex flex-col justify-between"
                >
                    <div>
                        <span
                            class="text-xs font-medium text-violet-400 uppercase tracking-wider"
                            >Featured</span
                        >
                        <h4 class="text-xl font-bold text-white mt-2">
                            Bento Layout
                        </h4>
                        <p class="text-white/50 text-sm mt-2">
                            Flexible grid system with spanning cells
                        </p>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-violet-500"></span>
                        <span class="text-xs text-white/40">2x2 span</span>
                    </div>
                </div>

                <!-- 1x1 -->
                <div
                    data-atlas="card"
                    data-hover="scale"
                    class="rounded-2xl bg-gradient-to-br from-emerald-500/20 to-cyan-500/20 border border-white/[0.08] p-4 flex flex-col justify-center items-center"
                >
                    <svg
                        class="w-8 h-8 text-emerald-400 mb-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                    </svg>
                    <span class="text-xs text-white/50">Analytics</span>
                </div>

                <!-- 1x1 -->
                <div
                    data-atlas="card"
                    data-hover="scale"
                    class="rounded-2xl bg-gradient-to-br from-rose-500/20 to-orange-500/20 border border-white/[0.08] p-4 flex flex-col justify-center items-center"
                >
                    <svg
                        class="w-8 h-8 text-rose-400 mb-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                        ></path>
                    </svg>
                    <span class="text-xs text-white/50">Favorites</span>
                </div>

                <!-- 2x1 Wide -->
                <div
                    data-atlas="card"
                    data-hover="lift"
                    class="col-span-2 rounded-2xl bg-gradient-to-br from-blue-500/20 to-indigo-500/20 border border-white/[0.08] p-4 flex items-center gap-4"
                >
                    <div
                        class="w-12 h-12 rounded-xl bg-blue-500/30 flex items-center justify-center"
                    >
                        <svg
                            class="w-6 h-6 text-blue-400"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <h4 class="font-semibold text-white">
                            Wide Card (2x1)
                        </h4>
                        <p class="text-xs text-white/50">Horizontal spanning</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Slider -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Slider</h3>

            <div
                class="space-y-8"
                x-data="{ value1: 50, value2: 25, value3: 75 }"
            >
                <div>
                    <div class="flex justify-between mb-2">
                        <label class="text-sm font-medium text-white/70"
                            >Volume</label
                        >
                        <span
                            class="text-sm text-white/50"
                            x-text="value1 + '%'"></span>
                    </div>
                    <input
                        type="range"
                        data-atlas="slider"
                        x-model="value1"
                        min="0"
                        max="100"
                        class="w-full h-2 rounded-full bg-white/10 appearance-none cursor-pointer
                        [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5
                        [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-gradient-to-br
                        [&::-webkit-slider-thumb]:from-violet-500 [&::-webkit-slider-thumb]:to-fuchsia-500
                        [&::-webkit-slider-thumb]:shadow-lg [&::-webkit-slider-thumb]:shadow-violet-500/30
                        [&::-webkit-slider-thumb]:cursor-pointer [&::-webkit-slider-thumb]:transition-transform
                        [&::-webkit-slider-thumb]:hover:scale-110"
                    />
                </div>

                <div>
                    <div class="flex justify-between mb-2">
                        <label class="text-sm font-medium text-white/70"
                            >Brightness</label
                        >
                        <span
                            class="text-sm text-white/50"
                            x-text="value2 + '%'"></span>
                    </div>
                    <input
                        type="range"
                        data-atlas="slider"
                        x-model="value2"
                        min="0"
                        max="100"
                        class="w-full h-2 rounded-full bg-white/10 appearance-none cursor-pointer
                        [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5
                        [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-gradient-to-br
                        [&::-webkit-slider-thumb]:from-amber-500 [&::-webkit-slider-thumb]:to-yellow-500
                        [&::-webkit-slider-thumb]:shadow-lg [&::-webkit-slider-thumb]:shadow-amber-500/30
                        [&::-webkit-slider-thumb]:cursor-pointer"
                    />
                </div>

                <div>
                    <div class="flex justify-between mb-2">
                        <label class="text-sm font-medium text-white/70"
                            >Progress</label
                        >
                        <span
                            class="text-sm text-white/50"
                            x-text="value3 + '%'"></span>
                    </div>
                    <div
                        class="relative h-2 rounded-full bg-white/10 overflow-hidden"
                    >
                        <div
                            class="absolute inset-y-0 left-0 bg-gradient-to-r from-emerald-500 to-cyan-500 rounded-full transition-all duration-300"
                            :style="'width: ' + value3 + '%'"
                        >
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Toggle Group -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Toggle Group</h3>

            <div
                class="space-y-6"
                x-data="{ view: 'grid', size: 'md', align: 'left' }"
            >
                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-4">
                        View Mode
                    </h4>
                    <div
                        data-atlas="toggle-group"
                        class="inline-flex rounded-xl bg-white/[0.05] p-1"
                    >
                        <button
                            @click="view = 'grid'"
                            :class="view === 'grid' ? 'bg-violet-500/20 text-violet-300' : 'text-white/50 hover:text-white'"
                            class="px-4 py-2 rounded-lg text-sm font-medium transition-all"
                        >
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
                                ></path>
                            </svg>
                        </button>
                        <button
                            @click="view = 'list'"
                            :class="view === 'list' ? 'bg-violet-500/20 text-violet-300' : 'text-white/50 hover:text-white'"
                            class="px-4 py-2 rounded-lg text-sm font-medium transition-all"
                        >
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </button>
                        <button
                            @click="view = 'compact'"
                            :class="view === 'compact' ? 'bg-violet-500/20 text-violet-300' : 'text-white/50 hover:text-white'"
                            class="px-4 py-2 rounded-lg text-sm font-medium transition-all"
                        >
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                            </svg>
                        </button>
                    </div>
                </div>

                <div>
                    <h4 class="text-sm font-medium text-white/50 mb-4">
                        Text Align
                    </h4>
                    <div
                        data-atlas="toggle-group"
                        class="inline-flex rounded-xl bg-white/[0.05] p-1"
                    >
                        <button
                            @click="align = 'left'"
                            :class="align === 'left' ? 'bg-emerald-500/20 text-emerald-300' : 'text-white/50 hover:text-white'"
                            class="px-4 py-2 rounded-lg text-sm font-medium transition-all"
                            >Left</button
                        >
                        <button
                            @click="align = 'center'"
                            :class="align === 'center' ? 'bg-emerald-500/20 text-emerald-300' : 'text-white/50 hover:text-white'"
                            class="px-4 py-2 rounded-lg text-sm font-medium transition-all"
                            >Center</button
                        >
                        <button
                            @click="align = 'right'"
                            :class="align === 'right' ? 'bg-emerald-500/20 text-emerald-300' : 'text-white/50 hover:text-white'"
                            class="px-4 py-2 rounded-lg text-sm font-medium transition-all"
                            >Right</button
                        >
                    </div>
                </div>
            </div>
        </section>

        <!-- Breadcrumb -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Breadcrumb</h3>

            <nav
                data-atlas="breadcrumb"
                class="flex items-center space-x-2 text-sm"
            >
                <a
                    href="#"
                    class="text-white/50 hover:text-white transition-colors"
                    >Home</a
                >
                <svg
                    class="w-4 h-4 text-white/30"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M9 5l7 7-7 7"></path>
                </svg>
                <a
                    href="#"
                    class="text-white/50 hover:text-white transition-colors"
                    >Products</a
                >
                <svg
                    class="w-4 h-4 text-white/30"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M9 5l7 7-7 7"></path>
                </svg>
                <a
                    href="#"
                    class="text-white/50 hover:text-white transition-colors"
                    >Electronics</a
                >
                <svg
                    class="w-4 h-4 text-white/30"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M9 5l7 7-7 7"></path>
                </svg>
                <span class="text-white font-medium">Smartphones</span>
            </nav>
        </section>

        <!-- Pagination -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">Pagination</h3>

            <div class="space-y-6" x-data="{ currentPage: 3 }">
                <nav
                    data-atlas="pagination"
                    class="flex items-center justify-center gap-1"
                >
                    <button
                        @click="currentPage = Math.max(1, currentPage - 1)"
                        class="p-2 rounded-lg text-white/50 hover:text-white hover:bg-white/[0.05] transition-all disabled:opacity-30"
                        :disabled="currentPage === 1"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </button>

                    <template x-for="page in 5" :key="page">
                        <button
                            @click="currentPage = page"
                            :class="currentPage === page ? 'bg-violet-500/20 text-violet-300 border-violet-500/30' : 'text-white/50 hover:text-white hover:bg-white/[0.05] border-transparent'"
                            class="w-10 h-10 rounded-lg text-sm font-medium border transition-all"
                            x-text="page"
                        >
                        </button>
                    </template>

                    <button
                        @click="currentPage = Math.min(5, currentPage + 1)"
                        class="p-2 rounded-lg text-white/50 hover:text-white hover:bg-white/[0.05] transition-all disabled:opacity-30"
                        :disabled="currentPage === 5"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                </nav>

                <p class="text-center text-sm text-white/40">
                    Page <span x-text="currentPage"></span> of 5
                </p>
            </div>
        </section>

        <!-- Collapsible / Accordion -->
        <section class="cs-glass-card p-5 sm:p-6">
            <h3 class="font-semibold text-white mb-6">
                Collapsible / Accordion
            </h3>

            <div class="space-y-2" x-data="{ open: null }">
                <div
                    class="rounded-xl border border-white/[0.08] overflow-hidden"
                >
                    <button
                        @click="open = open === 1 ? null : 1"
                        class="w-full flex items-center justify-between p-4 text-left bg-white/[0.02] hover:bg-white/[0.05] transition-colors"
                    >
                        <span class="font-medium text-white"
                            >What is Atlas?</span
                        >
                        <svg
                            class="w-5 h-5 text-white/50 transition-transform"
                            :class="open === 1 && 'rotate-180'"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
