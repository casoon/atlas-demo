<script>
    import {
        atlasInit,
        createModal,
        createDrawer,
        createTabs,
        createDatePicker,
        createTooltip,
    } from "@casoon/atlas-components";

    function initAdvancedComponents() {
        // Modal
        const modalTrigger = document.getElementById("modal-trigger");
        const modalEl = document.getElementById("demo-modal");
        if (modalTrigger && modalEl) {
            const modal = createModal(modalEl, {
                closeOnOverlay: true,
                closeOnEscape: true,
                onOpen: () => console.log("Modal opened"),
                onClose: () => console.log("Modal closed"),
            });
            modalTrigger.addEventListener("click", () => modal.open());
            document
                .getElementById("modal-close")
                ?.addEventListener("click", () => modal.close());
        }

        // Drawer
        const drawerTrigger = document.getElementById("drawer-trigger");
        const drawerEl = document.getElementById("demo-drawer");
        if (drawerTrigger && drawerEl) {
            const drawer = createDrawer(drawerEl, {
                side: "right",
                closeOnOverlay: true,
                onOpen: () => console.log("Drawer opened"),
                onClose: () => console.log("Drawer closed"),
            });
            drawerTrigger.addEventListener("click", () => drawer.open());
            document
                .getElementById("drawer-close")
                ?.addEventListener("click", () => drawer.close());
        }

        // Tabs
        const tabsEl = document.getElementById("demo-tabs");
        if (tabsEl) {
            createTabs(tabsEl, {
                defaultValue: "tab1",
                onChange: (value) => console.log("Tab changed:", value),
            });
        }

        // DatePicker
        const datePickerEl = document.getElementById("demo-datepicker");
        if (datePickerEl) {
            createDatePicker(datePickerEl, {
                onChange: (date) => console.log("Date selected:", date),
            });
        }

        // HoverCard Tooltips
        document.querySelectorAll('[data-atlas="hover-card"]').forEach((el) => {
            createTooltip(el, {
                placement: "top",
                trigger: "hover",
            });
        });
    }

    document.addEventListener("DOMContentLoaded", () => {
        atlasInit();
        initAdvancedComponents();
    });
    document.addEventListener("astro:page-load", () => {
        atlasInit();
        initAdvancedComponents();
    });
</script>

